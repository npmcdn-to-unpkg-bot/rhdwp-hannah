@require "partials/_global.styl"
@require "partials/_wp-core.styl"
@require "partials/_defaults.styl"
@require "partials/_fonts.styl"
@require "partials/_helpers.styl"
@require "partials/_metabar.styl"
@require "partials/_hamburger.styl"
@require "partials/_ghost-button.styl"


/* ==========================================================================
	Main Styles
   ========================================================================== */

html
body
#page
#main
	min-height 100%


html
	text-shadow 0 0 1px transparent
	width 100%
	font-size 16px
	margin 0
	font-family $ff_body
	font-weight 300
	color $c_text


body
	@extends html

	&.admin-bar
		#wpadminbar
			position fixed
			top 0


a
	outline 0 !important
	transition all 0.25s
	color $c_sec
	text-decoration none

	&:hover
	&:active
		text-decoration underline


input
textarea
	background-color $c_bg
	border 2px solid $c_sec
	box-sizing border-box
	padding 0.5em
	font-family $ff_body
	-placeholder-props( $ff_body, gray )
	outline 0 !important
	transition all 0.25s

	&:focus
		border-color $c_text_lt


input[type="submit"]
	cursor pointer
	-ghost-button-alt()
	padding 0


#page
	margin 0


#navbar
	width 100%
	display block
	position relative
	padding 0.5rem 0
	border-top 1px solid $c_text
	border-bottom 1px solid $c_text
	color $c_text
	z-index 999

	.navbar-inner
		height @height
		margin 0

	.nav-dropdown
		background $c_bg
		position absolute
		top $navHt
		left 0
		display none

		.site-title
			margin-top 1em
			display block

	.navbar-search
		width 65%
		height 75%
		-vcenter()
		right 3em

		.search-form
		div
		input
			height 100%

		input
			background-color transparent
			border none

		.search-form
			-clearfix()

			.search-field
				width 130%
				-vcenter()
				font-size 1em
				font-family $ff_body
				letter-spacing 0.5px
				border-radius 0.1em
				border 1px solid $c_text
				color $c_text
				padding-right 2.3em
				right -0.35em
				-placeholder-props( @font-family, @color, 1, normal, normal )

				&:focus
					border-color $c_ter

			.search-submit
				width 1.5rem
				margin-left 0.5em
				right 0
				-vcenter()
				z-index 999
				background url('../img/search.png') no-repeat center
				background-size 90% auto

		.close-search
			-vcenter()
			right 1.7em
			font-weight 400
			color $c_text
			font-size 1.1em
			display none
			text-decoration none

			&:hover
			&:active
				text-decoration @text-decoration


	@media screen and (min-width 40rem)
		.navbar-search
			width 36.5%
			right 0


#site-title
	-wrapper(0, 0, 96%)
	text-align center
	display block


.site-title
	text-align center


.site-title-link
	-wrapper($navHt + ($navHt/2), 0, 85%, 30rem)
	display block
	line-height 1.2


#site-navigation-container
	width 100vw
	text-align center
	padding-bottom 1rem
	z-index 999
	border-bottom 1px solid $c_text

	#site-navigation
		list-style none
		padding-left 0
		margin 0.75em 0

		.menu-item
			display block
			font-size 1.1em
			line-height 1.8

			a
				-ff-title()
				text-transform uppercase


.site-navigation
	li
		a
			color $c_text
			text-decoration none
			transition color 0.25s
			text-transform uppercase
			font-weight 300

			&:hover
			&:active
				color $c_text_dk


#hamburger
	margin 0 auto


#main
	-wrapper()
	padding 2em 0
	box-sizing border-box


#primary
#secondary
	width 100%
	margin-top 1em
	position relative
	box-sizing border-box


#colophon
	width 100%
	position relative

	.site-info
		-wrapper(2em, 0, 75%)
		text-align center

		a
			color $c_text

			&:hover
			&:active
				color $c_text_dk
				text-decoration none

		img
			width 100%
			height auto

		#rhd-logo-footer
			width 1.35em
			height 1.35em
			margin 0 0.05em
			position relative
			bottom 0.25em


/* ==========================================================================
	Posts & Pages
   ========================================================================== */

.entry-title
.page-title
	margin-top 0
	line-height 1.2
	text-transform uppercase


.page-title
	-ff-headline()
	text-align center
	font-size 2em
	margin-bottom 1rem


.entry-title
	-ff-title()
	font-size 1.1em


.entry-summary
	p
		margin 0
		line-height 1.5
		font-size 0.9em

	img
		display none


.entry-content
	width 100%

	p
		margin 0.5em auto
		text-indent 0

		&[style*="text-align: center"]
			text-indent 0

		&:first-child
			margin-top 0

		&:last-child
			margin-bottom 0

	h1
	h2
	h3
	h4
	h5
	h6
		line-height 1.1

	ul
		padding-left 1em

	iframe
		max-width 100%

	img
		height auto
		display block
		-wrapper(1em, 1em, 95%, 100%)

		&.alignleft
		&.alignright
			float none

	a
		img
			@extends .entry-content img


.entry-meta
	p
		margin 0


.blog-area
	article
		-clearfix()
		margin 1em auto

		.entry-header
			text-align center
			-ff-title()
			text-transform uppercase
			margin-bottom 0.25em

			a
				color inherit

				&:hover
				&:active
					color $c_sec
					text-decoration none

			.entry-title
				margin 0
				text-transform uppercase

			.entry-details
				margin 0
				font-size 0.8em

				.sep
					font-size 1.1em

		.entry-thumbnail
			width 100%
			height auto
			margin-bottom 0.5em

			img
				width 100%
				height auto


.post-grid
	& > article
		width 100%
		vertical-align top
		margin 1em 0


.pagination
.single-pagination
	margin 1em auto
	font-size 1.1em
	-clearfix()

	.pag-link
	.pag-load-more
		-ghost-button-container()

		a
			-ghost-button()

	.pag-next
		float left

	.pag-prev
		float right

	.pag-load-more
		display block
		margin 0 auto


/* ==========================================================================
	Comments
   ========================================================================== */

#comments
	margin 2em auto

	.comment-list
		list-style none
		padding-left 0

		ul
		ol
			@extends #comments .comment-list

		.children
			padding 0 1.5em

		.comment
			&:last-child
				padding-bottom 1.5em

	.even
		background $off_white

	.odd
		background $near_white

	.comment-body
		padding 1em
		box-sizing border-box

	textarea
		max-width 100%


#commentform
	width 100%
	min-width 18rem
	max-width 100%

	p
		margin-bottom 0.75rem

	input
	textarea
		width 100%
		font-size 0.8em
		box-sizing border-box
		padding 0.5em
		display inline-block

	#submit
		width auto
		cursor pointer
		padding 0.5em
		font-size 1rem

	.comment-subscription-form
		margin initial


#reply-title
	@extends .entry-title
	font-size 1.3em


/* ==========================================================================
	Widget Areas & Sidebars
   ========================================================================== */

#secondary
	.widget
		width 100%
		margin-bottom 1.5em

	.widget:last-child
		margin-bottom 0

	.widget-title
		@extends .entry-title
		font-size 1.2em
		text-align center



/* ==========================================================================
	Extras
   ========================================================================== */

#primary
	-soliloquy()


/* ==========================================================================
	Media Queries
   ========================================================================== */

@require "partials/_desktop.styl"