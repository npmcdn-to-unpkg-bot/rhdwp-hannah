@require "partials/_global.styl"
@require "partials/_wp-core.styl"
@require "partials/_fonts.styl"
@require "partials/_helpers.styl"
@require "partials/_metabar.styl"
@require "partials/_defaults.styl"
@require "partials/_hamburger.styl"


/* ==========================================================================
	Main Styles
   ========================================================================== */

html
body
#page
#main
	min-height 100%


html
	text-shadow 0 0 1px transparent
	width 100%
	font-size 16px
	margin 0
	font-family $ff_body
	color $navy


body
	@extends html

	&.admin-bar
		#wpadminbar
			position fixed
			top 0


a
	outline 0 !important
	font-weight 800

	&:link
	&:visited
		text-decoration none
		color $powder

	&:hover
	&:active
		text-decoration underline


#page
	margin 0


#masthead
	height auto
	border-bottom 3px solid $navy
	position relative
	background $yellow
	-clearfix()

	#language
		font-size 0.7em
		position absolute
		top 0.5rem
		right 0.5rem
		z-index 9999

		a
			color $powder

	#site-logo
		width 100%
		background white
		margin 0 auto
		height auto

		img
			width 100%
			height auto
			max-width 18.75rem
			display block
			margin 0 auto

	#masthead-content
		height 100%
		background $yellow
		color $navy
		line-height 1
		overflow hidden
		position relative
		border-top 3px solid $navy
		text-align center

		#site-title
			width 100%
			text-align center
			font-size 4em // fallback
			font-size 5vw
			font-family $ff_special
			font-weight normal
			display none

			a
				color $navy
				text-decoration none

		.site-description
			text-align left
			font-size 4.5vw
			margin 1rem 0 1rem 0.5em
			color $powder
			font-family $ff_title
			font-weight 700


#site-navigation-container
	width 90%
	margin 1em auto 0
	text-align center
	display none

	#site-navigation
		list-style none
		padding-left 0
		margin 0
		text-align center
		font-family $ff_body
		font-weight 800

		.menu-item
			display inline-block
			line-height 1

			a
				color $navy
				text-transform uppercase
				transition color 0.25s

				&:hover
				&:active
					color $powder

			.sub-menu
				position absolute
				padding-left 0
				line-height 1.7
				margin-top 0.2em
				z-index 999 !important

				li
					display block
					margin 0


.sb-slidebar
	#site-title-sb
		text-align center
		font-family $ff_special
		line-height 1.2

	#site-navigation-sb-container
		#site-navigation-sb
			list-style none
			font-size 1.4em
			line-height 1.4


.site-navigation
	li
		a
			color $yellow
			text-decoration none
			transition color 0.25s

			&:hover
			&:active
				color $navy

body
	.sb-slidebar
		text-align center
		background $powder

		a
			color white
			text-decoration none
			font-size 1.1em

		.sub-menu
			margin-top 0


#site-navigation-sb-container
	position relative
	top 1em

	#site-navigation-sb
		list-style none
		padding-left 0
		text-align center


#hamburger
	background-color $yellow
	position absolute
	right 0.5vw
	top 50%
	-transform(translateY(-50%))

	&.c-hamburger--htx
		&.is-active
			span
				background none

	span
		background-color $powder

		&::after
		&::before
			background-color (@background-color)


#main
	-wrapper(0, 2em)
	box-sizing border-box
	padding-top 1em


#primary
#secondary
	width 100%
	margin-top 1em
	position relative
	box-sizing border-box


#secondary
	margin-bottom 2em


#content
	-clearfix()
	font-size 1.1em
	line-height 1.4


#colophon
	width 100%
	height auto
	padding 0.5rem
	background-color $navy
	color white
	position relative

	a
		color $powder

		&:hover
		&:active
			text-decoration underline

	#footer-widget-area
		width 100%

		.textwidget
			text-align center

		.search-form
			-clearfix()
			position relative

			input
				float left
				padding 0.375rem
				border none
				font-family $ff_body
				font-size 1em

			.search-field
				width 75%
				transition background-color 0.25s ease
				background-color white
				border-top-right-radius 0
				border-bottom-right-radius 0

				&:focus
					background-color $cream
					outline none

			.search-submit
				width 25%
				background-color $powder
				border-color (@background-color)
				transition all 0.25s ease
				position absolute
				top 0
				right 0
				z-index 999
				border-top-left-radius 0
				border-bottom-left-radius 0

				&:hover
				&:active
					background-color $yellow
					border-color (@background-color)
					color $navy

		.rhd_social_icons
			text-align center

	#footer-hheart-logo
		width 100%
		height 13em // temporary
		margin 0 auto
		background white
		position relative

		img
			width 85%
			position absolute
			top 50%
			left 50%
			-transform(translate(-50%, -50%))


/* ==========================================================================
	Posts & Pages
   ========================================================================== */

.entry-title
.page-title
	margin-top 0
	line-height 1


.page-title
	font-size 1.9em
	text-align center
	margin 0.5em 0
	font-family $ff_special


.entry-content
	width 100%
	font-size 15px

	p
		margin 1em auto

		&[style*="text-align: center"]
			text-indent 0

		&:first-child
			margin-top 0

	h1
	h2
	h3
	h4
	h5
	h6
		line-height 1.1

	ul
		padding-left 1em

	img
	iframe
		max-width 100%

	img
		height auto
		border 3px solid $navy

		&.alignleft
			margin-right 1em

		&.alignright
			margin-left 1em

		&.aligncenter
		&.alignnone
			display block
			margin-left auto
			margin-right auto

		&.no-border
			border none
			border-radius 0

	iframe
		display block
		margin 0 auto

	.wp-audio-shortcode
		-wrapper(1em, 1em, 50%, 20em)

	.big-blue-button
		width 73%
		font-family $ff_special
		text-align center
		padding 1em 1.25em 0.7em 1.25em
		border-radius 0.2em
		display block
		margin 0 auto
		font-size 1.4em
		color white
		background $navy
		transition background-color 0.25s

		&:hover
		&:active
			background $powder
			text-decoration none


.entry-meta
	p
		margin 0


.blog-area
	#main
		.post
			-clearfix()
			margin-bottom 3em
			padding-bottom 1em
			border-bottom 1px solid $off_white

			&:last-child
				margin-bottom 0

			.entry-header
				text-align left
				margin-bottom 1em
				border-bottom 1px solid $powder

				.entry-title
					margin 0

				.entry-details
					margin 0
					font-size 0.9em

					.sep
						font-size 0.8em


.pagination
.single-pagination
	margin 1em auto
	font-size 1.1em
	-clearfix()

	.pag-next
	[rel="prev"]
		float left

	.pag-prev
	[rel="next"]
		float right


#page-thumbnail-wide
	width 100%
	height auto
	max-height 60vh
	overflow hidden
	position relative

	img
		display block


/* ==========================================================================
	Image Strip Extras
   ========================================================================== */

#highlights
	width 100%

	.entry-content
		img
			&.alignnone
				margin 0 auto
				display block


.highlight-link
	-wrapper(1em, 1em, 90%, 360px)
	height auto
	position relative

	figcaption
		width 100%
		position absolute
		bottom 1.5em
		text-align center
		color white
		font-family $ff_special
		font-weight bold
		padding 0.75em 0.75em 0.35em 0.75em
		line-height 1
		background-color rgba(0, 71, 137,0.5)
		transition background-color 0.25s
		font-size 1.2em

	img
		-opacity(0.8)
		transition all 0.25s


/* ==========================================================================
	Ninja Forms
   ========================================================================== */

.rhd-ninja-container
	display none
	-wrapper(0, 0, 90%, 30em)


.ninja-forms-cont
	.entry-content
		p
			&::first-child
				margin-bottom 1em // Override

	input[type="submit"]
		background-color $navy
		transition all 0.25s

		&:hover
		&:active
			background-color $powder


.ninja-forms-required-items
	font-size 0.9em
	text-align center
	font-style italic


.ninja-forms-req-symbol
	color $powder !important

	strong
		font-weight normal


/* ==========================================================================
	Front Page (+ spanish)
   ========================================================================== */

.front-page
.page-id-294
	#main
		margin-top 0
		padding-top 0

	.soliloquy-outer-container
		border-bottom 3px solid $navy
		margin-bottom 1em

		#soliloquy-container-82
			margin-bottom 0 !important


/* ==========================================================================
	About Page (+ spanish)
   ========================================================================== */

.page-id-6
.page-id-306
	.page-title
		visibility hidden
		position absolute
		top -200%
		left -200%

	.entry-content
		img
			-wrapper(1em, 1em, 75%)
			float none
			display block


/* ==========================================================================
	Our Team Page
   ========================================================================== */

.page-id-12
	.entry-title
		font-size 0.9em
		margin 0

	.entry-content
		p
			margin 0
			font-size 0.9em

	.team-page-grid
		.post-grid-item
			margin-bottom 1.5em


/* ==========================================================================
	Grid Layout
   ========================================================================== */

.post-grid
	.post-grid-item
		-wrapper(0, 0, 80%)
		text-align center
		vertical-align top

		.grid-thumbnail
			width 100%
			height auto
			max-width 200px
			border 3px solid $navy
			margin-bottom 0.5em
			margin-left auto
			margin-right auto

			img
				width (@width)


/* ==========================================================================
	Comments
   ========================================================================== */

#comments
	margin 2em auto

	.commentlist
		list-style none
		padding-left 0

		ul
		ol
			@extends #comments .commentlist

		.children
			padding 0 1.5em

	.even
		background $off_white

	.odd
		background white

	.comment-body
		padding 1em
		box-sizing border-box

	textarea
		max-width 100%

	#commentform
		width 100%
		min-width 18rem
		max-width 100%

		p
			margin-bottom 0.75rem

		input
		textarea
			width 100%
			background-color $off_white
			font-size 0.8em
			border none
			box-sizing border-box
			padding 0.5em
			display block

		#submit
			width auto
			padding-left 0.8em
			cursor pointer

		.comment-subscription-form
			margin initial



/* ==========================================================================
	Widget Areas & Sidebars
   ========================================================================== */

#secondary
	.widget
		width 100%
		margin-bottom 1.5em

	.widget:last-child
		margin-bottom 0

	.widget-title
		margin-top 0

	.textwidget
		h1
			font-family $ff_special


/* ==========================================================================
	Media Queries
   ========================================================================== */

@media screen and (min-width 35em)
	.post-grid
		-flexbox()

		.post-grid-item
			width 47%
			-flexitem()

	.front-page
		#primary
			#image-strip
				width 30%
				float right
				margin-right 0

			article.strip-active
				width 66%
				float left

	#highlights
		-flexbox()

		.highlight-link
			width 30%
			height auto
			margin 0
			-flexitem()

	.highlight-link
		&:hover
			img
				-opacity(1)

			figcaption
				background-color rgba(0, 71, 137,0.85)

	#secondary
		.highlight-link
			width 100%
			margin 0

	#post-6
	#post-306
		.entry-content
			-clearfix()

			p
				&:first-child
					margin 0

			img
				width 30%
				margin 0 3em 0 0
				float left

			.about-section
				overflow hidden

				p
				h2
					margin-top 0


@media screen and (min-width 50em)
	#masthead
		height 213px

		#masthead-content
			height 100%
			border-top none

			#site-title
				display inline-block
				margin-top 2rem
				margin-bottom 0

			.site-description
				font-size 1.4em
				margin 0em auto 1em auto
				text-align center

		#site-logo
			width 297px
			border-right 3px solid $navy
			float left
			background white

	#site-navigation-container
		display block
		position relative
		top 0.8em

		#site-navigation
			text-align center

			.menu-item
				font-size 1em
				line-height 1.4
				margin 0 0.5em

	#hamburger
		display none

	#main
	#primary
		-clearfix()

	#primary
		article
			&.strip-active
				width 65%
				float right

		#image-strip
			width 30%
			float left
			margin-right 5%

			img
				width 100%
				height auto
				margin-bottom 2em
				display block
				border 3px solid $navy

				&.no-border
					border none
					border-radius 0

	#colophon
		#footer-widget-area
			width 37%

			#footer-widget-area-left
				padding-left 1em

			.textwidget
				text-align left

			.rhd_social_icons
				text-align left

		#footer-hheart-logo
			width 300px
			height 95.5%
			position absolute
			right 0.25rem
			top 0.25rem

	.blog-area
		#main
			-clearfix()

	.blog-area
		#primary
			width 66%
			float right

		#secondary
			width 28%
			float left

	#comments
		#commentform
			width 75%

			p
				margin-bottom 0.75rem

			input
			textarea
				background-color $off_white
				font-size 0.8em
				border none
				box-sizing border-box
				padding 0.5em
				display block

			input
				&[type="text"]
				&[type="email"]
					width 75%

			#submit
				width auto
				padding-left 0.8em


@media screen and (min-width 56em)
	.post-grid
		.post-grid-item
			width 28%
