@require "partials/_global.styl"
@require "partials/_wp-core.styl"
@require "partials/_fonts.styl"
@require "partials/_helpers.styl"
@require "partials/_defaults.styl"
@require "partials/_hamburger.styl"


/* ==========================================================================
	Main Styles
   ========================================================================== */

html
	width 100%
	font-size 16px
	margin 0
	text-shadow 0 0 1px transparent
	color $color1
	font-family $ff-body


body
	@extends html
	display block

	&.admin-bar
		#wpadminbar
			position fixed
			top 0


a
	outline 0 !important

	&:link
	&:visited
		text-decoration none
		color $color2

	&:hover
	&:active
		text-decoration underline


input
textarea
	background-color white
	border 2px solid $color2
	box-sizing border-box
	padding 0.5em
	font-family $ff-body
	-placeholder-props( $ff-body, gray )
	outline 0 !important
	transition all 0.25s

	&:focus
		border-color $color3


input[type="submit"]
	cursor pointer
	font-family $ff-body
	transition all 0.25s

	&:hover
		background-color gray


#site-header
	width 100%
	position relative
	background-color $mast-bg

	#masthead
		-wrapper(1rem, 1rem, 92%)
		color black


#site-title
	width 100%

	a
		color $color1
		text-decoration none

		&:hover
		&:active
			.site-title
				color $color2

	.site-title
	.site-description
		margin 0
		font-weight normal
		line-height 1
		transition all 0.25s

	.site-title
		font-family $ff-title
		text-transform uppercase
		font-size $ts-default
		text-align center

	.site-description
		font-family $ff-sub
		text-align right
		font-size ($ts-default/2.15)


#site-navigation-container
	width 100%
	text-align center
	display none
	font-family $ff-body
	text-transform uppercase

	#site-navigation
		list-style none
		padding-left 0
		margin 1em 0
		text-align center
		line-height 1.75
		transition all 0.25s

		.menu-item
			font-weight 300
			font-size 1.3em
			transition all 0.25s

			a
				color inherit

				&:hover
				&:active
					text-decoration none
					color $color2

			.sub-menu
				position absolute
				padding-left 0
				line-height 1.7
				margin-top 0.2em
				z-index 999 !important

				li
					display block
					margin 0


.site-navigation
	li
		a
			color $color2
			text-decoration none
			transition color 0.25s

			&:hover
			&:active
				color $color3


#hamburger
	margin 0.5rem auto 0
	background-color transparent

	span
		background-color $color1

		&:before
		&:after
			background-color $color1

	&.is-active
		background-color (@background-color)


#main
	box-sizing border-box

	&.with-header-image
		width 100%

		#primary
			-wrapper(2em, 2em)

	&.no-header-image
		-wrapper(2em, 2em)


#primary
#secondary
	width 100%
	margin-top 1em
	position relative
	box-sizing border-box


#colophon
	width 100%
	position relative
	background-color $color3
	color white
	padding 1em

	.site-info
		width 100%
		margin 0
		text-align center
		line-height 1.7
		font-size 0.9em

		a
			color inherit

	#rhd-logo-footer
		width 1.35em
		height 1.35em
		margin 0 0.05em
		position relative
		bottom 0.25em

	#footer-widget-area
		.widget_rhd_social_icons
			-wrapper(0, 0, 100%, 20rem)

			.rhd_social_icons
				-flexbox()
				line-height 0

				.rhd-social-icon
					width 50px
					height (@width)
					-flexitem()
					line-height 2


/* ==========================================================================
	Posts & Pages
   ========================================================================== */

.page-header-image
	img
		width 100%

.entry-title
.page-title
.widget-title
	margin-top 0
	line-height 1
	color $color3
	text-transform uppercase


.page-title
	font-size 1.6em
	text-align center


.entry-content
	width 100%

	p
		margin 0.75em auto
		text-indent 0

		&[style*="text-align: center"]
			text-indent 0

		&:first-child
			margin-top 0

		&:last-child
			margin-bottom 0

	h1
	h2
	h3
	h4
	h5
	h6
		line-height 1.1

	ul
		padding-left 1em

	img
	iframe
		-wrapper(1em, 1em, 95%)

	img
		height auto
		display block

		&.alignleft
		&.alignright
			float none

	a
		img
			@extends .entry-content img


.entry-meta
	p
		margin 0


.blog-area
	#main
		#primary
			width 100% !important

			.post
				-clearfix()

				.entry-header
					text-align center
					margin-bottom 1em

					.entry-title
						margin 0 0 0.25rem 0

					.entry-details
						margin 0

						.sep
							font-size 0.8em


.news-item
	margin-bottom 1em
	padding-bottom 1em
	border-bottom 1px solid #ccc

	&:last-child
		border-bottom none
		padding-bottom 0

	.post-featured-image
		-wrapper(0.5em, 0.5em, 50%)

		img
			width 100%
			height auto


.pagination
.single-pagination
	margin 1em auto
	font-size 1.1em
	-clearfix()

	.pag-next
	[rel="prev"]
		float left

	.pag-prev
	[rel="next"]
		float right


/* ==========================================================================
	Comments
   ========================================================================== */

#comments
	margin 2em auto

	.commentlist
		list-style none
		padding-left 0

		ul
		ol
			@extends #comments .commentlist

		.children
			padding 0 1.5em

		.comment
			&:last-child
				padding-bottom 1.5em

	.even
		background $off-white

	.odd
		background white

	.comment-body
		padding 1em
		box-sizing border-box

	textarea
		max-width 100%

	#commentform
		width 100%
		min-width 18rem
		max-width 100%

		p
			margin-bottom 0.75rem

		input
		textarea
			width 100%
			font-size 0.8em
			box-sizing border-box
			padding 0.5em
			display inline-block

		#submit
			width auto
			padding-left 0.8em
			cursor pointer

		.comment-subscription-form
			margin initial


/* ==========================================================================
	Ghost Buttons
   ========================================================================== */

.ghost-button
	width auto
	max-width 100%
	text-align center
	margin 1em auto
	font-size 1.2em
	font-weight 700

	a
		padding 0.4em .8em
		color white
		text-decoration none
		background-color $color3
		border-radius 0.1em
		display inline-block
		transition all 0.2s
		text-transform uppercase

		&:hover
		&:active
			background-color $color2
			color white


.pix-load-more
	color $color3
	font-weight 700
	text-transform uppercase
	font-size 1.2em

	input
		margin-top 2em
		margin-bottom 2em
		padding 1em 1.5em


input
	&[type="button"]
		@extends .ghost-button a


/* ==========================================================================
	Widget Areas & Sidebars
   ========================================================================== */

#secondary
	.widget
		width 100%
		margin-bottom 1.5em

	.widget:last-child
		margin-bottom 0

	.widget-title
		text-align center
		margin-top 0


/* ==========================================================================
	Front Page
   ========================================================================== */

.front-page
	#front-page-widget-area
		.front-page-widget
			width 100%
			margin 1em 0

			.widget-content
				text-align center

			.widget-title
				text-transform uppercase
				font-size 1.4em
				margin 0.25em 0


/* ==========================================================================
	Projects Pages
   ========================================================================== */

.projects-grid-container
	.projects-grid
		list-style none
		padding-left 0

		.projects-grid-item
			margin-bottom 2em
			vertical-align top
			color $color3

			&:last-child
				margin-bottom 0

			a
				text-decoration none
				color inherit

				&:hover
				&:active
					.project-title
						color $color2

					.project-thumbnail
						border-color $color2

			.project-thumbnail
				width 100%
				border 0.25em solid $color1
				position relative
				margin 0
				transition border-color 0.25s

			.project-caption
				text-align center
				line-height 1.2

				.project-title
					text-transform uppercase
					margin 0.5em 0
					transition color 0.25s

				.project-details
					font-size 0.9em
					color $color1

					p
						margin 0


.jump-listen
	text-align center
	margin 1em 0
	display block
	font-size 1.3em
	color $color2


.soundcloud-sidebar
	.widget-title
		font-size 1.4em

	.widget-featured-image
		img
			display block
			margin 0 auto


/* ==========================================================================
	Contact Page
   ========================================================================== */

.ninja-forms-cont
	input
	textarea
		font-family $ff-body
		border-color $color1
		transition all 0.25s

		&:focus
			border-color $color2

		&[type="submit"]
			width 7em
			display block
			margin 0 auto

			&:hover
				background-color $color2

	#ninja_forms_field_3_div_wrap
		margin-bottom 0


.ninja-forms-required-items
.ninja-forms-req-symbol
	display none


.rhd-contact-form
	position relative
	top 0.1em
	margin-bottom 2em


.contact-info
	text-align center

	section
		margin-bottom 2.5em

	h3
		margin-bottom 0.25em

	.social-icons
		-wrapper(1em, 0, 200px)
		-clearfix()

		img
			width 40%
			height auto


/* ==========================================================================
	Media Queries
   ========================================================================== */

@media screen and (min-width 43em)
	#site-header
		&.header-overlay
			position absolute
			top 0

		#masthead
			-clearfix()


	#site-title
		width auto
		float left

		.site-title
		.site-description
			text-align left

		.site-title
			font-size $ts-midsize

		.site-description
			font-size ($ts-midsize / 2.15)
			position relative
			left 5.4em

	#site-navigation-container
		width 60%
		display block !important
		position absolute
		top 50%
		right 0
		-transform(translateY(-50%))

		#site-navigation
			-flexbox()
			margin 0
			line-height 0

			.menu-item
				-flexitem()
				font-size 1.7vw
				line-height 2

	#hamburger
		display none

	#colophon
		height 5rem

		.site-info
			width 100%
			text-align left
			line-height 1
			font-size 0.9em

			a
				color inherit

		#footer-widget-area
			width 20rem
			position absolute
			right 1em

	.news-item
		width 100%
		text-align left

		.news-item-inner
			-wrapper(0, 0, 80%)
			-clearfix()

		.post-featured-image
			width 35%
			max-width 300px
			margin 0
			float left

		.entry-content
			width 60%
			float right
			position absolute
			right 0
			top 50%
			-transform(translateY(-50%))

		.entry-meta
			position absolute
			right 0
			bottom 0

	#comments
		#commentform
			width 75%

			p
				margin-bottom 0.75rem

			input
				&[type="text"]
				&[type="email"]
					width 75%

			#submit
				width auto
				padding-left 0.8em

	.entry-content
		img
		iframe
			width initial
			-unwrapper(initial)

		img
			&.alignleft
				margin-right 1em
				float left

			&.alignright
				margin-left 1em
				float right

			&.aligncenter
				margin 0 auto

		a
			img
				@extends .entry-content img

	.front-page
		#front-page-widget-area
			-flexbox()

			.front-page-widget
				width 33.3333%
				padding 0 1.5%
				margin 0
				-flexitem()
				vertical-align top

				.widget-title
					margin 0 0 1.5rem 0

			#text-3
				float right

			#text-2
				float left

	// Projects Pages
	.projects-grid-container
		.projects-grid
			-flexibox()

			.projects-grid-item
				width 33%
				padding 0 1.5%
				-flexitem()

				.project-thumbnail
					border-width 3px
					-opacity(0.9)
					transition all 0.35s

					&:hover
					&:active
						-opacity(1)

	.jump-listen
		display none

	// Contact Page
	.page-id-17
		.page
			> .entry-header
				display none

		.entry-content
			-clearfix()

			.rhd-contact-form
				width 48%
				float left

				.ninja-forms-cont
					input
						&[type="submit"]
							float left

			.contact-info
				width 45%
				float right


// Fixed-width 340px sidebar for Single Projects pages
@media screen and (min-width 50em)
	#main
		-clearfix()

	.single-project
		#primary
			width 48%

			&.single-project-content
				float right

			.entry-content
				iframe
					width 100%

		#secondary
			width 300px
			float left

			.widget
				width 100%
				margin-left auto
				margin-right auto
				padding 0 10px


@media screen and (min-width 58em)
	#primary
		&.single-project-content
			width 56%

	#secondary
		width 320px


@media screen and (min-width 62em)
	#primary
		&.single-project-content
			width 58%


@media screen and (min-width 64em)
	#primary
		&.single-project-content
			width 60%


@media screen and (min-width 66em)
	#primary
		&.single-project-content
			width 62%


@media screen and (min-width 70em)
	#site-title
		.site-title
			font-size $ts-desktop

		.site-description
			font-size ($ts-desktop / 2.15)

	#site-navigation-container
		#site-navigation
			.menu-item
				font-size 1.3em