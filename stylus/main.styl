/* ==========================================================================
	Media Queries
   ========================================================================== */

@media screen and (min-width 40em)
	.page-id-39
		.header-bg
			background-position center top

	#masthead
		#site-title
			&.top
				top 5%

			&.bottom
				bottom 18%

	#site-navigation-container
		height 4em
		display block
		position absolute
		bottom 0
		background white

		#site-navigation
			top 1.6em

	#hamburger
		display none

	.news-item
		width 100%
		text-align left

		.news-item-inner
			-wrapper(0, 0, 80%)
			-clearfix()

		.post-featured-image
			width 35%
			max-width 300px
			margin 0
			float left

		.entry-content
			width 60%
			float right
			position absolute
			right 0
			top 50%
			-transform(translateY(-50%))

		.entry-meta
			position absolute
			right 0
			bottom 0

	.page-id-21
		.entry-content
			-clearfix()

			.rhd-contact-form
				width 48%
				float left

			.contact-info
				width 45%
				float right