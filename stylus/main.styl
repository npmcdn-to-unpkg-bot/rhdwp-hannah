@require "partials/_global.styl"
@require "partials/_wp-core.styl"
@require "partials/_helpers.styl"
@require "partials/_defaults.styl"
@require "partials/_hamburger.styl"


/* ==========================================================================
	Main Styles
   ========================================================================== */

html
	text-shadow 0 0 1px transparent
	width 100%
	font-size 16px
	margin 0
	font-family $ff_body


body
	@extends html


a
	outline 0 !important

	&:link
	&:visited
		text-decoration none
		color $color1

	&:hover
	&:active
	&:focus
		text-decoration underline


h1
h2
h3
h4
h5
h6
	line-height 1.1
	font-family $ff_headline
	text-transform uppercase


input
textarea
	background-color $off-white
	border 2px solid black
	border-radius 0.1em
	box-sizing border-box
	padding 0.5em
	font-family $ff_body
	transition border-color 0.25s ease
	outline none

	&:focus
		border-color $color1


input
	&[type="submit"]
		cursor pointer
		font-family inherit
		background-color $color1
		transition background-color 0.25s

		&:hover
			background-color $color3


#masthead
	position relative

	.header-image
		width 100%
		height auto
		position relative
		top $navHt
		border-top 3px solid $color2
		border-bottom 3px solid $color2

	#site-title
		width 60%
		height auto
		position absolute
		top 50%
		left 1em
		-transform(translateY(-50%))


.site-navigation
	li
		font-family $ff_headline
		font-weight 700

		a
			transition color 0.25s
			color $color1
			text-decoration none


#navbar
	width 100%
	height $navHt
	text-align center
	position absolute
	top 0
	background white

	#site-navigation-container
		width 100%
		height auto
		display none

		#site-navigation
			list-style none
			padding-left 0
			-flexbox()
			margin 0

			.menu-item
				-flexitem()

				&.current-menu-item
					padding 0 0.5em 0.2em
					border-bottom 3px solid $color2

				a
					text-decoration none
					text-transform uppercase
					color $color1
					transition 0.25s color

					&:hover
					&:active
					&:focus
						color $color3

				.sub-menu
					position absolute
					padding-left 0
					line-height 1.7
					margin-top 0.2em
					z-index 999 !important

					li
						display block
						margin 0


#site-navigation-sb-container
	#site-navigation-sb
		list-style none
		font-size 1.8em
		line-height 1.5
		padding-left 0
		text-align center

		.menu-item
			&.current-menu-item
				a
					border-bottom 2px solid $color1

			a
				text-decoration none
				text-transform uppercase
				transition color 0.25s ease

				&:hover
					color $color2

#hamburger
	background-color transparent
	position absolute
	top 50%
	right 0.5rem
	-transform(translateY(-50%))

	span
		background-color $color2

		&::before
		&::after
			background-color (@background-color)


#main
	-wrapper()
	padding 2em 0
	box-sizing border-box
	margin-top $navHt


#primary
#content
	width 100%
	position relative
	box-sizing border-box


#primary
	margin-bottom 4em


#colophon
	width 100%
	position relative
	background-color $color2
	color white
	margin-bottom 5em

	.footer-content
		width 100%
		margin 0
		padding 2em 0
		position relative

		a
			color inherit

		#footer-widget-area
			text-align center
			margin-bottom 2em

			.widget-title
				font-weight 400
				font-size 1.3em
				margin-bottom 0.55em
				font-family $ff_body
				text-transform none

		#site-info
			text-align center
			line-height 1.7
			font-size 0.9em

	#rhd-logo-footer
		width 1.35em
		height 1.35em
		margin 0 0.05em
		position relative
		bottom 0.25em


/* ==========================================================================
	Posts & Pages
   ========================================================================== */

.entry-title
.page-title
	margin-top 0
	line-height 1
	color $color2


.page-title
	text-align center


.entry-title
	margin-bottom 0.25em


.entry-content
	-wrapper()

	p
		margin 0.5em auto

		&[style*="text-align: center"]
			text-indent 0

		&:first-child
			margin-top 0

		&:last-child
			margin-bottom 0

	ul
		padding-left 1em

	img
		max-width 100%
		height auto

		&.alignleft
			margin-right 1em

		&.alignright
			margin-left 1em

		&.aligncenter
			display block
			margin 0 auto

	iframe
		max-width 100%
		display block
		margin 1em auto


.pagination
.single-pagination
	margin 1em auto
	font-size 1.1em
	-clearfix()

	.pag-next
	[rel="prev"]
		float left

	.pag-prev
	[rel="next"]
		float right


/* ==========================================================================
	Ghost Buttons
   ========================================================================== */

.ghost-button
	width auto
	max-width 100%
	text-align center
	margin 1em auto
	font-size 1.2em
	font-weight 700

	a
		padding 0.4em .8em
		color white
		text-decoration none
		background-color $color3
		border-radius 0.1em
		display inline-block
		transition all 0.2s
		text-transform uppercase

		&:hover
		&:active
			background-color $color2
			color white


/* ==========================================================================
	Widget Areas
   ========================================================================== */

#secondary
	-wrapper(0, 2em, 95%)


	#widget_sp_image-3
		text-align center

		p
			font-size 1.2em
			font-weight 700
			font-style italic

		.button
			-wrapper(1em, 0, 80%)
			padding 1rem 0.75rem
			background-color $color1
			transition all 0.25s
			color white
			text-decoration none
			display inline-block

			&:hover
			&:active
				background-color $color2


/* ==========================================================================
	Services Page
   ========================================================================== */

#services-list
	.services-list-item
		margin 1em 0

		.service-thumbnail
			width 100%
			height auto
			border 3px solid $color2
			border-radius 0.2em

			img
				width 100%

		.service-header
			.service-title
				text-align center
				margin-bottom 0.25em

			.service-button
				margin 0.5em auto
				font-size 1rem

				a
					background-color $color1
					color white

					&:hover
					&:active
						background-color $color2


/* ==========================================================================
	Contact Page
   ========================================================================== */

.ninja-forms-cont
	input
		&[type="submit"]
			width 7em
			display block
			float right
			margin-top 0


.ninja-forms-required-items
.ninja-forms-req-symbol
	display none


.ninja-forms-form-title
	text-align center

/* ==========================================================================
	Media Queries
   ========================================================================== */

@media screen and (min-width 40em)
	#navbar
		padding-top 1em

		#site-title
			width 25%
			position relative
			float left

		#site-navigation-container
			width 65%
			float right
			display block
			position relative
			top 2.4em
			margin-right 2em


	#hamburger
		display none


	#main
		-clearfix()


	#primary
	#secondary
		margin 0


	#colophon
		height 6rem

		.footer-content
			height 100%
			-clearfix()
			-wrapper()

			#footer-widget-area
			#site-info
				position absolute
				top 50%
				-transform(translateY(-50%))

			#footer-widget-area
				width 14em
				margin-bottom 0
				right 0
				text-align right

				.widget-title
					font-size 1em
					float left
					margin 1.5em 0

				.rhd_social_icons
					float right

			#site-info
				left 0
				text-align left
				font-size 1em


	.front-page
		#primary
			width 100%

			.entry-content
				padding-top 1em

	// Services Page
	#services-list
		.services-list-item
			-clearfix()
			margin 2em 0

			.service-thumbnail
				width 33%
				max-width 300px
				float left

			.service-content-area
				width 64%
				float right

				.service-header
					-clearfix()

					.service-title
						float left
						margin-top 0

					.service-button
						display inline-block
						margin 0 0 0 2em

						a
							padding 0.1em 0.5em

	// Contact Page, Free Quote Page
	.page-id-27
	.page-id-25
		#primary
			.entry-content
				-clearfix()

				.left-area
					width 40%
					float left

				.right-area
					width 55%
					float right