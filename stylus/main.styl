@require "partials/_global.styl"
@require "partials/_wp-core.styl"
@require "partials/_defaults.styl"
@require "partials/_fonts.styl"
@require "partials/_helpers.styl"
@require "partials/_metabar.styl"
@require "partials/_hamburger.styl"
@require "partials/_ghost-button.styl"
@require "partials/_plugins.styl"


/* ==========================================================================
	Main Styles
   ========================================================================== */

html
body
#page
#main
	min-height 100%


html
	text-shadow 0 0 1px transparent
	width 100%
	font-size 16px
	margin 0
	font-family $ff_body
	font-weight 300
	color $c_text


body
	@extends html

	&.admin-bar
		#wpadminbar
			position fixed
			top 0


a
	outline 0 !important
	transition all 0.25s
	color $c_ter
	text-decoration none

	&:hover
	&:active
		text-decoration underline


input
textarea
	background-color $c_bg
	border 2px solid $c_sec
	box-sizing border-box
	padding 0.5em
	font-family $ff_body
	-placeholder-props( $ff_body, gray )
	outline 0 !important
	transition all 0.25s

	&:focus
		border-color $c_ter


input[type="submit"]
	cursor pointer
	font-family $ff_body
	transition all 0.25s

	&:hover
		background-color gray


#page
	margin 0


#masthead
	-copperborder()

	.border-inner
		position relative
		background url(../img/herringbone.jpg) repeat


#site-title
	-wrapper(0, 0, 96%)
	padding 1.3em 0 0.5em
	display block
	transition width 0.25s, height 0.25s


#site-navigation-container
	width 100vw
	text-align center
	position absolute // set by JS
	background $c_bg
	z-index 999
	display none
	box-shadow 3px 3px 7px -4px $c_text

	#site-navigation
		list-style none
		padding-left 0
		margin 0.75em 0

		.menu-item
			display block
			font-size 1.1em
			line-height 1.8
			transition font-size 0.25s


.site-navigation
	li
		a
			color $c_text
			text-decoration none
			transition color 0.25s
			text-transform uppercase
			font-weight 300

			&:hover
			&:active
				color $c_ter


#hamburger
	position absolute
	top 0.5em
	right 0.5em


#main
	-wrapper(0, 0, 95%)
	padding 2em 0
	box-sizing border-box


#primary
#secondary
	width 100%
	margin-top 1em
	position relative
	box-sizing border-box
	transition width 0.5s, height 0.5s


#colophon
	width 100%
	position relative
	background $c_sec

	.footer-inner
		-wrapper(0, 0, 95%)
		padding 1em 1em 2em 1em

	#footer-widget-area
		-wrapper(0, 0, 230px)

		.rhd_social_icons
			margin 1.5em 0
			left 5%

			.rhd-social-icon
				a
					path
						fill $c_sec

					&:hover
					&:active
						path
						.houzz-middle-tri
							fill $c_ter

						.houzz-middle-tri
							stroke $c_ter

				.houzz-middle-tri
					fill $c_sec
					stroke $c_sec

			.empty-hex
				background-image url(../../../mu-plugins/rhd-social-icons/img/hexagon_white.png)


	.site-info
		-wrapper(2em, 0, 75%)
		text-align center
		color white
		font-weight 400

		a
			color inherit

			&:hover
			&:active
				color $c_ter
				text-decoration none

		img
			width 100%
			height auto

		#rhd-logo-footer
			width 1.25em
			height 1.25em
			margin 0 0.05em
			position relative
			bottom 0.2em


/* ==========================================================================
	Posts & Pages
   ========================================================================== */

.blog-area
	&.single
		article
			border none


.entry-title
.page-title
.widget-title
	margin-top 0
	line-height 1


.page-title
.archive-title
	-ff-headline()
	text-align center
	font-size 3em
	border-radius 0.1rem
	margin-bottom 0.5em


.entry-summary
	p
		margin 0


.entry-content
	width 100%

	p
		margin 0.5em auto
		text-indent 0

		&[style*="text-align: center"]
			text-indent 0

		&:first-child
			margin-top 0

		&:last-child
			margin-bottom 0

	h1
	h2
	h3
	h4
	h5
	h6
		line-height 1.1

	ul
		padding-left 1em

	img
	iframe
		-wrapper(1em, 1em, 95%)

	img
		height auto
		display block

		&.alignleft
		&.alignright
			float none

	a
		img
			@extends .entry-content img


.entry-meta
	p
		margin 0


.blog-area
	article
		-clearfix()
		border-width 2px
		border-style solid
		border-radius 0.1em
		margin 1em auto

		&.rhd-full-post
			border-color $c_text_lt
			padding 1em

			.entry-header
				padding-bottom 1em
				border-bottom 1px solid $c_text

		&.rhd-excerpt-post
			border-color $c_text_lt

			.entry-header
				margin-bottom 0

				.entry-title
					padding 0.5em 0
					margin 0

				.entry-details
					display none

			.entry-thumbnail
				border-top 2px solid $c_text_lt

			.ghost-button-container
				margin-bottom 0

		&:first-child
			margin-top 0

		.post-inner
			width 100%
			padding 1em

		.entry-header
			text-align center
			margin-bottom 1em

			a
				color inherit

				&:hover
				&:active
					color $c_ter
					text-decoration none

			.entry-title
				margin 0 0 0.25rem 0

			.entry-details
				margin 0
				font-size 0.9em
				-ff-subtitle()

				.sep
					font-size 1.1em

		.entry-thumbnail
			width 100%
			height auto

			img
				width 100%
				height auto


.pagination
.single-pagination
	margin 2em auto
	font-size 1.1em
	-clearfix()

	.pag-link
	.pag-load-more
		@extends .ghost-button-container

		a
			@extends .ghost-button-container .ghost-button

	.pag-next
		float left

	.pag-prev
		float right

	.pag-load-more
		display block
		margin 0 auto


#primary
	.search-submit
		@extends .ghost-button-container .ghost-button
		font-weight 400
		border-width 2px
		margin-top 0.5em
		font-size 1em


.no-results
	padding 1em


/* ==========================================================================
	Services Page
   ========================================================================== */

.page-id-12061
	#main
		.main-inner
			padding 0

	#primary
		margin 0


#page-services-sections
	width 100%
	list-style none
	padding-left 0
	margin 0
	background white

	.section
		width 100%

		> div
			width 100%

		.section-image
			display none

		.section-content
			padding 1% 3%
			background white


/* ==========================================================================
	Flipping Page
   ========================================================================== */

#post-12063
	.gallery
		.gallery-item
			position relative
			padding 0

			img
				width 100%
				margin 0
				z-index 1

			.wp-caption-text
				width 100%
				position absolute
				bottom 0
				background alpha($c_sec, 0.65)
				transition all 0.35s ease
				font-size 1.2rem
				overflow hidden
				z-index 5
				color $c_text

				.link-overlay
					width 100%
					height 100%
					position absolute
					top 0
					left 0
					background transparent
					z-index 10

				.rhd-caption-wrapper
					.ghost-button-container
						display none


/* ==========================================================================
	Comments
   ========================================================================== */

#comments
	margin 2em auto

	.comment-list
		list-style none
		padding-left 0

		ul
		ol
			@extends #comments .comment-list

		.children
			margin-top 0
			padding-left 1em

			.comment
				.comment-body
					border-left 1px solid $c_text_lt

	.comment-body
		border none
		margin 0

	.even
		background lighten($c_sec_lt, 80%)

	.odd
		background lighten($c_ter_lt, 90%)

	.comment-body
		padding 1em
		box-sizing border-box

	textarea
		max-width 100%

	#commentform
		width 100%
		min-width 18rem
		max-width 100%

		p
			margin-bottom 0.75rem

		input
		textarea
			width 100%
			font-size 0.8em
			box-sizing border-box
			padding 0.5em
			display inline-block
			border-color $c_text_lt

			&:focus
				border-color $c_ter

		#submit
			@extends .ghost-button-container .ghost-button
			border-width 2px
			font-weight 300
			font-size 1rem

		.comment-subscription-form
			margin initial


/* ==========================================================================
	Widget Areas & Sidebars
   ========================================================================== */

#secondary
	.widget
		width 100%
		margin-bottom 1.5em

	.widget:last-child
		margin-bottom 0

	.widget-title
		margin-top 0

	#rhd_social_icons-4
		.rhd_social_icons
			-wrapper(0, 2em, 230px)

			.rhd-social-icon
				a path
					fill white

				a
					&:hover
					&:active
						path
						.houzz-middle-tri
							fill $c_ter

						.houzz-middle-tri
							stroke $c_ter

			.rhd-social-poly
				fill $c_sec

			.houzz-middle-tri
				fill white

			.empty-hex
				background-image url(../../../mu-plugins/rhd-social-icons/img/hexagon_green.png)

	#widget_sp_image-2
		.widget_sp_image-description
			font-size 1.2em
			-ff-subtitle()
			text-align center


/* ==========================================================================
	Front Page
   ========================================================================== */

.front-page
	#main
		width 100%
		max-width none
		padding 0
		-copperborder()
		background-color $c_bg

		> .border-inner
			background $c_bg

		.main-inner
			background-color @background-color

	#primary
		#content
			width 100%
			padding 0 7.5%

	.section-title
		-ff-headline()
		font-size 200%
		text-align center
		margin 0.5em 0


#front-page-slider
	display none


#header-message-container
	height auto

	.header-message
		background $c_sec

		.header-message-photo
			display none

		.header-message-content
			width 100%
			height 100%
			color white
			text-align center
			padding 1em

			.message-inner
				-wrapper(1em, 1em, 95%)

				.message
					font-size 10vw
					line-height 1.1
					margin 0
					-ff-subtitle()

				.message-buttons
					width 90%
					-clearfix()
					margin 1em auto

					.ghost-button
						font-size 5vw
						-ff-subtitle()

#front-page-recent-posts
	.front-page-posts
		article
			border-color $c_text_lt


#front-page-instagram
	margin-bottom 2em

	.section-title
		a
			text-decoration none

			&:link
			&:visited
				color inherit

			&:hover
			&:active
				color $c_ter

	.soliloquy-container
		.soliloquy-wrapper
			margin 0 auto
			padding-bottom 2em


/* ==========================================================================
	Extras
   ========================================================================== */

#primary
	-soliloquy()


#loading
	-wrapper(0, 0, 3em)

	img
		width 100%
		height auto


.ninja-forms-cont
	textarea
	input[type="text"]
	input[type="email"]
		border-color  $c_text

		&:focus
			border-color $c_sec

	input[type="submit"]
		@extends .ghost-button-container .ghost-button
		font-weight 300
		color $c_text
		border-color $c_text
		background-color $c_bg
		border-width 2px
		font-weight 400

		&:hover
		&:active
			background-color $c_text_lt
			border-color $c_text_lt
			color $c_bg


/* ==========================================================================
	Media Queries
   ========================================================================== */

@require "partials/_media-queries.styl"
