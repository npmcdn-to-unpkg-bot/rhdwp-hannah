@require "partials/_global.styl"
@require "partials/_wp-core.styl"
@require "partials/_defaults.styl"
@require "partials/_fonts.styl"
@require "partials/_helpers.styl"
@require "partials/_metabar.styl"
@require "partials/_hamburger.styl"
@require "partials/_ghost-button.styl"


/* ==========================================================================
	Main Styles
   ========================================================================== */

html
body
#page
#main
	min-height 100%


html
	text-shadow 0 0 1px transparent
	width 100%
	font-size 16px
	margin 0
	font-family $ff_body
	font-weight 300
	color $c_text


body
	@extends html

	&.admin-bar
		#wpadminbar
			position fixed
			top 0


a
	outline 0 !important
	transition all 0.25s
	color $c_ter
	text-decoration none

	&:hover
	&:active
		text-decoration underline


input
textarea
	background-color $c_bg
	border 2px solid $c_sec
	box-sizing border-box
	padding 0.5em
	font-family $ff_body
	-placeholder-props( $ff_body, gray )
	outline 0 !important
	transition all 0.25s

	&:focus
		border-color $off_white


input[type="submit"]
	cursor pointer
	font-family $ff_body
	transition all 0.25s

	&:hover
		background-color gray


#page
	margin 0


#masthead
	position relative


#site-title
	-wrapper(0, 0, 96%)
	text-align center
	display block


#site-navigation-container
	width 100vw
	text-align center
	z-index 999
	display none

	#site-navigation
		list-style none
		padding-left 0
		margin 0.75em 0

		.menu-item
			display block
			font-size 1.1em
			line-height 1.8


.site-navigation
	li
		a
			color $c_text
			text-decoration none
			transition color 0.25s
			text-transform uppercase
			font-weight 300

			&:hover
			&:active
				color $c_ter


#hamburger
	position absolute
	top 0.5em
	right 0.5em


#main
	-wrapper()
	padding 2em 0
	box-sizing border-box


#primary
#secondary
	width 100%
	margin-top 1em
	position relative
	box-sizing border-box


#colophon
	width 100%
	position relative
	background $c_sec

	.site-info
		-wrapper(2em, 0, 75%)
		text-align center

		a
			color $c_text

			&:hover
			&:active
				color $c_ter
				text-decoration none

		img
			width 100%
			height auto

		#rhd-logo-footer
			width 1.35em
			height 1.35em
			margin 0 0.05em
			position relative
			bottom 0.25em


/* ==========================================================================
	Posts & Pages
   ========================================================================== */

.entry-title
.page-title
.widget-title
	margin-top 0
	line-height 1


.page-title
	-ff-headline()
	text-align center
	font-size 2em
	margin-bottom 1rem


.entry-title
	-ff-title()


.entry-summary
	p
		margin 0


.entry-content
	width 100%

	p
		margin 0.25em auto
		text-indent 0

		&[style*="text-align: center"]
			text-indent 0

		&:first-child
			margin-top 0

		&:last-child
			margin-bottom 0

	h1
	h2
	h3
	h4
	h5
	h6
		line-height 1.1

	ul
		padding-left 1em

	img
	iframe
		-wrapper(1em, 1em, 95%)

	img
		height auto
		display block

		&.alignleft
		&.alignright
			float none

	a
		img
			@extends .entry-content img


.entry-meta
	p
		margin 0


.blog-area
	article
		-clearfix()
		margin 1em auto

		&:first-child
			margin-top 0

		.entry-header
			text-align center
			margin-bottom 1em

			a
				color inherit

				&:hover
				&:active
					color $c_ter
					text-decoration none

			.entry-title
				margin 0 0 0.25rem 0

			.entry-details
				margin 0
				font-size 0.9em
				-ff-subtitle()

				.sep
					font-size 1.1em

		.entry-thumbnail
			width 100%
			height auto

			img
				width 100%
				height auto


.pagination
.single-pagination
	margin 1em auto
	font-size 1.1em
	-clearfix()

	.pag-link
	.pag-load-more
		-ghost-button-container()

		a
			-ghost-button()

	.pag-next
		float left

	.pag-prev
		float right

	.pag-load-more
		display block
		margin 0 auto


/* ==========================================================================
	Comments
   ========================================================================== */

#comments
	margin 2em auto

	.comment-list
		list-style none
		padding-left 0

		ul
		ol
			@extends #comments .comment-list

		.children
			padding 0 1.5em

		.comment
			&:last-child
				padding-bottom 1.5em

	.even
		background $off_white

	.odd
		background $near_white

	.comment-body
		padding 1em
		box-sizing border-box

	textarea
		max-width 100%

	#commentform
		width 100%
		min-width 18rem
		max-width 100%

		p
			margin-bottom 0.75rem

		input
		textarea
			width 100%
			font-size 0.8em
			box-sizing border-box
			padding 0.5em
			display inline-block

		#submit
			width auto
			padding-left 0.8em
			cursor pointer

		.comment-subscription-form
			margin initial


/* ==========================================================================
	Widget Areas & Sidebars
   ========================================================================== */

#secondary
	.widget
		width 100%
		margin-bottom 1.5em

	.widget:last-child
		margin-bottom 0

	.widget-title
		margin-top 0


/* ==========================================================================
	Extras
   ========================================================================== */

#primary
	-soliloquy()


/* ==========================================================================
	Media Queries
   ========================================================================== */

@require "partials/_media-queries.styl"