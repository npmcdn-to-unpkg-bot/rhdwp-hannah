@require "partials/_global.styl"
@require "partials/_wp-core.styl"
@require "partials/_defaults.styl"
@require "partials/_fonts.styl"
@require "partials/_helpers.styl"
@require "partials/_metabar.styl"
@require "partials/_hamburger.styl"
@require "partials/_ghost-button.styl"


/* ==========================================================================
	Main Styles
   ========================================================================== */

html
body
#page
#main
	min-height 100%


html
	text-shadow 0 0 1px transparent
	width 100%
	font-size 16px
	margin 0
	font-family $ff_body
	font-weight 400
	color $c_text


body
	@extends html

	&.admin-bar
		#wpadminbar
			position fixed
			top 0


a
	outline 0 !important
	transition color 0.25s ease
	color $c_sec
	text-decoration none

	&:hover
	&:active
		text-decoration underline


input
textarea
	background-color $c_bg
	border 2px solid $c_sec
	box-sizing border-box
	padding 0.5em
	font-family $ff_body
	-placeholder-props( $ff_body, gray )
	outline 0 !important
	transition all 0.25s

	&:focus
		border-color $off_white


input[type="submit"]
	cursor pointer
	font-family $ff_body
	transition all 0.25s

	&:hover
		background-color gray


#page
	margin 0


#navbar
	width 100%
	height $navHt
	display block
	position fixed
	top 0
	left 0
	background $c_header
	color $c_text_lt
	z-index 999


#masthead
	height $navHt
	margin 0

	.nav-dropdown
		background $c_bg
		position absolute
		top $navHt
		left 0
		display none

		.site-title
			margin-top 1em
			display block


#site-title
	-invisible()


.site-title
	text-align center


.site-title-link
	img
		width auto
		height 90%
		-vcenter()
		left 0.5em


#site-navigation-container
	width 100vw
	text-align center
	padding-bottom 1rem
	z-index 999
	box-shadow 3px 3px 7px -4px $c_text

	#site-navigation
		list-style none
		padding-left 0
		margin 0.75em 0

		.menu-item
			display block
			font-size 1.1em
			line-height 1.8

			a
				text-transform uppercase


.site-navigation
	li
		-ff-headline()

		a
			color $c_text
			text-decoration none
			transition color 0.25s
			text-transform uppercase

			&:hover
			&:active
				color $c_ter


#hamburger
	right 1em
	-vcenter()


#main
	-wrapper()
	padding ($navHt+1em) 0 2em 0
	box-sizing border-box


#primary
#secondary
	width 100%
	margin-top 1em
	position relative
	box-sizing border-box


#colophon
	width 100%
	position relative
	background $c_ter
	color $c_bg
	padding-bottom 2em

	.site-info
		-wrapper(0, 0, 75%)
		text-align center

		p
			margin 0
			padding 1em 0

		a
			color inherit

			&:hover
			&:active
				text-decoration underline

		img
			width 100%
			height auto

	.social
		-wrapper()
		padding-top 2em

		.footer-social
			width 40%
			display block
			margin 0 auto
			position relative
			left 3%

		.widget-rhd-social-icons
			text-align center
			position relative
			top 1em
			padding-bottom 3em

			.rhd-social-icon
				width 3.5em
				position relative
				margin 0 -0.25em

				&:nth-of-type(1)
				&:nth-of-type(3)
					bottom 3em

	.newsletter
		-wrapper()

		.widget-title
			text-align center
			margin-top 0
			font-size 1.3em

		.rhd-mc-subscribe
			input
				border none

				&:focus
					background $off_white

			.rhd-mc-fname
			.rhd-mc-lname
			.rhd-mc-email
				font-family $ff_body
				-placeholder-props( $ff_body )

			.rhd-mc-fname
			.rhd-mc-lname
				width 49%

			.rhd-mc-fname
				float left

			.rhd-mc-lname
				float right

			.rhd-mc-email
			.rhd-mc-submit
				width 100%

			.rhd-mc-submit
				margin-left 0
				-ghost-button()
				background $c_ter
				color $c_bg
				border-color $c_bg
				border-width 2px
				margin-top 0.25em

				&:hover
				&:active
					background $c_bg
					color $c_ter


/* ==========================================================================
	Posts & Pages
   ========================================================================== */

.entry-header
	text-align center
	margin-bottom 1em

	a
		color inherit

		&:hover
		&:active
			color $c_ter
			text-decoration none

	.entry-title
		margin 0 0 0.25rem 0

	.entry-details
		margin 0
		font-size 0.9em
		-ff-subtitle()

		.sep
			font-size 1.1em


.entry-thumbnail
	width 100%
	height auto

	img
		width 100%
		height auto


.page-title
.archive-title
	-ff-headline()
	text-align center
	font-size 2em
	margin-bottom 1rem


.page-title
	line-height 1


.page-title-default
	-invisible()


.entry-title
	-ff-title()


.entry-summary
	p
		margin 0


.entry-content
	width 100%

	p
		margin 0.5em auto
		text-indent 0

		&[style*="text-align: center"]
			text-indent 0

		&:first-child
			margin-top 0

		&:last-child
			margin-bottom 0

	h1
	h2
	h3
	h4
	h5
	h6
		line-height 1.1

	ul
		padding-left 1em


	img
	iframe
		max-width 100%

	img
		height auto
		display block
		-wrapper(1em, 1em, 95%)

		&.alignleft
		&.alignright
			float none

	a
		img
			@extends .entry-content img


.entry-meta
	p
		margin 0


.entry-details
	margin 0
	font-size 0.9em
	-ff-subtitle()


.blog-area
	article
		-clearfix()
		margin 1em auto

		&:first-child
			margin-top 0


.pagination
.single-pagination
	margin 1em auto
	font-size 1.1em
	-clearfix()

	.pag-link
	.pag-load-more
		-ghost-button-container()

		a
			-ghost-button()

	.pag-next
		float left

	.pag-prev
		float right

	.pag-load-more
		display block
		margin 0 auto


/* ==========================================================================
	Full-Width Pages ("Big Image" functionality)
   ========================================================================== */

.page-template-template-full-width
	#main
		width 100%
		max-width none

	.entry-content
		display block

		& > *
			-wrapper(1em, 1em)

		.rhd-big-image-container
			width 100%
			height 500px
			height 100vh
			max-width none
			position relative
			overflow hidden
			display block

			.rhd-big-image
				width 100%
				height 100%
				display block
				position absolute

				img
					width auto
					height auto
					min-width 100%
					min-height 100%
					-vhcenter()
					display block


/* ==========================================================================
	CTA Buttons
   ========================================================================== */

.rhd-cta-buttons
	.cta-buttons
		list-style none
		padding-left 0

		.cta-button-item
			width 100%
			display block
			padding 1em

			&:last-child
				margin-bottom 0

			.cta-button-link
				width 100%
				display inline-block
				color $c_bg
				text-decoration none

				.cta-button
					background $c_sec
					color $c_bg
					text-align center
					padding 1.5em
					margin-bottom 1em
					transition background 0.25s ease

					&:hover
					&:active
						background $c_sec_lt

					.cta-label
						-ff-headline()
						font-size 300%
						text-transform uppercase
						margin 0 0 1.5rem 0
						letter-spacing 0.25em
						padding-left 6% // centering tweak

					.cta-subtitle
						font-size 1em
						font-weight 700
						line-height 1.2

			.cta-text-desc
				text-align center

		.cta-break
			width 100%
			height 0.25em
			margin 0.5em 0
			background $c_quat
			border none


/* ==========================================================================
	Post Grids / Subcategory Grids
   ========================================================================== */

.post-grid
	-flexbox()

	.post-grid-item
		width 47%
		-flexitem()
		vertical-align top
		margin 0

		.entry-title
			font-size 1em
			line-height 1.2
			text-align center
			margin-top 1em
			text-transform uppercase

			a
				color inherit
				text-decoration none

				&:hover
				&:active
					color $c_sec

		.entry-details
			font-size 0.8em


.subcat-grid-container
	margin-bottom 1em
	padding-bottom 1em
	border-bottom 2px solid $c_ter

	&:last-child
		border-bottom none

	.subcat-title
		padding-bottom 0.25em
		border-bottom 1px solid $c_sec_lt


.subcat-more
	.ghost-button-container
		margin-top 0


/* ==========================================================================
	Comments
   ========================================================================== */

#comments
	margin 2em auto

	.comment-list
		list-style none
		padding-left 0

		ul
		ol
			@extends #comments .comment-list

		.children
			padding 0 1.5em

		.comment
			&:last-child
				padding-bottom 1.5em

	.even
		background $off_white

	.odd
		background $near_white

	.comment-body
		padding 1em
		box-sizing border-box

	textarea
		max-width 100%

	#commentform
		width 100%
		min-width 18rem
		max-width 100%

		p
			margin-bottom 0.75rem

		label
			display block

		input
		textarea
			width 100%
			font-size 0.8em
			box-sizing border-box
			padding 0.5em
			display inline-block

		#submit
			width auto
			padding-left 0.8em
			cursor pointer
			border-width 2px
			-ghost-button()

		.comment-subscription-form
			margin initial


/* ==========================================================================
	Widget Areas & Sidebars
   ========================================================================== */

#secondary
	.widget
		width 100%
		margin-bottom 1.5em

	.widget:last-child
		margin-bottom 0

	.widget-title
		@extends .entry-title
		text-align center


/* ==========================================================================
	Extras
   ========================================================================== */

#primary
	-soliloquy()


.ninja-forms-required-items
.ninja-forms-req-symbol
	-invisible()


/* ==========================================================================
	Media Queries
   ========================================================================== */

@require "partials/_desktop.styl"
