/* ==========================================================================
	Media Queries
   ========================================================================== */

@media screen and (min-width 40em)
	#masthead
		#site-title
			width 50%
			top 42%

	#site-navigation-container
		height 4em
		display block
		position absolute
		bottom 0
		background $color1

		#site-navigation
			top 1.5em

	#hamburger
		display none

	.news-item
		width 100%
		text-align left

		.news-item-inner
			-wrapper(0, 0, 80%)
			-clearfix()

		.post-featured-image
			width 35%
			max-width 300px
			margin 0
			float left

		.entry-content
			width 60%
			float right
			position absolute
			right 0
			top 50%
			-transform(translateY(-50%))

		.entry-meta
			position absolute
			right 0
			bottom 0

	// Grids
	// (Front Page, Portfolio)
	.front-page
	.page-id-10
		#content
			-flexbox()

			.grid-item
				width 30%
				-flexitem()

	// About
	.page-id-8
		#content
			-clearfix()

			.entry-header
				& > .page-title
					display none

			.entry-content
				width 64%
				float right

			.about-sidebar
				width 33%
				float left

				.page-title-sidebar
					display inline-block

	// Portfolio
	.page-id-10
		#portfolio-category-list
			width 100%
			display inline-block
			-flexbox()

			.portfolio-link
				-flexitem()

				a
					text-decoration none

	// Contact
	.page-id-13
		.entry-content
			-clearfix()

			.rhd-contact-form
				width 48%
				float left

				.ninja-forms-cont
					input
						&[type="submit"]
							float left

			.contact-info
				width 45%
				float right