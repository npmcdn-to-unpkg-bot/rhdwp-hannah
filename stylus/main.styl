@require "partials/_global.styl"
@require "partials/_wp-core.styl"
@require "partials/_defaults.styl"
@require "partials/_fonts.styl"
@require "partials/_helpers.styl"
@require "partials/_metabar.styl"
@require "partials/_hamburger.styl"
@require "partials/_ghost-button.styl"


/* ==========================================================================
	Main Styles
   ========================================================================== */

html
body
#page
#main
	min-height 100%


html
	text-shadow 0 0 1px transparent
	width 100%
	font-size 16px
	margin 0
	font-family $ff_body
	font-weight 300
	color $c_text


body
	@extends html

	&.admin-bar
		#wpadminbar
			position fixed
			top 0


a
	outline 0 !important
	transition all 0.25s
	color $c_sec
	text-decoration none

	&:hover
	&:active
		text-decoration underline


input
textarea
	background-color $c_bg
	border 2px solid $c_sec
	box-sizing border-box
	border-radius 0.1em
	padding 0.5em
	font-family $ff_title !important
	-placeholder-props( $ff_title, gray )
	outline 0 !important
	transition all 0.25s

	&:focus
		border-color $c_sec_lt


input[type="submit"]
	cursor pointer
	font-family $ff_body
	transition all 0.25s

	&:hover
		background-color gray


#page
	margin 0


#header
	width 100%
	position relative
	padding-top $navHt


#navbar
	width 100%
	height $navHt
	display block
	position fixed
	top 0
	left 0
	background $c_header
	color $c_text_lt
	z-index 999

	.navbar-inner
		height @height
		margin 0

	.nav-dropdown
		background $c_bg
		position absolute
		top $navHt
		left 0
		display none

		.site-title
			margin-top 1em
			display block


.site-title
	-wrapper(0, 0, 75%, 30rem)
	text-align center


#site-title
	padding 1em 0 2em
	display block


#site-navigation-container
	width 100vw
	text-align center
	padding-bottom 1rem
	z-index 999
	box-shadow 3px 3px 7px -4px $c_text

	#site-navigation
		list-style none
		padding-left 0
		margin 0.75em 0

		.menu-item
			display block
			font-size 1.1em
			line-height 1.8

			a
				-ff-title()
				text-transform uppercase


.site-navigation
	li
		a
			color $c_text_lt
			text-decoration none
			transition color 0.25s
			text-transform uppercase
			font-weight 300

			&:hover
			&:active
				color $c_sec


#hamburger
	top 50%
	right 1em
	-vcenter()


#header-search
	width 65%
	height 75%
	-vcenter()
	right 3em

	.search-form
	div
	input
		height 100%

	input
		background-color transparent
		border none

	.search-form
		-clearfix()

		.search-field
			width 130%
			-vcenter()
			font-size 1em
			background-color white
			padding-right 2.3em
			right -0.35em
			-ff-subtitle()
			letter-spacing 0.5px

			&:focus
				border-color $c_ter

		.search-submit
			width 1.5rem
			margin-left 0.5em
			right 0
			-vcenter()
			z-index 999
			background url('../img/search.png') no-repeat center
			background-size 90% auto
	
	.close-search	
		-vcenter()
		right 1.7em
		font-weight 400
		color $c_text_lt
		font-size 1.1em
		display none
		text-decoration none
		
		&:hover
		&:active
			text-decoration @text-decoration


#main
	box-sizing border-box


#content-wrapper
	-wrapper()


#primary
#secondary
	width 100%
	margin-top 1em
	position relative
	box-sizing border-box


#colophon
	width 100%
	position relative

	.site-info
		background $c_ter
		padding 1em 0
		text-align center
		-ff-title()
		color $c_text_lt

		p
			margin 0

		a
			color @color

			&:hover
			&:active
				color $c_sec
				text-decoration none

		img
			width 100%
			height auto

		#rhd-logo-footer
			width 1.35em
			height 1.35em
			margin 0 0.05em
			position relative
			bottom 0.25em


#header-widget-area
	display none


#footer-widget-area
	-wrapper(2em, 2em)

	.widget-title
		-ff-courier()
		color $c_text

	.widget_rhd_social_icons
		-wrapper(0, 0, 100%, 50rem)
	
	.rhd_social_icons
		width 100%
		margin 1em 0
	
		.rhd-social-icon
			width 6%
			margin 0 1%


/* ==========================================================================
	Posts & Pages
   ========================================================================== */

.entry-title
.page-title
.widget-title
	margin-top 0
	line-height 1
	text-align center


.page-title
.widget-title
	-ff-headline()
	text-align center


.entry-title
	-ff-title()
	color $c_text_lt


.page-title
	font-size 3em
	margin-bottom 1rem


.widget-title
	color $c_sec
	font-size 2.5em


.entry-summary
	p
		margin 0


.entry-content
	width 100%

	p
		margin 0.5em auto
		text-indent 0

		&[style*="text-align: center"]
			text-indent 0

		&:first-child
			margin-top 0

		&:last-child
			margin-bottom 0

	h1
	h2
	h3
	h4
	h5
	h6
		line-height 1.1

	ul
		padding-left 1em

	img
	iframe
		-wrapper(1em, 1em, 95%)

	img
		height auto
		display block

		&.alignleft
		&.alignright
			float none

	a
		img
			@extends .entry-content img


.entry-meta
	p
		margin 0


.blog-area
	article
		-clearfix()
		margin 1em auto

		&:first-child
			margin-top 0

		.entry-header
			text-align center
			margin-bottom 1em

			a
				color inherit

				&:hover
				&:active
					color $c_ter
					text-decoration none

			.entry-title
				margin 0 0 0.25rem 0

			.entry-details
				margin 0
				font-size 0.9em
				-ff-subtitle()

				.sep
					font-size 1.1em

		.entry-thumbnail
			width 100%
			height auto

			img
				width 100%
				height auto


.pagination
.single-pagination
	margin 1em auto
	font-size 1.1em
	-clearfix()

	.pag-link
	.pag-load-more
		-ghost-button-container()

		a
			-ghost-button()

	.pag-next
		float left

	.pag-prev
		float right

	.pag-load-more
		display block
		margin 0 auto


/* ==========================================================================
	Comments
   ========================================================================== */

#comments
	margin 2em auto

	.comment-list
		list-style none
		padding-left 0

		ul
		ol
			@extends #comments .comment-list

		.children
			padding 0 1.5em

		.comment
			&:last-child
				padding-bottom 1.5em

	.even
		background $off_white

	.odd
		background $near_white

	.comment-body
		padding 1em
		box-sizing border-box

	textarea
		max-width 100%

	#commentform
		width 100%
		min-width 18rem
		max-width 100%

		p
			margin-bottom 0.75rem

		input
		textarea
			width 100%
			font-size 0.8em
			box-sizing border-box
			padding 0.5em
			display inline-block

		#submit
			width auto
			padding-left 0.8em
			cursor pointer

		.comment-subscription-form
			margin initial


/* ==========================================================================
	Widget Areas & Sidebars
   ========================================================================== */

#secondary
	.widget
		width 100%
		margin-bottom 1.5em

	.widget:last-child
		margin-bottom 0

	.widget-title
		margin-top 0


/* ==========================================================================
	Front Page
   ========================================================================== */

.front-page
	#content-wrapper
		-unwrapper()
	
	#content
		> section
			-wrapper(2em, 2em, 90%)
		
			.section-title
				@extends .page-title
				font-size 2.2em
				color $c_sec
			
			.rhd-recent-posts
				-wrapper(2em, 2em)


#front-page-intro
	article
		-wrapper(0, 0, 90%)

	.intro-hi
		text-align center
		color $c_ter
		font-size 6em
		-ff-headline()
		line-height 0.7
	
	.intro-content
		-wrapper()
		
		p
			margin 0


/* ==========================================================================
	Extras
   ========================================================================== */

#primary
	-soliloquy()
	

.goldsep
	width 100%
	height $sep_h
	background-image url($updir + '/2016/05/goldleaf.jpg')
	background-repeat repeat
	background-size cover


.rhd-mailchimp-container
	margin 1em 0
	
	.rhd-mc-subscribe
		text-align center
	
	.widget-title
		-ff-courier()
		color $c_text
		margin-bottom 0.25em
		
	.rhd-mc-submit
		margin 0 auto
		-ghost-button()
		display block
		border-width 2px
		font-size 1em
		padding-top 0.375em
		padding-bottom 0.375em


// Recent Posts
.recent-post
	a
		text-decoration none
		
		.entry-title
			margin-top 0.5em		
			color $c_text
			transition all 0.25s
			
	&:hover
	&:active
		.entry-title
			color $c_sec


// Picture Frames
.rhd-picture-frame
	width 100% // fit to container
	max-width 800px
	position relative
	-transform(rotate(3.5deg))
	
	.frame
		width 100%
		height auto
		position relative
	
	.framed-picture
		width 100%
		height 100%
		position absolute
		top 0
		left 0
		
		img
			width 71%
			height auto
			display block
			-vhcenter(absolute, 0, -3%)


// Featured Categories
.featured-cats
	-delist()
	
	.featured-cat
		position relative
		
		.featured-cat-thumbnail
			width 100%
			position relative
			margin 1em 0

			img
				width @width
				height auto
			
			.overlay
				width @width
				height 100%
				position absolute
				top 0
				left 0
				background-color $c_ter
				-opacity(0.45)
		
		.featured-cat-title
			-vcenter()
			-ff-headline()
			width 100%
			left 0
			margin 0
			line-height 1
			color $c_bg
			font-size 16vw
			text-align center
			


/* ==========================================================================
	Media Queries
   ========================================================================== */

@require "partials/_media-queries.styl"