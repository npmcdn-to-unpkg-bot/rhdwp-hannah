@require "partials/_global.styl"
@require "partials/_wp-core.styl"
@require "partials/_defaults.styl"
@require "partials/_fonts.styl"
@require "partials/_helpers.styl"
@require "partials/_metabar.styl"
@require "partials/_hamburger.styl"


/* ==========================================================================
	Main Styles
   ========================================================================== */

html
body
#page
#main
	min-height 100%


html
	text-shadow 0 0 1px transparent
	width 100%
	font-size 16px
	margin 0
	font-family $ff_body
	font-weight 300
	color $c_text


body
	@extends html

	&.admin-bar
		#wpadminbar
			position fixed
			top 0


a
	outline 0 !important
	text-decoration none
	transition all 0.25s

	&:link
	&:visited
		color $c_sec

	&:hover
	&:active
		color $c_ter


input
textarea
	background-color white
	border 2px solid $c_sec
	box-sizing border-box
	padding 0.5em
	font-family $ff_body
	-placeholder-props( $ff_body, gray )
	outline 0 !important
	transition all 0.25s

	&:focus
		border-color $off_white


input[type="submit"]
	cursor pointer
	font-family $ff_body
	transition all 0.25s

	&:hover
		background-color gray


#page
	margin 2em 0


#site-title
	text-align center
	margin 0
	-ff-headline()


#site-navigation-container
	width 100%
	text-align center
	display none

	#site-navigation
		list-style none
		padding-left 0
		margin 0
		-flexbox()

		.menu-item
			-flexitem()

			.sub-menu
				position absolute
				padding-left 0
				line-height 1.7
				margin-top 0.2em
				z-index 999 !important

				li
					display block
					margin 0


#site-navigation-sb-container
	#site-navigation-sb
		list-style none


.site-navigation
	li
		a
			color $c_sec
			text-decoration none
			transition color 0.25s

			&:hover
			&:active
				color $off_white


#hamburger
	background-color black // sample bg animation color

	&.is-active
		background-color gray // sample bg animation color

		&.c-hamburger--htx
			span
				background none


#main
	-wrapper()
	padding 2em 0
	box-sizing border-box


#primary
#secondary
	width 100%
	margin-top 1em
	position relative
	box-sizing border-box


#secondary
	margin-bottom 2em


#colophon
	width 100%
	height 6em
	position relative
	background $c_sec

	.site-info
		width 100%
		margin 0
		position absolute
		top 50%
		left 0
		-transform(translateY(-50%))
		text-align center
		line-height 1.7
		font-size 0.9em

		a
			color $c_text

			&:hover
			&:active
				color (@color)
				text-decoration underline

	#rhd-logo-footer
		width 1.35em
		height 1.35em
		margin 0 0.05em
		position relative
		bottom 0.25em


/* ==========================================================================
	Posts & Pages
   ========================================================================== */

.entry-title
.page-title
.widget-title
	margin-top 0
	line-height 1
	-ff-title()


.entry-content
	width 100%

	p
		margin 0.25em auto
		text-indent 0

		&[style*="text-align: center"]
			text-indent 0

		&:first-child
			margin-top 0

		&:last-child
			margin-bottom 0

	h1
	h2
	h3
	h4
	h5
	h6
		line-height 1.1

	ul
		padding-left 1em

	img
	iframe
		-wrapper(1em, 1em, 95%)

	img
		height auto
		display block

		&.alignleft
		&.alignright
			float none

	a
		img
			@extends .entry-content img


.entry-meta
	p
		margin 0


.blog-area
	#main
		.post
			-clearfix()
			border 2px solid $c_sec
			padding 1em

			.entry-header
				text-align center
				margin-bottom 1em
				padding-bottom 1em
				border-bottom 1px solid $c_text

				.entry-title
					margin 0 0 0.25rem 0

					a
						color inherit

						&:hover
						&:active
							color $c_ter

				.entry-details
					margin 0
					font-size 0.9em
					-ff-subtitle()

					.sep
						font-size 1.1em


.pagination
.single-pagination
	margin 1em auto
	font-size 1.1em
	-clearfix()

	.pag-next
	[rel="prev"]
		float left

	.pag-prev
	[rel="next"]
		float right


/* ==========================================================================
	Comments
   ========================================================================== */

#comments
	margin 2em auto

	.comment-list
		list-style none
		padding-left 0

		ul
		ol
			@extends #comments .comment-list

		.children
			padding 0 1.5em

		.comment
			&:last-child
				padding-bottom 1.5em

	.even
		background $off_white

	.odd
		background white

	.comment-body
		padding 1em
		box-sizing border-box

	textarea
		max-width 100%

	#commentform
		width 100%
		min-width 18rem
		max-width 100%

		p
			margin-bottom 0.75rem

		input
		textarea
			width 100%
			font-size 0.8em
			box-sizing border-box
			padding 0.5em
			display inline-block

		#submit
			width auto
			padding-left 0.8em
			cursor pointer

		.comment-subscription-form
			margin initial


/* ==========================================================================
	Widget Areas & Sidebars
   ========================================================================== */

#secondary
	.widget
		width 100%
		margin-bottom 1.5em

	.widget:last-child
		margin-bottom 0


	.widget-title
		margin-top 0

/* ==========================================================================
	Extras
   ========================================================================== */

-soliloquy()


/* ==========================================================================
	Media Queries
   ========================================================================== */

@media screen and (min-width 40em)
	#site-navigation-container
		display block

		#site-navigation
			line-height 0

			.menu-item
				line-height 2

	#hamburger
		display none

	#comments
		#commentform
			width 75%

			p
				margin-bottom 0.75rem

			input
				&[type="text"]
				&[type="email"]
					width 75%

			#submit
				width auto
				padding-left 0.8em

	.entry-content
		img
		iframe
			width initial
			-unwrapper(initial)

		img
			&.alignleft
				margin-right 1em
				float left

			&.alignright
				margin-left 1em
				float right

			&.aligncenter
				margin 0 auto

		a
			img
				@extends .entry-content img


// Fixed-width 340px sidebar
@media screen and (min-width 40em)
	#main
		-clearfix()

	#primary
		float right

	#secondary
		width 340px
		float left

		.widget
			width 300px
			margin-left auto
			margin-right auto


@media screen and (min-width 58em)
	#primary
		width 56%


@media screen and (min-width 62em)
	#primary
		width 58%


@media screen and (min-width 64em)
	#primary
		width 60%


@media screen and (min-width 66em)
	#primary
		width 64%
