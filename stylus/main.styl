@require "partials/_global.styl"
@require "partials/_wp-core.styl"
@require "partials/_defaults.styl"
@require "partials/_fonts.styl"
@require "partials/_helpers.styl"
@require "partials/_metabar.styl"
@require "partials/_hamburger.styl"
@require "partials/_ghost-button.styl"


/* ==========================================================================
	Main Styles
   ========================================================================== */

html
body
#page
#main
	min-height 100%


html
	text-shadow 0 0 1px transparent
	width 100%
	font-size 16px
	margin 0
	font-family $ff_body
	font-weight 300
	color $c_text


body
	@extends html

	&.admin-bar
		#wpadminbar
			position fixed
			top 0


a
	outline 0 !important
	transition all 0.25s
	color $c_ter
	text-decoration none

	&:hover
	&:active
		text-decoration underline


input
textarea
	background-color $c_bg
	border 2px solid $c_sec
	box-sizing border-box
	padding 0.5em
	font-family $ff_body
	-placeholder-props( $ff_body, gray )
	outline 0 !important
	transition all 0.25s

	&:focus
		border-color $off_white


input[type="submit"]
	cursor pointer
	font-family $ff_body
	transition all 0.25s

	&:hover
		background-color gray


#page
	margin 0


#masthead
	-copperborder()

	.border-inner
		position relative
		background url(../img/herringbone.jpg) repeat


#site-title
	-wrapper(0, 0, 96%)
	padding 1.3em 0 0.5em
	display block


#site-navigation-container
	width 100vw
	text-align center
	position absolute // set by JS
	background $c_bg
	z-index 999
	display none
	box-shadow 3px 3px 7px -4px $c_text

	#site-navigation
		list-style none
		padding-left 0
		margin 0.75em 0

		.menu-item
			display block
			font-size 1.1em
			line-height 1.8


.site-navigation
	li
		a
			color $c_text
			text-decoration none
			transition color 0.25s
			text-transform uppercase
			font-weight 300

			&:hover
			&:active
				color $c_ter


#hamburger
	position absolute
	top 0.5em
	right 0.5em


#main
	-wrapper()
	padding 2em 0
	box-sizing border-box


#primary
#secondary
	width 100%
	margin-top 1em
	position relative
	box-sizing border-box


#secondary
	margin-bottom 2em


#colophon
	width 100%
	height 6em
	position relative
	background $c_sec

	.site-info
		width 100%
		margin 0
		position absolute
		top 50%
		left 0
		-transform(translateY(-50%))
		text-align center
		line-height 1.7
		font-size 0.9em

		a
			color $c_text

			&:hover
			&:active
				color @color
				text-decoration underline

	#rhd-logo-footer
		width 1.35em
		height 1.35em
		margin 0 0.05em
		position relative
		bottom 0.25em


/* ==========================================================================
	Posts & Pages
   ========================================================================== */

.entry-title
.page-title
.widget-title
	margin-top 0
	line-height 1
	-ff-title()


.entry-content
	width 100%

	p
		margin 0.25em auto
		text-indent 0

		&[style*="text-align: center"]
			text-indent 0

		&:first-child
			margin-top 0

		&:last-child
			margin-bottom 0

	h1
	h2
	h3
	h4
	h5
	h6
		line-height 1.1

	ul
		padding-left 1em

	img
	iframe
		-wrapper(1em, 1em, 95%)

	img
		height auto
		display block

		&.alignleft
		&.alignright
			float none

	a
		img
			@extends .entry-content img


.entry-meta
	p
		margin 0


.blog-area
	article
		-clearfix()
		border-width 2px
		border-style solid
		margin 1em auto

		&.rhd-full-post
			border-color $c_text_lt
			padding 1em

			.entry-header
				padding-bottom 1em
				border-bottom 1px solid $c_text

		&.rhd-excerpt-post
			border-color $c_text_lt

			.entry-header
				margin-bottom 0

				.entry-title
					padding 0.5em 0
					margin 0

				.entry-details
					display none

			.entry-thumbnail
				border-top 2px solid $c_sec
				border-bottom 2px solid $c_sec

			.ghost-button-container
				margin-bottom 0

		&:first-child
			margin-top 0

		.post-inner
			width 100%
			padding 1em

		.entry-header
			text-align center
			margin-bottom 1em

			a
				color inherit

				&:hover
				&:active
					color $c_ter
					text-decoration none

			.entry-title
				margin 0 0 0.25rem 0

			.entry-details
				margin 0
				font-size 0.9em
				-ff-subtitle()

				.sep
					font-size 1.1em

		.entry-thumbnail
			width 100%
			height auto

			img
				width 100%
				height auto


.pagination
.single-pagination
	margin 1em auto
	font-size 1.1em
	-clearfix()

	.pag-link
		@extends .ghost-button-container

		a
			@extends .ghost-button-container .ghost-button

	.pag-next
		float left

	.pag-prev
		float right


/* ==========================================================================
	Comments
   ========================================================================== */

#comments
	margin 2em auto

	.comment-list
		list-style none
		padding-left 0

		ul
		ol
			@extends #comments .comment-list

		.children
			padding 0 1.5em

		.comment
			&:last-child
				padding-bottom 1.5em

	.even
		background $off_white

	.odd
		background white

	.comment-body
		padding 1em
		box-sizing border-box

	textarea
		max-width 100%

	#commentform
		width 100%
		min-width 18rem
		max-width 100%

		p
			margin-bottom 0.75rem

		input
		textarea
			width 100%
			font-size 0.8em
			box-sizing border-box
			padding 0.5em
			display inline-block

		#submit
			width auto
			padding-left 0.8em
			cursor pointer

		.comment-subscription-form
			margin initial


/* ==========================================================================
	Widget Areas & Sidebars
   ========================================================================== */

#secondary
	.widget
		width 100%
		margin-bottom 1.5em

	.widget:last-child
		margin-bottom 0


	.widget-title
		margin-top 0


/* ==========================================================================
	Front Page
   ========================================================================== */

.front-page
	#main
		width 100%
		max-width none
		padding 0
		-copperborder()

		.main-inner
			background $c_bg
			padding-bottom 1em

	#primary
		#content
			width 100%
			padding 0 7.5%

	.section-title
		-ff-headline()
		font-size 200%
		text-align center
		margin-bottom 0.5em


#front-page-slider
#header-message-container
#front-page-instagram
	width 100%
	-copperborder()

	.border-inner
		background $c_bg


#front-page-slider
	display none


#header-message-container
	.border-inner
		height auto

		.header-message
			background $c_sec

			.header-message-photo
				display none

				img
					display @display

			.header-message-content
				width 100%
				height 100%
				color white
				text-align center
				padding 1em

				.message-inner
					-wrapper(1em, 1em, 95%)

					.message
						font-size 10vw
						line-height 1.1
						margin 0
						-ff-subtitle()

					.message-buttons
						width 90%
						-clearfix()
						margin 1em auto 0

						.ghost-button
							font-size 5vw
							-ff-subtitle()

#front-page-recent-posts
	.front-page-posts
		article
			border-color $c_text_lt

#front-page-instagram
	.border-inner
		height 20em


/* ==========================================================================
	Extras
   ========================================================================== */

-soliloquy()


/* ==========================================================================
	Media Queries
   ========================================================================== */

@require "partials/_media-queries.styl"


/* ==========================================================================
	TEMPORARY
   ========================================================================== */

.entry-meta
	display none