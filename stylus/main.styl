@require "partials/_global.styl"
@require "partials/_wp-core.styl"
@require "partials/_defaults.styl"
@require "partials/_fonts.styl"
@require "partials/_helpers.styl"
@require "partials/_metabar.styl"
@require "partials/_featured-categories.styl"
@require "partials/_hamburger.styl"
@require "partials/_ghost-button.styl"


/* ==========================================================================
	Main Styles
   ========================================================================== */

html
body
#page
#main
	min-height 100%


html
	text-shadow 0 0 1px transparent
	width 100%
	font-size 16px
	margin 0
	font-family $ff_body
	font-weight 300
	color $c_text


body
	@extends html

	&.admin-bar
		#wpadminbar
			position fixed
			top 0


a
	outline 0 !important
	transition color 0.25s
	color $c_sec
	text-decoration none

	&:hover
	&:active
		text-decoration underline


input
textarea
	background-color $c_bg
	border 2px solid $c_sec
	box-sizing border-box
	border-radius 0.1em
	padding 0.5em
	font-family $ff_title !important
	-placeholder-props( $ff_title, gray )
	outline 0 !important
	transition all 0.25s

	&:focus
		border-color $c_sec_lt


input[type="submit"]
	cursor pointer
	font-family $ff_body
	transition all 0.25s

	&:hover
		background-color gray


#page
	margin 0


#header
	width 100%
	position relative
	padding-top $navHt


#navbar
	width 100%
	height $navHt
	display block
	position fixed
	top 0
	left 0
	background $c_header
	color $c_text_lt
	z-index 999
	transition 0.25s height ease

	.navbar-inner
		height @height
		margin 0

	.site-title-mini
		width auto
		height 84%
		-vcenter()
		left 1em
		z-index 999

		img
			width auto
			height 100%

	.nav-dropdown
		background $c_bg
		position absolute
		top $navHt
		left 0
		display none


.site-title
	text-align center


.site-title-link
	-wrapper(0, 0, 75%, 30rem)
	display block


#site-title
	padding 1em 0 2em
	display block


#site-navigation-container
	width 100vw
	text-align center
	padding-bottom 1rem
	z-index 999
	box-shadow 3px 3px 7px -4px $c_text

	#site-navigation
		list-style none
		padding-left 0
		margin 0.75em 0

		.menu-item
			display block
			font-size 1.1em
			line-height 1.8

			a
				-ff-title()
				text-transform uppercase


.site-navigation
	li
		a
			color $c_text_lt
			text-decoration none
			transition color 0.25s
			text-transform uppercase
			font-weight 300

			&:hover
			&:active
				color $c_sec


#hamburger
	top 50%
	right 1em
	-vcenter()


#header-search
	width 65%
	height 75%
	-vcenter()
	right 3em
	z-index 0

	&.is-active
		z-index 999

	.search-form
	div
	input
		height 100%

	input
		background-color transparent
		border none

	.search-form
		.search-field
			width 0
			-vcenter()
			font-size 1em
			background-color white
			right -0.35em
			-ff-subtitle()
			letter-spacing 0.5px
			padding 0
			transition 0.5s all ease

			&.is-active
				width 130%
				border-color $c_ter
				padding 0.5em 2.3em 0.5em 0.5em

		.search-submit
			width 1.5rem
			right 0
			-vcenter()
			z-index 999
			background url('../img/search.png') no-repeat center
			-opacity(0.5)
			background-size 87% auto
			transition 0.5s all ease

	.close-search
		-vcenter()
		right 1.7em
		font-weight 400
		color $c_text_lt
		font-size 1.1em
		display none
		text-decoration none

		&:hover
		&:active
			text-decoration @text-decoration


#main
	box-sizing border-box


#content-wrapper
	-wrapper()


#primary
#secondary
	width 100%
	margin-top 1em
	position relative
	box-sizing border-box


#colophon
	width 100%
	position relative

	.site-info
		background $c_ter
		padding 1em 0
		text-align center
		-ff-title()
		color $c_text_lt

		p
			margin 0

		a
			color @color

			&:hover
			&:active
				color $c_sec
				text-decoration none

		img
			width 100%
			height auto

		#rhd-logo-footer
			width 1.35em
			height 1.35em
			margin 0 0.05em
			position relative
			bottom 0.25em


#header-widget-area
	display none


#footer-widget-area
	-wrapper(2em, 2em)

	.widget-title
		-ff-courier()
		color $c_text

	.widget_rhd_social_icons
		-wrapper(0, 0, 100%, 50rem)

	.rhd-social-icons
		width 100%
		margin 1em 0

		.rhd-social-icon
			width 7vw
			margin 0 1%


/* ==========================================================================
	Posts & Pages
   ========================================================================== */

.entry-title
.page-title
.widget-title
.cat-title
	line-height 1
	text-align center


.page-title
.widget-title
	-ff-headline()


.entry-title
	-ff-subtitle()
	color $c_text_lt


.page-title
	font-size 3em
	margin 1em 0


.cat-title
	margin 0.5em 0 0 0

	a
		color inherit

		&:hover
		&:active
			text-decoration none
			color $c_sec


.widget-title
	color $c_text
	font-size 2em


.entry-summary
	p
		margin 0


.entry-content
	width 100%

	p
		margin 0.5em auto
		text-indent 0

		&[style*="text-align: center"]
			text-indent 0

		&:first-child
			margin-top 0

		&:last-child
			margin-bottom 0

	h1
	h2
	h3
	h4
	h5
	h6
		line-height 1.1

	ul
		padding-left 1em

	img
	iframe
		-wrapper(1em, 1em, 100%)

	img
		height auto
		display block

		&.alignleft
		&.alignright
			float none

	a
		img
			@extends .entry-content img

	table
		border-color $c_bg

		tr
		td
			border-color @border-color

		td
			padding 0
			font-size 0.8em

			div
				-wrapper(0.25em, 0.25em, 95%)
				float none !important
				display inline-block !important

				img
					width auto
					height auto
					max-width 100%
					max-height 100%
					margin 0 auto
					display block

				a
					color inherit
					text-decoration none

					&:hover
					&:active
						color $c_sec

.single
	.entry-meta
		margin-top 1em
		padding-top 0.5em
		border-top 1px solid $c_ter_lt

		p
			margin 0


.blog-area
	article
		-clearfix()
		margin 1em auto

		&:first-child
			margin-top 0

		.entry-header
			text-align center
			margin-bottom 1em

			a
				color inherit

				&:hover
				&:active
					color $c_sec
					text-decoration none

			.entry-title
				margin 0.5em 0 0.25em 0

				&.ff-courier
					font-size 1.5em


			.entry-details
				margin 0
				font-size 1em
				-ff-subtitle()

				.sep
					font-size 1.1em

		.entry-thumbnail
			width 100%
			height auto

			img
				width 100%
				height auto


.post-grid
	-flexbox()

	.post-grid-item
		width 48%
		-flexitem()
		vertical-align top
		margin 0

		.entry-title
			font-size 1em
			line-height 1.2

			a
				color inherit
				text-decoration none

				&:hover
				&:active
					color $c_sec

		.entry-details
			font-size 0.8em


.subcat-grid
	padding-left 0

	.subcat-grid-item
		margin-bottom 1em

		a
			color inherit
			text-decoration none

			.subcat-title
				transition 0.25s color
				margin 0.25em 0 0 0
				font-weight bold
				font-size 1.3em

			&:hover
			&:active
				.subcat-title
					color $c_sec


.cat-more
	.ghost-button-container
		margin-top 0


.pagination
.single-pagination
	margin 1em auto
	font-size 1.1em
	-clearfix()

	.pag-link
	.pag-load-more
		-ghost-button-container()

		a
			-ghost-button()

	.pag-next
		float left

	.pag-prev
		float right

	.pag-load-more
		display block
		margin 0 auto


/* ==========================================================================
	Comments
   ========================================================================== */

#comments
	margin 2em auto

	.comment-reply-title
		font-size 2.8em
		margin 0.25em 0

	.comments-title
		font-weight normal

	.comment-list
		list-style none
		padding-left 0

		ul
		ol
			@extends #comments .comment-list

		.children
			padding 0 1.5em

		.comment
			&:last-child
				padding-bottom 1.5em

	.even
		background $off_white

	.odd
		background $near_white

	.comment-body
		padding 1em
		box-sizing border-box

	textarea
		max-width 100%

	#commentform
		width 100%
		min-width 18rem
		max-width 100%

		p
			margin-bottom 0.75rem

		label
			display block

		input
		textarea
			width 100%
			font-size 0.8em
			box-sizing border-box
			padding 0.5em
			display inline-block

		#submit
			width auto
			cursor pointer
			font-size 1em
			font-family $ff_body
			-ghost-button()

		.comment-subscription-form
			margin initial


/* ==========================================================================
	Widget Areas & Sidebars
   ========================================================================== */

#secondary
	.widget
		width 100%
		margin-bottom 1.5em

	.widget:last-child
		margin-bottom 0

	.widget-title
		margin 0 0 0.5em

	.site-intro
		.intro-hi
			font-size 4em
			margin 0.25rem 0 0.65rem

		.intro-content
			font-size 0.9em

	.widget_recent_entries
		li
			color $c_ter


/* ==========================================================================
	Front Page
   ========================================================================== */

.front-page
	#primary
		margin-top 0

	#content-wrapper
		-unwrapper()
		overflow-x hidden

	#content
		> section
			-wrapper(2em, 2em, 90%)

			.section-title
				text-align center
				margin 1rem 0
				-ff-courier()
				letter-spacing -1px
				font-size 2.2em
				color $c_text
				text-transform lowercase

			.rhd-recent-posts
				-wrapper(2em, 2em, 90%)

				.recent-post-thumbnail
					img
						display block
						margin 0 auto


#front-page-featured-posts
	width 100% !important
	max-width none !important
	margin 0 !important

	.soliloquy-container
		margin-bottom 0 !important

		.soliloquy-caption
			width 95%
			height auto !important
			min-width 20rem
			padding 1em
			background $trans_white
			border $c_ter_lt 0.5rem solid
			color $c_text !important
			-vhcenter()
			font-style initial
			display table

			.soliloquy-caption-inside
				position relative
				vertical-align middle

				.soliloquy-fc-title
					a
						font-family $ff_courier
						font-size 5vw
						font-weight bold
						font-style normal
						text-decoration none
						transition 0.25s color

						&:active
						&:hover
							color $c_sec

				.soliloquy-fc-content
					color $c_text
					font-style normal
					margin-top 0

					.rhd-fc-date
						font-family $ff_body
						font-weight 400
						line-height 1.75
						font-size 3.5vw
						text-transform uppercase

					.rhd-fc-more
						margin-top 0.5em
						display inline-block
						-ff-headline()
						font-size 6vw
						transition 0.25s color

						&:hover
						&:active
							text-decoration none
							color $c_sec


#front-page-intro
	.site-intro
		-wrapper(0, 0, 90%)


.site-intro
	.intro-hi
		text-align left
		color $c_ter
		font-size 6em
		-ff-headline()
		line-height 0.7
		position relative
		top 0.5rem

	.intro-content
		-wrapper()

		p
			margin 0


/* ==========================================================================
	About Page
   ========================================================================== */

.page-id-7
	.page-title
		margin 1em 0 0.5em

	.about-quote
		-ff-courier()
		font-size 1.4em
		text-align center
		margin 1.25em 0
		line-height 1.3

	.about-thumb
		-wrapper(1em, 1em, 90%, 25rem)
		display block


/* ==========================================================================
	Extras
   ========================================================================== */

#primary
	-soliloquy()


.goldsep
	width 100%
	height $sep_h
	background-image url($updir + '/2016/05/goldleaf.jpg')
	background-repeat repeat
	background-size cover
	margin 0

	&.small
		height ($sep_h / 2)


.ff-courier
	-ff-courier()
	font-size 1.2em


.rhd-mailchimp-container
	margin 1em 0

	.rhd-mc-subscribe
		text-align center

	.widget-title
		-ff-courier()
		color $c_text
		margin-bottom 0.25em

	.rhd-mc-submit
		margin 0 auto
		-ghost-button()
		display block
		border-width 2px
		font-size 1em
		padding-top 0.375em
		padding-bottom 0.375em


.ninja-forms-required-items
.ninja-forms-req-symbol
	-invisible()


.back-to-top
	margin 0 auto 2em auto
	display block


// Recent Posts
.recent-post
	a
		text-decoration none

		.entry-title
			margin-top 0.5em
			color $c_text
			transition all 0.25s
			line-height 1.2
			font-size 1.3em

			&.ff-courier
				font-weight bold

	&:hover
	&:active
		.entry-title
			color $c_sec


// Picture Frames
.rhd-picture-frame
	width 100% // fit to container
	max-width 800px
	position relative
	-transform(rotate(3.5deg))

	.frame
		width 100%
		height auto
		position relative

	.framed-picture
		width 100%
		height 100%
		position absolute
		top 0
		left 0

		img
			width 71%
			height auto
			display block
			-vhcenter(absolute, 0, -3%)


/* ==========================================================================
	Media Queries
   ========================================================================== */

@require "partials/_desktop.styl"