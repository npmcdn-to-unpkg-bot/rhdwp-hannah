@require "partials/_global.styl"
@require "partials/_wp-core.styl"
@require "partials/_fonts.styl"
@require "partials/_helpers.styl"
@require "partials/_defaults.styl"
@require "partials/_hamburger.styl"
@require "partials/_plugins.styl"


/* ==========================================================================
	Main Styles
   ========================================================================== */

html
	width 100%
	height auto
	text-shadow 0 0 1px transparent
	font-size 16px
	margin 0
	color $navy
	font-family $ff_body


body
	@extends html

	&.admin-bar
		#wpadminbar
			position fixed
			top 0


a
	outline 0 !important

	&:link
	&:visited
		text-decoration none
		color $sky

	&:hover
	&:active
		text-decoration underline


input
textarea
	background-color white
	border 2px solid $sky
	box-sizing border-box
	padding 0.5em
	font-family $ff_body
	-placeholder-props( $ff_body, gray )
	outline 0 !important
	transition all 0.25s

	&:focus
		border-color $mag


hr
	width 85%
	height 4px !important
	margin 2em auto !important
	background-color $navy


input[type="submit"]
	cursor pointer
	font-family $ff_body
	transition all 0.25s

	&:hover
		background-color gray


#masthead
	width 100%
	height auto
	position relative
	border-bottom 4px solid $navy
	-clearfix()


#site-title
	width 60%
	margin 1em 0
	display inline-block
	float left
	position relative
	left 1em
	max-width 18rem
	display block
	transition left 0.25s
	transition width 0.25s
	z-index 1

	object
		z-index -1
		pointer-events none


#site-navigation-container
	width 100%
	text-align center
	display none

	#site-navigation
		list-style none
		padding-left 0
		margin 0
		-flexbox()

		.menu-item
			-flexitem()
			text-transform uppercase
			font-weight 700

			a
				color inherit

				&:hover
				&:active
					color $sky


.sb-slidebar
	background $navy !important

	#site-navigation-sb-container
		#site-navigation-sb
			list-style none
			font-size 1.3em
			font-weight 700
			position relative
			margin 2em auto

			a
				color white

				&:hover
				&:active
					color $sky

			.menu-item
				.sub-menu
					margin 0


.site-navigation
	li
		a
			color $sky
			text-decoration none
			transition color 0.25s

			&:hover
			&:active
				color $mag


#hamburger
	position absolute
	top 50%
	right 1rem
	-transform(translateY(-50%))
	background transparent

	&.c-hamburger
		span
			background-color $navy

			&:before
			&:after
				background-color (@background-color)

		&.is-active
			span
				background-color transparent


#main
	-wrapper(2em,2em)
	box-sizing border-box


#primary
#secondary
	width 100%
	position relative
	box-sizing border-box


#secondary
	margin-bottom 2em


#content
	background $off-white

	article
		-wrapper(0, 0, 100%, 80rem)
		background white


#colophon
	width 100%
	height auto
	padding 0.5rem
	background-color $navy
	color white
	position relative

	a
		color $sky

		&:hover
		&:active
			text-decoration underline

	#footer-widget-area
		width 100%

		.textwidget
			text-align center

		.search-form
			-clearfix()
			position relative

			input
				float left
				padding 0.375rem
				border none
				font-family $ff_body
				font-size 1em

			.search-field
				width 75%
				transition background-color 0.25s ease
				background-color white
				border-top-right-radius 0
				border-bottom-right-radius 0

				&:focus
					background-color $cream
					outline none

			.search-submit
				width 25%
				background-color $sky
				border-color (@background-color)
				transition all 0.25s ease
				position absolute
				top 0
				right 0
				z-index 999
				border-top-left-radius 0
				border-bottom-left-radius 0

				&:hover
				&:active
					background-color $sky
					border-color (@background-color)
					color $navy

		.rhd_social_icons
			text-align center

			a
				&:hover
				&:active
					path
						fill $mag

	#footer-hheart-logo
		width 100%
		height 19em
		margin 0 auto
		background white
		position relative

		img
			width 85%
			max-width 100%
			position absolute
			top 50%
			left 50%
			-transform(translate(-50%, -50%))


/* ==========================================================================
	Posts & Pages
   ========================================================================== */

.entry-title
.page-title
	line-height 1
	margin-top 0


.page-title
	text-align center
	font-weight 800
	font-size 1.8em


.entry-summary
	p
		margin-bottom 0


.entry-content
	width 100%
	-clearfix()

	p
		margin 1em auto
		text-indent 0

		&[style*="text-align: center"]
			text-indent 0

		&:first-child
			margin-top 0

		&:last-child
			margin-bottom 0

	h1
	h2
	h3
	h4
	h5
	h6
		line-height 1.1

	ul
		padding-left 1em

	img
	iframe
		-wrapper(1em, 1em, 95%)

	img
		height auto
		display block

		&.alignleft
		&.alignright
			float none

	a
		img
			@extends .entry-content img


.entry-meta
	margin 1em 0 0

	p
		margin 0
		display inline-block
		padding 0.5em 0

	a
		color $navy

	.comments-popup
		font-size 1.1em
		font-weight 700
		display inline-block
		padding 1em
		text-align center

	.post-meta
		list-style none
		margin 0
		padding 0 1em 1em 1em
		font-size 1em
		position relative

		.post-meta-item
			width 100%
			margin 0.5em 0

			.post-meta-item-title
				font-weight 700
				font-size 1.1em


#posts-feed
	.post
		margin 1em auto

		&:first-of-type
			margin-top 0

		&:last-of-type
			margin-bottom 0

		.post-inner
			-clearfix()

			.post-content
				padding 1em

		.post-thumbnail
			width 100%
			margin-bottom 0.5em

			img
				width 100%


.blog-area
#posts-feed
	.post
		.entry-header
			margin 0
			text-align center

			.entry-title
				margin 0 0 0.25rem 0

			.entry-details
				margin 0
				font-size 0.8em

				.sep
					font-size 0.8em


.entry-content
	.gallery-item
		.gallery-caption
			font-weight 700
			color $navy


.full-width-slideshow
	width 100%

	.soliloquy-container
		border-bottom 4px solid $navy


.pagination
.single-pagination
	margin 1em auto
	font-size 1.1em
	-clearfix()

	.pag-next
	[rel="prev"]
		float left

	.pag-prev
	[rel="next"]
		float right


/* ==========================================================================
	Comments
   ========================================================================== */

#comments
	margin 2em auto

	.commentlist
		list-style none
		padding-left 0

		ul
		ol
			@extends #comments .commentlist

		.children
			padding 0 1.5em

		.comment
			&:last-child
				padding-bottom 1.5em

	.even
		background $off_white

	.odd
		background white

	.comment-body
		padding 1em
		box-sizing border-box

	textarea
		max-width 100%

	#commentform
		width 100%
		min-width 18rem
		max-width 100%

		p
			margin-bottom 0.75rem

		input
		textarea
			width 100%
			font-size 0.8em
			box-sizing border-box
			padding 0.5em
			display inline-block

		#submit
			width auto
			padding-left 0.8em
			cursor pointer

		.comment-subscription-form
			margin initial


/* ==========================================================================
	Front Page
   ========================================================================== */

.front-page
	#main
		-unwrapper(100%)
		margin-bottom 1em

		#front-page-content
			-wrapper(2em, 2em)

			.entry-content
				.v-text
					text-align center

				.alignright
					max-width 30em
					margin-right auto
					margin-left auto
					margin-bottom 2em
					display block
					float none

		#front-page-big-buttons
			background-color $off_white
			padding 2em 0 0

			.big-buttons
				-wrapper(0, 0, 95%, 64rem)
				-flexbox()

				.widget
					width 30%
					-flexitem()
					vertical-align top

					.big-button-label
						font-size 1.9vw

		#front-page-news
			-wrapper()

			#posts-feed
				.post-thumbnail
					border 2px solid $navy

				.post-inner
					padding 1em

					.post-content
						padding 0

		#primary
			padding 2em 0 0

		#secondary
			padding 2em 0 0


/* ==========================================================================
	About Page
   ========================================================================== */

.page-id-9
	#main
		-unwrapper(100%)
		margin-bottom 2em

		#about-content
			-wrapper(2em, 0)
			-clearfix()


/* ==========================================================================
	Locations Page
   ========================================================================== */

.page-id-13
	.entry-content
		.gallery-item
			img
				border 2px solid $navy
				border-radius 0.1em


/* ==========================================================================
	Donations Page
   ========================================================================== */

.page-id-11
	#main
		width 92%

		.entry-content
			.gallery-item
				.gallery-caption
					font-size 0.8em


/* ==========================================================================
	CPT: Store
   ========================================================================== */

.single-store
	#main
		-unwrapper(100%)
		margin-bottom 2em

		.store-header
			text-align center
			padding 0 0 1.5em 0
			border-bottom 4px solid $navy

			p
				margin 0

			.store-header-image
				width 100%
				border-bottom 4px solid $navy

			.store-heading
				font-size 1.2em
				margin 0

			#single-store-info
				-wrapper(1em, 0, 90%)
				padding-left 0
				list-style none

				li
					margin-bottom 1em

					&:last-child
						margin-bottom 0

		.single-store-thumbnail
			width 100%
			height auto

			img
				width (@width)
				height (@height)

		#single-store-content
			-wrapper(3em, 1em)
			-clearfix()

			.single-store-thumbnail
			.rhd-store-map .pw_map_canvas
				border 2px solid $navy

			.single-store-map-caption
				text-align center
				font-weight 700

				p
					margin 0.5em 0

			.widget_rhd_auto_donation_button_widget
			.widget_rhd_volunteer_button_widget
			.widget_rhd_schedule_pickup_button_widget
				display none


/* ==========================================================================
	Ghost Buttons
   ========================================================================== */

.ghost-button
	width auto
	max-width 100%
	text-align center
	margin 1em auto

	a
		padding 0.4em .8em
		color $sky
		text-decoration none
		background-color white
		border 3px solid @color
		border-radius 0.1em
		display inline-block
		transition all 0.2s
		font-size 1.2em
		font-weight 700
		letter-spacing 1px

		&:hover
		&:active
			background-color @color
			color white


/* ==========================================================================
	Widget Areas & Sidebars
   ========================================================================== */

#secondary
	.widget
		width 100%
		margin-bottom 1.5em

	.widget:last-child
		margin-bottom 0


	.widget-title
		margin 0 0 0.25em 0
		text-align center
		font-size 1.3em
		font-weight 800

	.big-button
		-wrapper(0, 0, 90%)


/* ==========================================================================
	Media Queries
   ========================================================================== */

@media screen and (min-width 40em)
	#masthead
		height 6em
		transition all 0.25s

		#site-title
			width 23%
			height auto
			margin 0
			position absolute
			top 50%
			left 2%
			-transform(translateY(-50%))

	#site-navigation-container
		width 72%
		display block
		margin-top 0
		transition all 0.25s
		position absolute
		right 2%
		top 63%
		-transform(translateY(-50%))

		.menu-item
			font-size 0.8em

			.sub-menu
				display none

	#hamburger
		display none

	#posts-feed
		&.small-thumbnails
			.post
				-clearfix()

				&.has-post-thumbnail
					.post-content
						width 63%
						float right

					.post-thumbnail
						width 32%
						max-width 300px
						float left
						border none
						margin-bottom 0

	//#posts-feed
	.post
		border 2px solid $navy
		border-radius 2px

		.entry-header
			background $sky_trans
			padding 1em
			margin 0

			.entry-title
				margin 0 0 0.25rem

				a
					color $navy
					transition color 0.25s

					&:hover
					&:active
						color $sky
						text-decoration none

	.front-page
		#main
			#front-page-news
				#posts-feed
					.post
						.post-thumbnail
							border none

						.entry-header
							background none
							text-align left
							padding 0

			#front-page-big-buttons
				padding-top 3.5em

				.big-buttons
					.widget
						width 30%
						-flexitem()
						vertical-align top

						.big-button-link
							z-index 1
							-opacity(0.8)
							transition all 0.25s

							&:hover
							&:active
								-opacity(1)

								.big-button-label
									color inherit

						.big-button-label
							font-size 2.1vw

	.single-store
		#main
			.store-header
				padding-bottom 0.5em

				#single-store-info
					-flexbox()
					padding-top 0.5em

					li
						width 30%
						-flexitem()
						margin-bottom 0
						text-align center

			#single-store-content
				.widget_rhd_auto_donation_button_widget
				.widget_rhd_volunteer_button_widget
				.widget_rhd_schedule_pickup_button_widget
					display block

	.entry-meta
		.entry-meta-links
			background-color $sky_trans

			.comments-popup
				width 100%

			.post-meta
				margin 0
				padding 0
				position relative
				-clearfix()
				display table
				background-color $sky_trans

				.post-meta-item
					width 33.3333333%
					height 100%
					display table-cell
					padding 1em 0
					vertical-align top
					text-align center
					transition all 0.5s ease

					&:hover
						background-color $sky_half

					a
						color inherit
						transition color 0.5s ease

					.post-meta-item-title
						font-weight 700
						font-size 1.1em

	#colophon
		#footer-widget-area
			width 37%

			#footer-widget-area-left
				padding-left 1em

			.textwidget
				text-align left

			.rhd_social_icons
				text-align left

		#footer-hheart-logo
			width 300px
			height 97%
			position absolute
			right 0.25rem
			top 0.25rem

	#comments
		#commentform
			width 75%

			p
				margin-bottom 0.75rem

			input
				&[type="text"]
				&[type="email"]
					width 75%

			#submit
				width auto
				padding-left 0.8em

	// Image Strip
	#primary
		-clearfix()

		article
			&.strip-active
				width 65%
				float right

		#image-strip
			width 30%
			float left
			margin-right 5%

			img
				width 100%
				height auto
				margin-bottom 2em
				display block

	.entry-content
		padding 1em

		img
		iframe
			-unwrapper(initial)

		img
			&.alignleft
				margin-right 1em
				float left

			&.alignright
				margin-left 1em
				float right

			&.aligncenter
				margin 0 auto

		a
			img
				@extends .entry-content img

		.gallery-item
			img
				display block
				margin 0 auto

	.page-id-11
		#main
			width 85%

			.entry-content
				.gallery-item
					.gallery-caption
						font-size 1.2em


@media screen and (min-width 60em)
	#masthead
		height 8em

		#site-title
			width 24%
			left 4%

	#site-navigation-container
		width 60%
		right 4%
		top 62%

		.menu-item
			font-size 0.9em

	.front-page
		#main
			#front-page-news
				-wrapper()

			#front-page-content
				-wrapper(1em, 1em, 70%)
				padding 3em 0

				.entry-content
					-clearfix()
					position relative

					.v-text
						width 55%
						margin 0
						position absolute
						left 0
						top 50%
						-transform(translateY(-50%))
						text-align left

					.alignright
						width 37%
						float right
						margin-bottom 2vh


// Fixed-width 340px sidebar
@media screen and (min-width 40em)
	#main
		-clearfix()

	#front-page-news
		-wrapper()

	#primary
		float left

		&.full-width
			width 100%
			float none

	#secondary
		width 340px
		float right

		.widget
			width 300px
			margin-left auto
			margin-right auto


@media screen and (min-width 58em)
	#primary
		width 56%


@media screen and (min-width 62em)
	#primary
		width 58%


@media screen and (min-width 64em)
	#primary
		width 60%


@media screen and (min-width 66em)
	#primary
		width 63%


@media screen and (max-width 40em)
	.page-id-13
		.entry-content
			.gallery
				.gallery-item
					max-width 50%

					img
						margin-bottom 0.25em


@media screen and (max-width 34em)
	#colophon
		#footer-hheart-logo
			height 13em

	.page-id-13
		.entry-content
			.gallery
				.gallery-item
					max-width none
