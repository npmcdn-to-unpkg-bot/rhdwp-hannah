@require "partials/_global.styl"
@require "partials/_fonts.styl"
@require "partials/_helpers.styl"
@require "partials/_metabar.styl"
@require "partials/_galleries.styl"
@require "partials/_defaults.styl"
@require "partials/_hamburger.styl"


/* ==========================================================================
	Main Styles
   ========================================================================== */

html
body
#page
#main
	min-height 100%


html
	text-shadow 0 0 1px transparent
	width 100%
	font-size 16px
	margin 0
	font-family $ff_body


body
	@extends html

	&.admin-bar
		#wpadminbar
			position fixed
			top 0


a
	outline 0 !important

	&:link
	&:visited
		text-decoration none
		color red

	&:hover
	&:active
	&:focus
		text-decoration underline


input
textarea
	background-color white
	border none
	box-sizing border-box
	padding 0.5em
	font-family inherit


input[type="submit"]
	cursor pointer
	font-family inherit
	-transition(all 0.25s)

	&:hover
		background-color gray


#page
	margin 2em 0


#site-title
	text-align center
	margin 0


#site-navigation-container
	width 100%
	text-align center
	display none

	#site-navigation
		list-style none
		padding-left 0
		margin 0
		-flexbox()

		.menu-item
			-flexitem()

			a
				text-decoration none
				color inherit
				-transition(0.25s color)

				&:hover
				&:active
				&:focus
					color red

			.sub-menu
				position absolute
				padding-left 0
				line-height 1.7
				margin-top 0.2em
				z-index 999 !important

				li
					display block
					margin 0


#site-navigation-sb-container
	#site-navigation-sb
		list-style

#hamburger
	font-size 1.2em // relative resizing
	background-color black // sample bg animation color

	&.active
		background-color gray // sample bg animation color


#main
	-wrapper(2em,2em)
	padding 2em 0
	box-sizing border-box


#primary
#secondary
	width 100%
	margin-top 1em
	position relative
	box-sizing border-box


#secondary
	margin-bottom 2em


#colophon
	width 100%
	height 6em
	position absolute
	bottom 0
	left 0

	.site-info
		width 100%
		margin 0
		position absolute
		top 50%
		left 0
		-transform(translateY(-50%))
		text-align center
		line-height 1.7
		font-size 0.9em

		a
			color inherit

	#rhd-logo-footer
		width 1.35em
		height 1.35em
		margin 0 0.05em
		position relative
		bottom 0.25em


/* ==========================================================================
	Posts & Pages
   ========================================================================== */

.entry-title
.page-title
	margin-top 0
	line-height 1


.entry-content
	width 100%

	p
		margin 0.25em auto
		text-indent 1.5em

		&[style*="text-align: center"]
			text-indent 0

		&:first-child
			margin-top 0

		&:last-child
			margin-bottom 0

	h1
	h2
	h3
	h4
	h5
	h6
		line-height 1.1

	ul
		padding-left 1em

	img
		max-width 100%
		height auto

		&.alignleft
			margin-right 1em

		&.alignright
			margin-left 1em

		&.aligncenter
			display block
			margin 0 auto


.blog-area
	#main
		.post
			-clearfix()

			.entry-header
				text-align center
				margin-bottom 1em

				.entry-title
					margin 0 0 0.25rem 0

				.entry-details
					margin 0

					.sep
						font-size 0.8em


.pagination
.single-pagination
	margin 1em auto
	font-size 1.1em
	-clearfix()

	.pag-next
	[rel="prev"]
		float left

	.pag-prev
	[rel="next"]
		float right


/* ==========================================================================
	Comments
   ========================================================================== */

#comments
	margin 2em auto

	.commentlist
		list-style none
		padding-left 0

		ul
		ol
			@extends #comments .commentlist

		.children
			padding 0 1.5em

	.even
		background $off-white

	.odd
		background white

	.comment-body
		padding 1em
		box-sizing border-box

	textarea
		max-width 100%

	#commentform
		width 100%
		min-width 18rem
		max-width 100%

		p
			margin-bottom 0.75rem

		input
		textarea
			width 100%
			background-color $off-white
			font-size 0.8em
			border none
			box-sizing border-box
			padding 0.5em
			display block

		#submit
			width auto
			padding-left 0.8em
			cursor pointer

		.comment-subscription-form
			margin initial



/* ==========================================================================
	Widget Areas & Sidebars
   ========================================================================== */

#secondary
	.widget
		width 100%
		margin-bottom 1.5em

	.widget:last-child
		margin-bottom 0


	.widget-title
		margin-top 0


/* ==========================================================================
	Media Queries
   ========================================================================== */

@media screen and (min-width 40em)
	#site-navigation-container
		display block

	#hamburger
		display none

	#comments
		#commentform
			width 75%

			p
				margin-bottom 0.75rem

			input
			textarea
				background-color $off-white
				font-size 0.8em
				border none
				box-sizing border-box
				padding 0.5em
				display block

			input
				&[type="text"]
				&[type="email"]
					width 75%

			#submit
				width auto
				padding-left 0.8em
