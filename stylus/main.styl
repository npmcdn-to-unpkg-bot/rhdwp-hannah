@require "partials/_global.styl"
@require "partials/_wp-core.styl"
@require "partials/_fonts.styl"
@require "partials/_helpers.styl"
@require "partials/_metabar.styl"
@require "partials/_defaults.styl"
@require "partials/_hamburger.styl"


/* ==========================================================================
	Main Styles
   ========================================================================== */

html
body
#page
#main
	min-height 100%


html
	text-shadow 0 0 1px transparent
	width 100%
	font-size 16px
	margin 0
	font-family $ff-body
	color $color1


body
	@extends html
	background url(../img/wavegrid.png) repeat

	&.admin-bar
		#wpadminbar
			position fixed
			top 0


a
	outline 0 !important
	transition color 0.25s

	&:link
	&:visited
		text-decoration none
		color $color2

	&:hover
	&:active
		text-decoration underline


input
textarea
	background-color white
	border 2px solid $color1
	box-sizing border-box
	padding 0.5em
	font-family $ff-body
	-placeholder-props( $ff-body, gray )
	transition all 0.25s
	outline 0

	&:focus
		border-color $color2



input[type="submit"]
	cursor pointer
	font-family $ff-body
	background-color $color1
	color white
	transition all 0.35s ease
	font-size 1.5em
	font-weight 700
	@extends .smallcaps

	&:hover
		color (@background-color)
		background-color $color2


#page
	margin 2em 0
	background transparent


#masthead
	-wrapper()
	padding 1em 20px
	background white


.site-title
	-wrapper(0, 0, 90%, 724px)
	display block


#site-title-text
	-invisible()


.c-hamburger
	margin 0 auto


#main
	-wrapper()
	box-sizing border-box


#primary
#secondary
	width 100%
	margin-top 1em
	position relative
	box-sizing border-box


#primary
	transition width 0.25s

	.rhd-navigation-container
		display none

	#content
		.post
		.page
			background white
			padding 1em 20px


#secondary
	margin-bottom 2em

	.sidebar-widget-container
		background white
		margin-bottom 1.5em
		padding-bottom 1em

	#colophon
		padding 1em 20px
		text-align center
		background white
		font-size 0.9em

		#rhd-logo-footer
			width 1.35em
			height 1.35em
			margin 0 0.05em
			position relative
			bottom 0.25em

		a
			color $color1


.rhd-navigation-container
	width 100%
	background white
	text-align center
	padding 0.5em 20px

	#site-navigation-container
		display none

		#site-navigation
			padding-left 0
			margin 0
			-flexbox()
			position relative
			top 0.8em

			.menu-item
				-flexitem()

				a
					&:link
					&:visited
						color $color1

					&:active
					&:hover
						color $color2



				.sub-menu
					position absolute
					padding-left 0
					line-height 1.7
					margin-top 0.2em
					z-index 999 !important

					li
						display block
						margin 0

	#site-navigation-down-container
	#site-navigation-mobile-container
		display none

		#site-navigation-down
			.menu-item
				display block
				font-size 1.1em


.site-navigation
	list-style none
	padding-left 0

	li
		text-transform uppercase
		font-variant small-caps

		a
			color $color1
			text-decoration none
			transition color 0.25s

			&:hover
			&:active
				color $color2


.hide-on-fallback
	width 0
	height 0
	display block
	position absolute
	left -100%
	overflow hidden


#site-title-sidebar
	display none
	padding-top 1em


/* ==========================================================================
	Posts & Pages
   ========================================================================== */

.entry-title
.page-title
	margin-top 0
	line-height 1


.page-title
	text-align center


.entry-content
	width 100%

	p
		margin 0.75em auto
		text-indent 0
		text-align justify

		&[style*="text-align: center"]
			text-indent 0

		&:first-child
			margin-top 0

		&:last-child
			margin-bottom 0

	h1
	h2
	h3
	h4
	h5
	h6
		line-height 1.1

	ul
		padding-left 1em

	img
	iframe
		max-width 100%
		margin-top 0.5em
		margin-bottom 0.5em

	img
		max-width 100%
		height auto
		margin 0 auto
		display block

		&.alignleft
			margin-right 1em

		&.alignright
			margin-left 1em

		&.aligncenter
			display block
			margin 0 auto


.entry-meta
	p
		margin 0
		@extends .smallcaps

	a
		color $color1

		&.post-edit-link
			color $color2
			font-variant normal


.entry-meta-sep
	width 100%
	height 1px
	color $color3
	background-color (@color)
	border-width 0



.blog-area
	#main
		.post
			-clearfix()
			margin-bottom 2em

			.entry-header
				margin-bottom 0.5em
				padding-bottom 0.5em
				border-bottom 2px solid $color3

				.entry-title
					margin 0 0 0.15rem 0

					a
						color $color1
						text-decoration none

						&:hover
						&:active
							color $color2

				.entry-details
					margin 0
					font-size 0.8em

					.sep
						font-size 0.8em

			.social-likes
				margin-top 0.5rem

		&:last-child
			margin-bottom 0


.single
.page
	#content
		background white


.pagination
.single-pagination
	margin 1em auto
	font-size 1.1em
	-clearfix()

	a
		text-decoration none
		padding 0.5em 1em
		background white
		text-transform uppercase
		font-variant small-caps

		&:link
		&:visited
			color $color1

		&:hover
		&:active
			color $color2

	.pag-next
	[rel="prev"]
		float left

	.pag-prev
	[rel="next"]
		float right


.readmore
	@extends input[type="submit"]
	display block
	float right
	margin-bottom 1em
	font-size 1.2em
	background-color $color1
	color white

	&:hover
	&:active
		color $color1
		background $color2
		text-decoration none


.ninja-forms-req-symbol
	color $color1 !important


#rhd-related-posts-container
	.rhd-related-posts-title
		@extends .smallcaps
		margin-bottom 0.25em
		font-size 2em
		margin-top 0.5rem


.rhd_social_icons
	-flexbox()

	.rhd-social-icon
		max-width 15%
		-flexitem()

		svg
		img
			width 100%
			height 100%


.jetpack_subscription_widget
	#subscribe-email
		input
			&[type="email"]
				padding 0.375em

	#subscribe-submit
		input
			&[type="submit"]
				display block
				margin 0 auto
				padding-top 0.25em
				padding-bottom 0.45em


/* ==========================================================================
	Comments
   ========================================================================== */

#comments
	margin 1em auto
	padding 1em 20px

	#reply-title
	.comments-title
		font-size 1.5em
		@extends .smallcaps

	.commentlist
		list-style none
		padding-left 0

		ul
		ol
			@extends #comments .commentlist

		.children
			padding 0 1.5em

		.comment
			&:last-child
				padding-bottom 1.5em

	.even
		background $off-white

	.odd
		background white

	.comment-body
		padding 1em
		box-sizing border-box

	textarea
		max-width 100%

	#commentform
		width 100%
		min-width 18rem
		max-width 100%

		p
			margin-bottom 0.75rem

		input
		textarea
			width 100%
			font-size 0.8em
			box-sizing border-box
			padding 0.5em
			display inline-block

		#submit
			width auto
			padding-left 0.8em
			cursor pointer

		.comment-subscription-form
			margin initial


/* ==========================================================================
	Ghost Buttons
   ========================================================================== */

.ghost-button
	width auto
	max-width 100%
	text-align center
	margin 1em auto

	a
		padding 0.4em .8em
		color $color2
		text-decoration none
		background-color white
		border 3px solid @color
		border-radius 0.1em
		display inline-block
		transition all 0.2s

		&:hover
		&:active
			background-color @color
			color @background-color


/* ==========================================================================
	Widget Areas & Sidebars
   ========================================================================== */

#secondary
	.widget
		width 100%
		margin-top 1.5em

	.widget-title
		@extends .smallcaps
		margin-top 0
		margin-bottom 0.25em
		text-align center
		font-size 1.7rem

	#simpleimage-3
		img
			border 2px solid $color1


#search-2
	.search-submit
		display none


.ninja-forms-form
	input
		-placeholder-props( $ff-body, gray )
		font-family $ff-body

		&[type="submit"]
			display block
			margin 0 auto

/* ==========================================================================
	Media Queries
   ========================================================================== */

@media screen and (min-width 50em)
	#masthead
		-invisible()

	#site-title-sidebar
		display block

	.rhd-navigation-container
		display block
		margin-bottom 1.5em

	#main
		-clearfix()

	#primary
		width 49%
		float right

	#primary
		-clearfix()

		.rhd-navigation-container
			display block

		article
			&.strip-active
				width 65%
				float right

		#image-strip
			width 30%
			float left
			margin-right 5%

			img
				width 100%
				height auto
				margin-bottom 2em
				display block

	#secondary
		width 340px
		float left

		.widget
			width 300px
			margin-left auto
			margin-right auto

	#hamburger
		display none

	#comments
		#commentform
			width 75%

			p
				margin-bottom 0.75rem

			input
				&[type="text"]
				&[type="email"]
					width 75%

			#submit
				width auto
				padding-left 0.8em


// Fixed-width 340px sidebar
@media screen and (min-width 58em)
	#primary
		width 56%


@media screen and (min-width 62em)
	#primary
		width 58%


@media screen and (min-width 64em)
	#primary
		width 60%


@media screen and (min-width 70em)
	#primary
		width 64%

	.rhd-navigation-container
		#site-navigation-container
			display block

		#site-navigation-down-container
			display none

		#hamburger-down
			display none