@require "partials/_global.styl"
@require "partials/_wp-core.styl"
@require "partials/_fonts.styl"
@require "partials/_helpers.styl"
@require "partials/_metabar.styl"
@require "partials/_defaults.styl"
@require "partials/_hamburger.styl"


/* ==========================================================================
	Main Styles
   ========================================================================== */

html
body
#page
#main
	width 100%
	margin 0 auto


html
	text-shadow 0 0 1px transparent
	font-size 16px
	margin 0
	font-family $ff-body
	color $black


body
	@extends html

	&.admin-bar
		#wpadminbar
			position fixed
			top 0


	h1
	h2
	h3
	h4
	h5
	h6
		font-family $ff-headline
		font-weight 300

a
	outline 0 !important

	&:link
	&:visited
		text-decoration none
		color $bluegreen

	&:hover
	&:active
		text-decoration underline


input
textarea
	background-color white
	border none
	box-sizing border-box
	padding 0.5em
	font-family $ff-body
	-placeholder-props( $ff-body, gray )


input[type="submit"]
	cursor pointer
	font-family $ff-body
	transition all 0.25s
	background-color white
	padding 0.25em 0.5em
	font-weight normal
	text-transform none

	&:hover
		background-color $blue
		color white


#site-title
	-wrapper(1em, 1em, 100%, 35rem)
	position relative
	display block

	img
		width 100%
		height auto


#site-navigation-container
	width 100%
	text-align center
	display none

	#site-navigation
		list-style none
		padding-left 0
		margin 0

		.menu-item
			text-transform uppercase
			font-size 1.4em
			line-height 1.6


.site-navigation
	.menu-item
		a
			color $bluegreen
			text-decoration none
			transition all 0.25s


#hamburger
	margin 1em auto
	font-size 1rem
	background-color $blue // sample bg animation color

	&.is-active
		background-color $bluegreen // sample bg animation color


#main
	width 100%
	padding 0 0 2em 0
	box-sizing border-box


#primary
#secondary
	-wrapper(0,0,90%)
	margin-top 1em
	position relative
	box-sizing border-box


#primary
	line-height 1.4
	font-size 1em


#secondary
	margin-bottom 2em
	padding 1em 0
	border 1px solid $blue
	border-radius 0.1em


#colophon
	width 100%
	position relative
	padding 3em 0 2em
	border-top 1px solid $blue

	.site-info
		width 100%
		text-align center
		line-height 1.4
		font-size 0.8em
		color $blue

		a
			color inherit

	#footer-widget-area
		-wrapper(0, 0, 90%)

		.widget
			width 100%
			margin-bottom 1em

		.widget_nav_menu
			text-align center
			margin 0

			ul
				list-style none
				padding-left 0

		.APTFPIN_by_TAP
			.widget-title
				margin 0

			.AlpinePhotoTiles-link
				overflow hidden
				position relative
				margin-bottom 0.5em

				img
					width 100%
					height auto
					position absolute
					top 50%
					left 0
					-transform(translateY(-50%))

		#site-info-left
			display none

	#rhd-logo-footer
		width 1.35em
		height 1.35em
		margin 0 0.05em
		position relative
		bottom 0.25em


.hide-on-fallback
	width 0
	height 0
	display block
	position absolute
	left -100%
	overflow hidden


.shop-disclaimer
	text-align center
	font-size 0.9em


/* ==========================================================================
	Advertising Areas
   ========================================================================== */

#rhd-ad-box-header
	width 728px
	height 90px
	overflow hidden
	margin 0.5em auto 1em
	display none


/* ==========================================================================
	Ghost Buttons
   ========================================================================== */

.ghost-button
	width auto
	max-width 100%
	text-align center
	margin 1em auto

	a
		padding 0.4em .8em
		color $blue
		text-decoration none
		background-color white
		border 1px solid @color
		border-radius 0.1em
		display inline-block
		transition all 0.2s

		&:hover
		&:active
			background-color @color
			color white


/* ==========================================================================
	Posts & Pages
   ========================================================================== */

.entry-title
.page-title
	margin-top 0
	line-height 1


.page-title
	font-size 2em
	text-align center
	color $bluegreen


.entry-content
	width 100%

	p
		margin 0.75em auto

		&[style*="text-align: center"]
			text-indent 0

		&:first-child
			margin-top 0

		&:last-child
			margin-bottom 0

	h1
	h2
	h3
	h4
	h5
	h6
		line-height 1.1

	ul
		padding-left 1em

	img
		max-width 100%
		height auto
		margin-top 0.3em
		margin-bottom 0.3em

		&.alignleft
			margin-right 1em

		&.alignright
			margin-left 1em

		&.aligncenter
			display block
			margin 0 auto

	.tablepress
	table
		max-width 100%
		border none

		td
		th
			border none


.search-results
	.post
		position relative
		margin-bottom 2em

		.ghost-more
			width auto
			position absolute
			bottom 0
			right 0
			margin 0


.entry-summary
	p
		&:first-child
			margin-top 0

	.entry-summary-thumbnail
		width 20%
		float left
		margin-right 1em


#main
	.post
		width 100%
		-clearfix()
		padding-bottom 1em
		margin-bottom 1.5em
		border-bottom 1px solid $blue

		&:last-child
			border-bottom none

		.entry-header
			text-align left

			.entry-title
				margin 0 0 0.25rem 0

			.entry-details
				margin 0
				font-size 0.9em

				.sep
					font-size 0.8em

		.entry-content
			-clearfix()
			margin-top 1em

		.entry-meta
			p
				margin 0.25em

			.entry-meta-content
				background-color $blue
				color white
				padding 0.5em 1em
				font-size 0.95em
				line-height 1.4

				a
					color inherit

	.single
		.post
			margin-bottom 1em
			border-bottom none

			.entry-title
				color $bluegreen

	.post-grid
		width 100%

		.post
			transition all 0.25s
			border-bottom none
			margin-bottom 0

			.entry-thumbnail
				-wrapper(0, 0, 65%)

				.wp-post-image
					width 100%
					min-width 100%
					height auto

			.entry-title
				text-align center
				margin-top 0.25em
				font-size 1em

	#infinite-handle
		width 11.1rem
		@extends .ghost-button
		font-size 1rem
		position absolute
		left 50%
		-transform(translateX(-50%))
		margin 0 auto

		span
			background none
			color inherit
			padding 0
			margin-top 0

		button
			@extends .ghost-button a
			border-color $blue
			color $blue

			&:hover
			&:active
				background-color $blue

	.infinite-loader
		width 1.8em
		margin 1em auto 0

		.spinner
			left 0 !important


.front-page
	#main
		.soliloquy-outer-container
			display none

		.soliloquy-caption-inside
			font-family $ff-headline

		.post
			padding-bottom 0.5rem
			margin-bottom 1.5em
			border-bottom 1px solid $blue

			&:first-child
				margin-bottom 3rem

			.entry-meta
				padding-bottom 2.5rem
				border-bottom 1px solid $blue


.pagination
.single-pagination
	margin 1em auto
	font-size 1.4em
	font-family $ff-headline
	-clearfix()

	.pag-next
	[rel="prev"]
		float left

	.pag-prev
	[rel="next"]
		float right

	a
		text-decoration none
		transition color 0.25s

		&:hover
		&:active
			color $blue


.ghost-more
	width auto
	margin-top 0
	float right


.grid-more
	margin 0 auto
	position relative
	bottom 1em


.wp-pagenavi
	text-align center
	margin 1em auto

	.current
		background-color $blue
		color white

	.extend
		border none

	a
		border none
		background-color white
		color $blue
		text-decoration none
		transition all 0.25s

		&:hover
		&:active
			background-color $bluegreen
			color white


.sub-cat-title
	text-align center

	a
		color inherit
		text-decoration none
		transition color 0.25s

		&:hover
		&:active
			color $bluegreen


#archives-content
	-webkit-column-count 2
	-moz-column-count 2
	column-count 2


/* ==========================================================================
	RHD Social Share
   ========================================================================== */

.rhd-social-share-container
	position relative

	.share-text
		display none

	.rhd-social-share
		list-style none
		padding-left 0
		position relative
		top 0.5em
		left 3em
		margin-bottom 1.45em

		.rhd-ss-item
			width 2em
			height auto
			display inline-block
			margin-right 0.5em

			img
				width 100%
				height auto


/* ==========================================================================
	Comments
   ========================================================================== */

#comments
	margin 2em auto

	input
	textarea
		border 1px solid $blue
		border-radius 0.1em

	.commentlist
		list-style none
		padding-left 0

		ul
		ol
			@extends #comments .commentlist

		.children
			width 100%

			li
				padding 0 1em

	.even
		background $gray

	.odd
		background white

	.comment-body
		padding 1em
		box-sizing border-box

	textarea
		max-width 100%

	#commentform
		width 100%
		min-width 18rem
		max-width 100%

		p
			margin-bottom 0.75rem

		input
		textarea
			width 100%
			background-color $gray
			font-size 0.8em
			box-sizing border-box
			padding 0.5em
			display inline-block

		#submit
			@extends .ghost-button a
			width auto
			padding-left 0.8em
			cursor pointer

		.comment-subscription-form
			margin initial

	#respond
		padding 1em

		input
		textarea
			background-color white

	.required
		display none


/* ==========================================================================
	Contact Forms
   ========================================================================== */

.contact-form
	input
	textarea
		border 1px solid $blue
		border-radius 0.1em
		transition all 0.25s
		color $blue

		&:focus
			color $bluegreen
			background-color $gray


/* ==========================================================================
	Widget Areas & Sidebars
   ========================================================================== */

#secondary
	.widget
		-wrapper(1.5em, 1.5em, 300px)

		a
			font-weight bold

	.widget:last-child
		margin-bottom 0

	.widget_text
		font-size 0.8em

	#text-132 /* "Inspiration for your Inbox" text widget */
		.widget-title
			font-size 1.65em

		.ghost-button
			a
				background-color white
				color $blue
				font-weight normal

				&:hover
				&:active
					background-color $blue
					color white

	#simpleimage-155 /* Intro sidebar image */
		position relative
		bottom 1.25rem

		.simple-image
			margin 0

	#text-130
		position relative
		bottom 1.25rem

	.simple-image
		max-width 300px
		margin 0 auto


.search-form
	input
		font-size 1em
		padding 0.25em 0.5em
		border-width 1px
		border-style solid

	.search-field
		width 73%
		font-family $ff-body
		color $blue
		-placeholder-props($ff-body, $color = $blue)
		border-color $blue

	.search-submit
		width 24%
		float right
		background $blue
		color white
		border-color $blue
		transition all 0.25s
		text-transform lowercase

		&:hover
		&:active
			background $bluegreen
			border-color $bluegreen


.widget-title
	margin 0 auto 0.25em auto
	font-family $ff-hand
	text-align center
	font-size 2.1rem


/* ==========================================================================
	Media Queries
   ========================================================================== */

@media screen and (min-width 728px)
	#rhd-ad-box-header
		display block

	.rhd-social-share-container
		.rhd-social-share
			padding-left 3em

		.share-text
			font-family $ff-headline
			position absolute
			left 0.7em
			top 50%
			-transform(translateY(-50%))
			margin 0
			font-size 1.2em
			display block

	.front-page
		#main
			.soliloquy-outer-container
				display block


@media screen and (min-width 50em)
	#site-navigation-container
		-wrapper(0, 0, 80%, 100%)
		display block

		#site-navigation
			width 100%
			margin-top 0
			margin-bottom 2em
			text-align center

			.menu-item
				height 100%
				font-size 1em
				padding 0 2.75%
				border-right 1px solid $bluegreen
				display inline-block


				&:last-of-type
					border-right none

				a
					&:hover
					&:active
						color $blue

	#hamburger
		display none

	#main
		-wrapper()
		-clearfix()

		#primary
			float left
			width 53%

			&.full-width
				width 100%

			.post-grid
				-flexbox()

				.post
					width 47%
					-flexitem()
					vertical-align top

					.entry-thumbnail
						width 100%
						-unwrapper()

						img
							width 100%

				.infinite-wrap
					-flexbox()
					display inline-block

		#secondary
			width 320px
			float right

	#colophon
		#footer-widget-area
			-clearfix()

			.widget-title
				text-align center

			#footer-widget-area-left
				width 60%
				float left

			.widget_nav_menu
				width 100%

				ul
					width (@width)
					text-align center
					padding-left 0

					.menu-item
						margin 0 2.2%
						display inline-block

			#footer-widget-area-right
				width 30%
				float right

			.widget_rhd_social_icons
				-wrapper(2em, 0, 18rem)

			#site-info-left
				display block

			#site-info-right
				display none

	#comments
		#commentform
			width 75%

			p
				margin-bottom 0.75rem

			input
			textarea
				background-color $gray
				font-size 0.8em
				box-sizing border-box
				padding 0.5em
				display block

			input
				&[type="text"]
				&[type="email"]
					width 75%

			#submit
				width auto
				padding-left 0.8em

	#archives-content
		-webkit-column-count 3
		-moz-column-count 3
		column-count 3


@media screen and (min-width 60em)
	#main
		-clearfix()

		#primary
			float left
			width 59%

			.post-grid
				.post
					width 30%

					.entry-thumbnail
						width 100%

						.wp-post-image
							width 100%
							height auto

	#archives-content
		-webkit-column-count 4
		-moz-column-count 4
		column-count 4


@media screen and (min-width 64em)
	#main
		-clearfix()

		#primary
			float left
			width 63%
