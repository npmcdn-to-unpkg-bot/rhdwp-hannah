@require "partials/_global.styl"
@require "partials/_wp-core.styl"
@require "partials/_fonts.styl"
@require "partials/_helpers.styl"
@require "partials/_defaults.styl"
@require "partials/_hamburger.styl"
@require "partials/_plugins.styl"


/* ==========================================================================
	Main Styles
   ========================================================================== */

html
	width 100%
	height auto
	text-shadow 0 0 1px transparent
	font-size 16px
	margin 0
	color $navy
	font-family $ff-body


body
	@extends html

	&.admin-bar
		#wpadminbar
			position fixed
			top 0


a
	outline 0 !important

	&:link
	&:visited
		text-decoration none
		color $sky

	&:hover
	&:active
		text-decoration underline


input
textarea
	background-color white
	border 2px solid $sky
	box-sizing border-box
	padding 0.5em
	font-family $ff-body
	-placeholder-props( $ff-body, gray )
	outline 0 !important
	transition all 0.25s

	&:focus
		border-color $mag


hr
	width 85%
	height 4px !important
	margin 2em auto !important
	background-color $navy


input[type="submit"]
	cursor pointer
	font-family $ff-body
	transition all 0.25s

	&:hover
		background-color gray


.cheddar
	-ff-headline()


#masthead
	width 100%
	height auto
	position relative
	border-bottom 4px solid $navy
	-clearfix()


#site-title
	width 60%
	margin 1em 0
	display inline-block
	float left
	position relative
	left 1em
	max-width 18rem
	display block
	transition left 0.25s
	transition width 0.25s
	z-index 1

	object
		z-index -1
		pointer-events none


#site-navigation-container
	width 100%
	text-align center
	display none

	#site-navigation
		list-style none
		padding-left 0
		margin 0
		-flexbox()

		.menu-item
			-flexitem()
			text-transform uppercase
			font-weight 700
			position relative

			a
				color inherit

				&:hover
				&:active
					color $sky

			.ghost-button
				a
					background-color $sky
					color white
					transition all 0.25s
					border-color $navy

					&:hover
					&:active
						background-color $navy

			.sub-menu
				width 14em
				position absolute
				left -0.5em
				background-color rgba(255,255,255,0.95)
				padding-top 0.3em
				padding-left 0
				line-height 1.7
				display none
				z-index 9999

				.menu-item
					width 100%
					height 100%
					margin 0
					padding 0.25em 0
					text-align left
					transition all 0.25s
					font-size 1em

					a
						width 100%
						height 100%
						display block
						padding 0.25em 0.25em 0.25em 0.5em

						&:hover
						&:active
							color inherit

					&:hover
						background-color $sky
						color $navy



.sb-slidebar
	background $navy !important

	#site-navigation-sb-container
		#site-navigation-sb
			list-style none
			font-size 1.4em
			font-weight 700
			position relative
			margin 2em auto
			line-height 1.4

			a
				color white

				&:hover
				&:active
					color $sky


.site-navigation
	li
		a
			color $sky
			text-decoration none
			transition color 0.25s

			&:hover
			&:active
				color $mag

		.sub-menu
			margin-top 0


#hamburger
	position absolute
	top 50%
	right 1rem
	-transform(translateY(-50%))
	background transparent

	&.c-hamburger
		span
			background-color $navy

			&:before
			&:after
				background-color (@background-color)

		&.is-active
			span
				background-color transparent


#main
	box-sizing border-box

	&.rhd-color-block-area
		width 100%
		margin 0

		#primary
			.entry-content
				p
					&:first-child
					&:last-child
						margin 0
	
	&.wrap
		-wrapper(2em, 2em, 85%, 80rem)


#primary
#secondary
	width 100%
	position relative
	box-sizing border-box


#secondary
	margin-bottom 2em


#content
	background $off-white
	
	article
		-wrapper(0, 0, 100%, 80rem)
		background white

		
#colophon
	width 100%
	height auto
	padding 0.5rem
	background-color $navy
	color white
	position relative

	a
		color $sky

		&:hover
		&:active
			text-decoration underline

	#footer-widget-area
		width 100%

		.textwidget
			text-align center

		.search-form
			-clearfix()
			position relative

			input
				float left
				padding 0.375rem
				border none
				font-family $ff-body
				font-size 1em

			.search-field
				width 75%
				transition background-color 0.25s ease
				background-color white
				border-top-right-radius 0
				border-bottom-right-radius 0

				&:focus
					background-color $cream
					outline none

			.search-submit
				width 25%
				background-color $sky
				border-color (@background-color)
				transition all 0.25s ease
				position absolute
				top 0
				right 0
				z-index 999
				border-top-left-radius 0
				border-bottom-left-radius 0

				&:hover
				&:active
					background-color $sky
					border-color (@background-color)
					color $navy

		.rhd_social_icons
			text-align center

			a
				&:hover
				&:active
					path
						fill $mag

	#footer-hheart-logo
		width 100%
		height 19em
		margin 0 auto
		background white
		position relative

		img
			width 85%
			max-width 100%
			position absolute
			top 50%
			left 50%
			-transform(translate(-50%, -50%))


/* ==========================================================================
	Posts & Pages
   ========================================================================== */

.entry-title
.page-title
	line-height 1
	margin-top 0


.page-title
	text-align center
	font-weight 800
	font-size 1.8em
	padding-top 1em


.entry-summary
	p
		margin-bottom 0


.entry-content
	width 100%
	-clearfix()

	p
		margin 1em auto
		text-indent 0

		&[style*="text-align: center"]
			text-indent 0

		&:first-child
			margin-top 0

		&:last-child
			margin-bottom 0

	h1
	h2
	h3
	h4
	h5
	h6
		line-height 1.1

	ul
		padding-left 1em

	img
	iframe
		-wrapper(1em, 1em, 95%)

	img
		height auto
		display block

		&.mobile-hide
			-invisible()

		&.alignleft
		&.alignright
			float none

	a
		img
			@extends .entry-content img


.entry-meta
	margin 1em 0 0

	p
		margin 0
		display inline-block
		padding 0.5em 0

	a
		color $navy

	.comments-popup
		font-size 1.1em
		font-weight 700
		display inline-block
		padding 1em
		text-align center

	.post-meta
		list-style none
		margin 0
		padding 0 1em 1em 1em
		font-size 1em
		position relative

		.post-meta-item
			width 100%
			margin 0.5em 0

			.post-meta-item-title
				font-weight 700
				font-size 1.1em


#posts-feed
	.post
		margin 1em auto

		&:first-of-type
			margin-top 0

		&:last-of-type
			margin-bottom 0

		.post-inner
			-clearfix()

			.post-content
				padding 1em

		.post-thumbnail
			width 100%
			margin-bottom 0.5em

			img
				width 100%


.blog-area
#posts-feed
	.post
		.entry-header
			margin 0
			text-align center

			.entry-title
				margin 0 0 0.25rem 0

			.entry-details
				margin 0
				font-size 0.8em

				.sep
					font-size 0.8em


.entry-content
	.gallery-item
		.gallery-caption
			font-weight 700
			color $navy


.full-width-header
	width 100%

	.soliloquy-container
		border-bottom 4px solid $navy


.page-featured-image
	width 100%
	height auto
	
	img
		-wrapper(0, 0, auto, 100%)


.pagination
.single-pagination
	margin 1em auto
	font-size 1.1em
	-clearfix()

	.pag-next
	[rel="prev"]
		float left

	.pag-prev
	[rel="next"]
		float right


/* ==========================================================================
	Color Block Content
   ========================================================================== */

#main
	&.rhd-color-block-area
		#primary
			.rhd-color-block
				width 100%
				padding 3em 0

				&:first-child
					padding-bottom 4em
					padding-top 0

				&.rhd-color-block-blue
					background $navy
					color white

				&.rhd-color-block-white
					background white
					color $navy

				.rhd-color-block-content
					-wrapper()


/* ==========================================================================
	Front / About Page
   ========================================================================== */

.front-page
.page-id-25
	#main
		&.rhd-color-block-area
			#primary
				.rhd-color-block
					&:first-child
						padding-top 3em
					
	#rhd-color-block-intro
		text-align center


.front-page
	#rhd-color-block-mission
		h3
			margin-bottom 0.5rem

		p
			margin 0.25em 0

	#rhd-color-block-community-grid
		h3
			-ff-headline()
			font-size 4em
			margin-top 0


.page-id-25
	#rhd-color-block-trust
		.we-are
			-ff-headline()
			font-size 4em
			margin 1rem 0
			text-align center
			display block

		.trust-spell
			font-size 0.9em

			ul
				-wrapper(0, 0, 80%)
				list-style none
				padding-left 0

				li
					line-height 1.2
					margin 0.25em 0
					text-indent -1.15em
					padding-left 1em

					&::first-letter
						font-size 1.75em
						font-weight 700
						padding-right 3px

	#rhd-color-block-answer-the-call
		font-size 3.5em
		line-height 1.1
		-ff-headline()
		text-align center
		padding 2rem 0 !important

		h3
			margin 0
			font-weight normal !important


/* ==========================================================================
	Comments
   ========================================================================== */

#comments
	margin 2em auto

	.commentlist
		list-style none
		padding-left 0

		ul
		ol
			@extends #comments .commentlist

		.children
			padding 0 1.5em

		.comment
			&:last-child
				padding-bottom 1.5em

	.even
		background $off-white

	.odd
		background white

	.comment-body
		padding 1em
		box-sizing border-box

	textarea
		max-width 100%

	#commentform
		width 100%
		min-width 18rem
		max-width 100%

		p
			margin-bottom 0.75rem

		input
		textarea
			width 100%
			font-size 0.8em
			box-sizing border-box
			padding 0.5em
			display inline-block

		#submit
			width auto
			padding-left 0.8em
			cursor pointer

		.comment-subscription-form
			margin initial


/* ==========================================================================
	Ghost Buttons
   ========================================================================== */

.ghost-button
	width auto
	max-width 100%
	text-align center
	margin 1em auto

	a
		padding 0.4em .8em
		color $sky
		text-decoration none
		background-color white
		border 3px solid @color
		border-radius 0.1em
		display inline-block
		transition all 0.2s
		font-weight 700
		letter-spacing 1px
		text-transform uppercase

		&:hover
		&:active
			background-color $sky
			color white

.rhd-color-block
	&.rhd-color-block-blue
		.ghost-button
			a
				color white
				border-color white

				&:hover
				&:active
					background-color white
					color $navy

	.ghost-button
		a
			background-color transparent



/* ==========================================================================
	Widget Areas & Sidebars
   ========================================================================== */

#secondary
	.widget
		width 100%
		margin-bottom 1.5em

	.widget:last-child
		margin-bottom 0


	.widget-title
		margin 0 0 0.25em 0
		text-align center
		font-size 1.3em
		font-weight 800


/* ==========================================================================
	Modern Tribe Events Calendar
   ========================================================================== */

.tribe-is-responsive
	#content
		background white
		-wrapper(2em, 2em)

#tribe-events-bar
	margin-bottom 0


/* ==========================================================================
	Media Queries
   ========================================================================== */

@media screen and (min-width 40em)
	#masthead
		height 6em
		transition all 0.25s
		z-index 9999

		#site-title
			width 23%
			height auto
			margin 0
			position absolute
			top 50%
			left 2%
			-transform(translateY(-50%))

	#site-navigation-container
		width 72%
		display block
		margin-top 0
		transition all 0.25s
		position absolute
		right 2%
		top 63%
		-transform(translateY(-50%))

		.menu-item
			font-size 0.8em

	#hamburger
		display none

	#posts-feed
		&.small-thumbnails
			.post
				-clearfix()

				&.has-post-thumbnail
					.post-content
						width 63%
						float right

					.post-thumbnail
						width 32%
						max-width 300px
						float left
						border none
						margin-bottom 0

	//#posts-feed
	.post
		border 2px solid $navy
		border-radius 2px

		.entry-header
			background $sky_trans
			padding 1em
			margin 0

			.entry-title
				margin 0 0 0.25rem

				a
					color $navy
					transition color 0.25s

					&:hover
					&:active
						color $sky
						text-decoration none

	.entry-meta
		.entry-meta-links
			background-color $sky_trans

			.comments-popup
				width 100%

			.post-meta
				margin 0
				padding 0
				position relative
				-clearfix()
				display table
				background-color $sky_trans

				.post-meta-item
					width 50%
					height 100%
					display table-cell
					padding 1em 0
					vertical-align top
					text-align center
					transition all 0.5s ease

					&:hover
						background-color $sky_half

					a
						color inherit
						transition color 0.5s ease

					.post-meta-item-title
						font-weight 700
						font-size 1.1em

	#colophon
		#footer-widget-area
			width 37%

			#footer-widget-area-left
				padding-left 1em

			.textwidget
				text-align left

			.rhd_social_icons
				text-align left

		#footer-hheart-logo
			width 300px
			height 97%
			position absolute
			right 0.25rem
			top 0.25rem

	#comments
		#commentform
			width 75%

			p
				margin-bottom 0.75rem

			input
				&[type="text"]
				&[type="email"]
					width 75%

			#submit
				width auto
				padding-left 0.8em

	// Image Strip
	#primary
		-clearfix()

		article
			&.strip-active
				width 65%
				float right

		#image-strip
			width 30%
			float left
			margin-right 5%

			img
				width 100%
				height auto
				margin-bottom 2em
				display block

	.entry-content
		img
		iframe
			-unwrapper(initial)

		img
			&.mobile-hide
				-invisible(false)

			&.alignleft
				margin-right 1em
				float left

			&.alignright
				margin-left 1em
				float right

			&.aligncenter
				margin 0 auto

		a
			img
				@extends .entry-content img

		.gallery-item
			img
				display block
				margin 0 auto

	// Color Block areas
	.rhd-color-block-content
		-clearfix()
		position relative


	// Front
	.front-page
	.page-id-25
		.intro-text
			width 60%
			float left

		.intro-image
			width 30%
			position absolute
			right 0
			top 50%
			-transform(translateY(-50%))

			img
				-wrapper(0, 0, 100%, 300px)

	// Front Page
	.front-page
		#rhd-color-block-intro
			padding 3em 0

	// About
	.page-id-25
		#rhd-color-block-intro
			padding 3em 0


		#rhd-color-block-trust
			position relative

			.rhd-color-block-content
				-clearfix()

				.we-are
					width 40%
					position absolute
					top 50%
					left 25%
					-transform(translate(-50%, -50%))

				.trust-spell
					width 59%
					font-size 1em
					float right

					ul
						li
							&::first-letter
								padding-right 0


@media screen and (min-width 60em)
	#masthead
		height 8em

		#site-title
			width 24%
			left 4%

	#site-navigation-container
		width 60%
		right 4%
		top 62%

		.menu-item
			font-size 0.9em


// Fixed-width 340px sidebar
@media screen and (min-width 40em)
	#main
		-clearfix()

	#primary
		float left

		&.full-width
			width 100%
			float none

	#secondary
		width 340px
		float right

		.widget
			width 300px
			margin-left auto
			margin-right auto


@media screen and (min-width 58em)
	#primary
		width 56%


@media screen and (min-width 62em)
	#primary
		width 58%


@media screen and (min-width 64em)
	#primary
		width 60%


@media screen and (min-width 66em)
	#primary
		width 63%


@media screen and (max-width 34em)
	#colophon
		#footer-hheart-logo
			height 13em