@require "partials/_global.styl"
@require "partials/_wp-core.styl"
@require "partials/_defaults.styl"
@require "partials/_fonts.styl"
@require "partials/_helpers.styl"
@require "partials/_metabar.styl"
@require "partials/_hamburger.styl"
@require "partials/_ghost-button.styl"


/* ==========================================================================
	Main Styles
   ========================================================================== */

html
body
#page
#main
	min-height 100%
	
	
html
	text-shadow 0 0 1px transparent
	width 100%
	font-size 16px
	margin 0
	font-family $ff_body
	font-weight 300
	color $c_text


body
	@extends html

	&.admin-bar
		#wpadminbar
			position fixed
			top 0
	
	&.front-page
		background-size auto 100%
		background-repeat no-repeat

		@media screen and (orientation landscape)
			background-position center center
		
		@media screen and (orientation portrait)
			background-position -6em center


a
	outline 0 !important
	transition all 0.25s
	color $c_ter
	text-decoration none

	&:hover
	&:active
		text-decoration underline


input
textarea
	background-color $c_bg
	border 2px solid $c_sec
	box-sizing border-box
	padding 0.5em
	font-family $ff_body
	-placeholder-props( $ff_body, gray )
	outline 0 !important
	transition all 0.25s

	&:focus
		border-color $off_white


input[type="submit"]
	cursor pointer
	font-family $ff_body
	transition all 0.25s

	&:hover
		background-color gray


#page
	margin 0


.site-header
	position relative


.site-title
	-wrapper(0, 0, 96%)
	text-align center
	display block
	line-height 1
	-ff-headline()
	
	a
		color inherit
		text-decoration none


#site-title-mobile
	font-size 2.6em
	font-size 9vw


#site-navigation-container
	width 100vw
	text-align center
	z-index 999
	display none

	#site-navigation
		list-style none
		padding-left 0
		margin 0.75em 0

		.menu-item
			display block
			font-size 1.1em
			line-height 1.8
			-ff-title()


.site-navigation
	li
		a
			color $c_text
			text-decoration none
			transition color 0.25s
			text-transform uppercase
			font-weight 300

			&:hover
			&:active
				color $c_ter


#hamburger
	margin 0 auto


#main
	width 100%
	padding 2em 0
	box-sizing border-box


#primary
#secondary
	width 100%
	margin-top 1em
	position relative
	box-sizing border-box


#content
	-wrapper()


.colophon
	width 100%
	position relative

	.site-info
		-wrapper(0, 0, 95%)
		text-align center
		color white

		a
			color $c_ter

			&:hover
			&:active
				color $c_ter

		img
			width 100%
			height auto

		.rhd-logo-footer
			width 1.35em
			height 1.35em
			margin 0 0.05em
			position relative
			bottom 0.25em


#colophon-mobile
	background $c_sec
	
	.site-info
		padding 0.5em 0
		font-size 0.9em
		


/* ==========================================================================
	Posts & Pages
   ========================================================================== */

.entry-title
.page-title
.widget-title
	margin-top 0
	line-height 1


.page-title
.entry-title
	-ff-title()
	text-align center
	font-size 2.2em
	margin-bottom 1rem


.entry-summary
	p
		margin 0


.entry-content
	width 100%

	p
		margin 0.75em auto
		text-indent 0

		&[style*="text-align: center"]
			text-indent 0

		&:first-child
			margin-top 0

		&:last-child
			margin-bottom 0

	h1
	h2
	h3
	h4
	h5
	h6
		line-height 1.1

	ul
		padding-left 1em

	img
	iframe
		-wrapper(1em, 1em, 100%)

	img
		height auto
		display block

		&.alignleft
		&.alignright
			float none

	a
		img
			@extends .entry-content img


.entry-meta
	p
		margin 0


.blog-area
	article
		-clearfix()
		margin 1em auto

		&:first-child
			margin-top 0

		.entry-header
			text-align center
			margin-bottom 1em

			a
				color inherit

				&:hover
				&:active
					color $c_ter
					text-decoration none

			.entry-title
				margin 0 0 0.25rem 0

		.entry-thumbnail
			width 100%
			height auto

			img
				width 100%
				height auto


.pagination
.single-pagination
	margin 1em auto
	font-size 1.1em
	-clearfix()

	.pag-link
	.pag-load-more
		-ghost-button-container()

		a
			-ghost-button()

	.pag-next
		float left

	.pag-prev
		float right

	.pag-load-more
		display block
		margin 0 auto


/* ==========================================================================
	Comments
   ========================================================================== */

#comments
	margin 2em auto

	.comment-list
		list-style none
		padding-left 0

		ul
		ol
			@extends #comments .comment-list

		.children
			padding 0 1.5em

		.comment
			&:last-child
				padding-bottom 1.5em

	.even
		background $off_white

	.odd
		background $near_white

	.comment-body
		padding 1em
		box-sizing border-box

	textarea
		max-width 100%

	#commentform
		width 100%
		min-width 18rem
		max-width 100%

		p
			margin-bottom 0.75rem

		input
		textarea
			width 100%
			font-size 0.8em
			box-sizing border-box
			padding 0.5em
			display inline-block

		#submit
			width auto
			padding-left 0.8em
			cursor pointer

		.comment-subscription-form
			margin initial


/* ==========================================================================
	Widget Areas & Sidebars
   ========================================================================== */

#secondary
	.widget
		width 100%

	.widget:last-child
		margin-bottom 0

	.widget-title
		margin-top 0
	
	.secondary-page-title
		background $c_sec
		color white
		margin-bottom 0
		
		.page-title
			padding 1em 0
			margin-bottom 0
	
	#page-featured-image
		img
			width 100%
			height auto


/* ==========================================================================
	Front Page
   ========================================================================== */

.front-page
	.site-title
	.menu-item a
		color white
		font-weight 700
	
	#hamburger
		display none
	
	#site-navigation-container
		-wrapper(1em, 0)
		display block
		
		#site-navigation
			-flexbox()
		
			li
				-flexitem()
	
	#colophon-mobile
		position absolute
		bottom 0


/* ==========================================================================
	Projects Page
   ========================================================================== */

.projects-grid
	-flexbox()
	-delist()
	
	.project-item
		width 48%
		max-width 400px
		-flexitem()


/* ==========================================================================
	Photos Page
   ========================================================================== */
   
.page-id-11
	.gallery
		.gallery-item-sizer
		.gallery-item
			width 49%
			
			@media screen and (min-width 40rem)
				width 32.665%

		.gutter-sizer
			width 1%

		.gallery-item
			max-width none
			padding 0
			overflow hidden
			cursor pointer
			
			img
				height auto
				max-width 100%

			.gallery-caption
				position absolute
				display inline
				left 0
				top 999px
				transition all 0.5s ease-out
				visibility hidden

			&.gigante
				width 100%
				height auto

				img
					width 100%
					height auto

				.gallery-caption
					width 100%
					padding 1em
					font-size 1.1em
					text-align left
					font-family $ff-body
					background rgba(0,0,0,0.5)
					top initial
					bottom 0
					visibility visible
					color white


/* ==========================================================================
	Extras
   ========================================================================== */

#primary
	-soliloquy()


.mobile-only
	@media screen and (min-width 40em)
		-invisible()


.large-only
	-invisible()

	@media screen and (min-width 40em)
		-invisible(false)

/* ==========================================================================
	Media Queries
   ========================================================================== */

@require "partials/_desktop.styl"
