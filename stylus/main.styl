@require "partials/_global.styl"
@require "partials/_wp-core.styl"
@require "partials/_fonts.styl"
@require "partials/_helpers.styl"
//@require "partials/_metabar.styl"
@require "partials/_defaults.styl"
@require "partials/_hamburger.styl"


/* ==========================================================================
	Main Styles
   ========================================================================== */

html
body
#page
#main
	min-height 100%


html
	text-shadow 0 0 1px transparent
	width 100%
	font-size 16px
	margin 0
	color $color1
	font-family $ff_body


body
	@extends html

	&.admin-bar
		#wpadminbar
			position fixed
			top 0


a
	outline 0 !important

	&:link
	&:visited
		text-decoration none
		color $color2

	&:hover
	&:active
		text-decoration underline


input
textarea
	background-color white
	border 2px solid $color2
	box-sizing border-box
	padding 0.5em
	font-family $ff_body
	-placeholder-props( $ff_body, gray )
	outline 0 !important
	transition all 0.25s

	&:focus
		border-color $color3


hr
	-wrapper(1em, 1em)
	height 4px
	background-color $color1


input[type="submit"]
	cursor pointer
	font-family $ff_body
	transition all 0.25s

	&:hover
		background-color gray


#masthead
	width 100%
	height auto
	position relative
	border-bottom 4px solid $color1


#site-title
	-wrapper(1em, 1em, 80%)
	height auto
	max-width 18rem
	display block
	transition left 0.25s
	transition width 0.25s


#site-navigation-container
	width 100%
	text-align center
	display none

	#site-navigation
		list-style none
		padding-left 0
		margin 0.5em 0 0 0
		-flexbox()

		.menu-item
			-flexitem()
			text-transform uppercase
			font-weight 700

			a
				color inherit

				&:hover
				&:active
					color $color2

			.sub-menu
				position absolute
				padding-left 0
				line-height 1.7
				margin-top 0.2em
				z-index 999 !important

				li
					display block
					margin 0


#site-navigation-sb-container
	#site-navigation-sb
		list-style none


.site-navigation
	li
		a
			color $color2
			text-decoration none
			transition color 0.25s

			&:hover
			&:active
				color $color3


#hamburger
	background-color black // sample bg animation color

	&.is-active
		background-color gray // sample bg animation color

		&.c-hamburger--htx
			span
				background none


#main
	-wrapper(2em,2em)
	padding 2em 0
	box-sizing border-box


#primary
#secondary
	width 100%
	margin-top 1em
	position relative
	box-sizing border-box


#secondary
	margin-bottom 2em


#colophon
	width 100%
	height 6em
	position relative

	.site-info
		width 100%
		margin 0
		position absolute
		top 50%
		left 0
		-transform(translateY(-50%))
		text-align center
		line-height 1.7
		font-size 0.9em

		a
			color inherit

	#rhd-logo-footer
		width 1.35em
		height 1.35em
		margin 0 0.05em
		position relative
		bottom 0.25em


/* ==========================================================================
	Posts & Pages
   ========================================================================== */

.entry-title
.page-title
	margin-top 0
	line-height 1


.entry-content
	width 100%

	p
		margin 0.25em auto
		text-indent 0

		&[style*="text-align: center"]
			text-indent 0

		&:first-child
			margin-top 0

		&:last-child
			margin-bottom 0

	h1
	h2
	h3
	h4
	h5
	h6
		line-height 1.1

	ul
		padding-left 1em

	img
	iframe
		-wrapper(1em, 1em, 90%)
		float none

	img
		height auto

		&.alignleft
			margin-right 1em

		&.alignright
			margin-left 1em

		&.aligncenter
			display block
			margin 0 auto


.entry-meta
	p
		margin 0


#posts-feed
	.post
		padding 1em
		margin 1em auto
		border 2px solid $color1
		border-radius 2px

		&:first-of-type
			margin-top 0

		&:last-of-type
			margin-bottom 0

		.post-thumbnail
			border 1px solid $color1

		.entry-header
			margin 1em 0
			text-align center

			.entry-title
				margin 0 0 0.25rem 0

			.entry-details
				margin 0
				font-size 0.8em

				.sep
					font-size 0.8em


.pagination
.single-pagination
	margin 1em auto
	font-size 1.1em
	-clearfix()

	.pag-next
	[rel="prev"]
		float left

	.pag-prev
	[rel="next"]
		float right


/* ==========================================================================
	Page Template
   ========================================================================== */

.front-page
	#main
		-unwrapper(100%)
		padding 0

		#front-page-news
			-wrapper()

		#primary
			padding 2em 0 2em

		#secondary
			padding 2em 0 1em

		#front-page-slideshow
			width 100%

			.soliloquy-image
				border-bottom 4px solid $color1

		#front-page-quick-links
			background-color $off_white
			padding 2em 0


/* ==========================================================================
	Ghost Buttons
   ========================================================================== */

.ghost-button
	width auto
	max-width 100%
	text-align center
	margin 1em auto

	a
		padding 0.4em .8em
		color $color2
		text-decoration none
		background-color white
		border 3px solid @color
		border-radius 0.1em
		display inline-block
		transition all 0.2s

		&:hover
		&:active
			background-color @color
			color @background-color


/* ==========================================================================
	Widget Areas & Sidebars
   ========================================================================== */

#secondary
	.widget
		width 100%
		margin-bottom 1.5em

	.widget:last-child
		margin-bottom 0


	.widget-title
		margin-top 0


/* ==========================================================================
	Media Queries
   ========================================================================== */

@media screen and (min-width 40em)
	#masthead
		height 7em
		transition all 0.25s

		#site-title
			width 23%
			height auto
			margin 0
			position absolute
			top 50%
			left 2%
			-transform(translateY(-50%))

	#site-navigation-container
		width 72%
		display block
		margin-top 0
		transition all 0.25s
		position absolute
		right 2%
		top 55%
		-transform(translateY(-50%))

		.menu-item
			font-size 0.8em

	#hamburger
		display none

	#posts-feed
		.post
			-clearfix()

			&.has-post-thumbnail
				.post-content
					width 70%
					float right

				.post-thumbnail
					width 25%
					max-width 300px
					float left
					border none

			.entry-header
				text-align left
				margin-top 0

				.entry-title
					margin 0 0 0.25rem

	#comments
		#commentform
			width 75%

			p
				margin-bottom 0.75rem

			input
				&[type="text"]
				&[type="email"]
					width 75%

			#submit
				width auto
				padding-left 0.8em

	// Image Strip
	#primary
		-clearfix()

		article
			&.strip-active
				width 65%
				float right

		#image-strip
			width 30%
			float left
			margin-right 5%

			img
				width 100%
				height auto
				margin-bottom 2em
				display block

	.entry-content
		img
		iframe
			width initial
			-unwrapper(initial)

	.front-page
		#front-page-news
			-wrapper()


@media screen and (min-width 60em)
	#masthead
		height 10em

		#site-title
			width 27%
			left 4%

	#site-navigation-container
		width 60%
		right 4%

		.menu-item
			font-size 0.9em


// Fixed-width 340px sidebar
@media screen and (min-width 40em)
	#main
		-clearfix()

	#front-page-news
		-wrapper()

	#primary
		float left

	#secondary
		width 340px
		float right

		.widget
			width 300px
			margin-left auto
			margin-right auto


@media screen and (min-width 58em)
	#primary
		width 56%


@media screen and (min-width 62em)
	#primary
		width 58%


@media screen and (min-width 64em)
	#primary
		width 60%


@media screen and (min-width 66em)
	#primary
		width 64%
