@require "partials/_global.styl"
@require "partials/_wp-core.styl"
@require "partials/_fonts.styl"
@require "partials/_helpers.styl"
@require "partials/_defaults.styl"
@require "partials/_hamburger.styl"
@require "partials/_plugins.styl"


/* ==========================================================================
	Main Styles
   ========================================================================== */

html
	width 100%
	height auto
	text-shadow 0 0 1px transparent
	font-size 16px
	margin 0
	color $gray
	font-family $ff-body


body
	@extends html

	&.admin-bar
		#wpadminbar
			position fixed
			top 0


a
	outline 0 !important

	&:link
	&:visited
		text-decoration none
		color $sky

	&:hover
	&:active
		text-decoration underline


input
textarea
	background-color white
	border 2px solid $sky
	box-sizing border-box
	padding 0.5em
	font-family $ff-body
	-placeholder-props( $ff-body, gray )
	outline 0 !important
	transition all 0.25s

	&:focus
		border-color $mag


hr
	width 85%
	height 4px !important
	margin 2em auto !important
	background-color $navy


input[type="submit"]
	cursor pointer
	font-family $ff-body
	transition all 0.25s

	&:hover
		background-color gray


.cheddar
	-ff-headline()


#masthead
	width 100%
	height auto
	position relative
	background white
	border-bottom 4px solid $navy
	-clearfix()


#site-title
	width 60%
	margin 1em 0
	display inline-block
	float left
	position relative
	left 1em
	max-width 18rem
	display block
	transition left 0.25s
	transition width 0.25s
	z-index 1

	object
		z-index -1
		pointer-events none


#site-navigation-container
	width 100%
	text-align center
	display none

	#site-navigation
		list-style none
		padding-left 0
		margin 0
		-flexbox()

		.menu-item
			-flexitem()
			text-transform uppercase
			font-weight 700
			position relative

			a
				color $navy

				&:hover
				&:active
					color $sky

			.ghost-button
				a
					background-color $sky
					color white
					transition all 0.25s
					border-color $navy

					&:hover
					&:active
						background-color $navy

			.sub-menu
				width 14em
				position absolute
				left -0.5em
				background-color rgba(255,255,255,0.95)
				padding-top 0.3em
				padding-left 0
				line-height 1.7
				display none
				z-index 9999

				.menu-item
					width 100%
					height 100%
					margin 0
					padding 0.25em 0
					text-align left
					transition all 0.25s
					font-size 1em

					a
						width 100%
						height 100%
						display block
						padding 0.25em 0.25em 0.25em 0.5em

						&:hover
						&:active
							color inherit

					&:hover
						background-color $sky
						color $navy



.sb-slidebar
	background $navy !important

	#site-navigation-sb-container
		#site-navigation-sb
			list-style none
			font-size 1.4em
			font-weight 700
			position relative
			margin 2em auto
			line-height 1.4

			a
				color white

				&:hover
				&:active
					color $sky


.site-navigation
	li
		a
			color $sky
			text-decoration none
			transition color 0.25s

			&:hover
			&:active
				color $mag

		.sub-menu
			margin-top 0


#hamburger
	position absolute
	top 50%
	right 1rem
	-transform(translateY(-50%))
	background transparent

	&.c-hamburger
		span
			background-color $navy

			&:before
			&:after
				background-color (@background-color)

		&.is-active
			span
				background-color transparent


#page
	background-color lighten($off-white,7)


#main
	box-sizing border-box
	background white

	&.rhd-color-block-area
		width 100%

		#primary
			.entry-content
				p
					&:first-child
					&:last-child
						margin 0

	&.wrap
		width 100%

		#main-inner
			-wrapper(2em, 2em, 85%, 80rem)
			padding 0


#primary
#secondary
	width 100%
	position relative
	box-sizing border-box


#secondary
	margin-bottom 2em


#content
	article
		-wrapper(0, 0, 100%, 80rem)
		background white


#colophon
	width 100%
	height auto
	padding 0.5rem
	background-color $navy
	color white
	position relative

	a
		color $sky

		&:hover
		&:active
			text-decoration underline

	#footer-widget-area
		width 100%

		.textwidget
			text-align center

		.search-form
			-clearfix()
			position relative

			input
				float left
				padding 0.375rem
				border none
				font-family $ff-body
				font-size 1em

			.search-field
				width 75%
				transition background-color 0.25s ease
				background-color white
				border-top-right-radius 0
				border-bottom-right-radius 0

				&:focus
					background-color $cream
					outline none

			.search-submit
				width 25%
				background-color $sky
				border-color (@background-color)
				transition all 0.25s ease
				position absolute
				top 0
				right 0
				z-index 999
				border-top-left-radius 0
				border-bottom-left-radius 0

				&:hover
				&:active
					background-color $sky
					border-color (@background-color)
					color $navy

		.rhd_social_icons
			text-align center
			margin 1em auto

			a
				width 100%
				height 100%
				display block
				transition background 0.25s

				&:hover
				&:active
					background white

	#footer-hheart-logo
		width 100%
		height 19em
		margin 0 auto
		background white
		position relative

		img
			width auto
			max-width 100%
			height 95%
			position absolute
			top 50%
			left 50%
			-transform(translate(-50%, -50%))


/* ==========================================================================
	Posts & Pages
   ========================================================================== */

.entry-title
.page-title
	line-height 1
	margin-top 0
	color $navy


.page-title
	text-align center
	font-weight 800
	font-size 1.8em


.entry-summary
	p
		margin-bottom 0


.entry-content
	width 100%
	-clearfix()

	p
		margin 1em auto
		text-indent 0

		&[style*="text-align: center"]
			text-indent 0

		&:first-child
			margin-top 0

		&:last-child
			margin-bottom 0

	h1
	h2
	h3
	h4
	h5
	h6
		line-height 1.1

	ul
		padding-left 1em

	img
	iframe
		-wrapper(1em, 1em, 95%)

	img
		height auto
		display block

		&.mobile-hide
			-invisible()

		&.alignleft
		&.alignright
			float none

	a
		img
			@extends .entry-content img


.entry-meta
	margin 1em 0 0

	p
		margin 0
		display inline-block
		padding 0.5em 0

	a
		color $navy

	.comments-popup
		font-size 1.1em
		font-weight 700
		display inline-block
		padding 1em
		text-align center

	.post-meta
		list-style none
		margin 0
		padding 0 1em 1em 1em
		font-size 1em
		position relative

		.post-meta-item
			width 100%
			margin 0.5em 0

			.post-meta-item-title
				font-weight 700
				font-size 1.1em


#posts-feed
	.post
		margin 1em auto

		&:first-of-type
			margin-top 0

		&:last-of-type
			margin-bottom 0

		.post-inner
			-clearfix()

			.post-content
				padding 1em

		.post-thumbnail
			width 100%
			margin-bottom 0.5em

			img
				width 100%


.blog-area
#posts-feed
	.post
		.entry-header
			margin 0
			text-align center

			.entry-title
				margin 0 0 0.25rem 0

			.entry-details
				margin 0
				font-size 0.8em

				.sep
					font-size 0.8em


.entry-content
	.gallery-item
		.gallery-caption
			font-weight 700
			color $navy


.full-width-header
	width 100%
	border-bottom 3px solid $navy

	img
		width 100%
		height auto

	.soliloquy-container
		border-bottom 4px solid $navy


.page-featured-image
	width 100%
	height auto

	img
		-wrapper(0, 0, auto, 100%)


.pagination
.single-pagination
	margin 1em auto
	font-size 1.1em
	-clearfix()

	.pag-next
	[rel="prev"]
		float left

	.pag-prev
	[rel="next"]
		float right


/* ==========================================================================
	Color Block Content
   ========================================================================== */

#main
	&.rhd-color-block-area
		#primary
			.rhd-color-block
				width 100%
				padding 3em 0

				&:first-child
					padding-bottom 4em
					padding-top 0

				&.rhd-color-block-blue
					background $navy
					color white

				&.rhd-color-block-sky
					background $skylight
					border-top 3px solid $navy
					border-bottom 3px solid $navy
					color $navy

				&.rhd-color-block-white
					background white

				.rhd-color-block-content
					-wrapper()


/* ==========================================================================
	Front / About Page
   ========================================================================== */

.front-page
.page-id-25
	#main
		&.rhd-color-block-area
			#primary
				.rhd-color-block
					&:first-child
						padding-top 3em

	#rhd-color-block-intro
		text-align center


.front-page
	#rhd-color-block-mission
		h3
			margin-bottom 0.5rem

		p
			margin 0.25em 0

	#rhd-color-block-community-grid
		h3
			-ff-headline()
			font-size 4em
			margin-top 0
			color $navy


.page-id-25
	#rhd-color-block-trust
		.we-are
			-ff-headline()
			font-size 4em
			margin 1rem 0
			text-align center
			display block

		.trust-spell
			font-size 0.9em

			ul
				-wrapper(0, 0, 80%)
				list-style none
				padding-left 0

				li
					line-height 1.2
					margin 0.25em 0
					text-indent -1.15em
					padding-left 1em

					&::first-letter
						font-size 1.75em
						font-weight 700
						padding-right 3px

	#rhd-color-block-answer-the-call
		font-size 3.5em
		line-height 1.1
		-ff-headline()
		text-align center
		padding 2rem 0 !important

		h3
			margin 0
			font-weight normal !important


/* ==========================================================================
	Comments
   ========================================================================== */

#comments
	margin 2em auto

	.commentlist
		list-style none
		padding-left 0

		ul
		ol
			@extends #comments .commentlist

		.children
			padding 0 1.5em

		.comment
			&:last-child
				padding-bottom 1.5em

	.even
		background $off-white

	.odd
		background white

	.comment-body
		padding 1em
		box-sizing border-box

	textarea
		max-width 100%

	#commentform
		width 100%
		min-width 18rem
		max-width 100%

		p
			margin-bottom 0.75rem

		input
		textarea
			width 100%
			font-size 0.8em
			box-sizing border-box
			padding 0.5em
			display inline-block

		#submit
			width auto
			padding-left 0.8em
			cursor pointer

		.comment-subscription-form
			margin initial


/* ==========================================================================
	Ghost Buttons
   ========================================================================== */

.ghost-button
	width auto
	max-width 100%
	text-align center
	margin 1em auto

	a
		padding 0.4em .8em
		color $sky
		text-decoration none
		background-color white
		border 3px solid @color
		border-radius 0.1em
		display inline-block
		transition all 0.2s
		font-weight 700
		letter-spacing 1px
		text-transform uppercase

		&:hover
		&:active
			background-color $sky
			color white

.rhd-color-block
	&.rhd-color-block-blue
		.ghost-button
			a
				color white
				border-color white

				&:hover
				&:active
					background-color white
					color $navy

	.ghost-button
		a
			background-color transparent



/* ==========================================================================
	Widget Areas & Sidebars
   ========================================================================== */

#secondary
	.widget
		width 100%
		margin-bottom 1.5em

	.widget:last-child
		margin-bottom 0


	.widget-title
		margin 0 0 0.25em 0
		text-align center
		font-size 1.3em
		font-weight 800


/* ==========================================================================
	Donation Pages
   ========================================================================== */

.post-template-template-donation_page-basic-php
	#main
		#main-inner
			width 100%

		#primary
		#donation-form-area
			-wrapper(0, 2em, 90%)


.donation-main-content
	.page-title
		text-align center

	.donation-page-thumbnail
		img
			width auto
			max-width 100%
			margin 1em auto
			border 3px solid $navy
			display block


#donation-headline
	width 100%
	padding 1rem 0
	-ff-headline()
	text-align center
	color white
	background-color $skylight
	border-top 3px solid $navy
	border-bottom 3px solid $navy
	color $navy

	.donation-headline-text
		font-size 3em
		margin 0
		font-weight normal


#donation-intro
	-wrapper(2em, 2em, 75%)
	text-align center;
	font-size 1.1em;


#donation-form-container
	-wrapper(1em, 1em, 100%)
	padding 1rem
	border 2px solid $navy

	#donation-form
		.donation-select-label
			font-weight 700
			margin-bottom 0.5em

		ul
			padding 0
			list-style none
			-flexbox()
			margin 0

			.donation-selector
				width 23%
				-flexitem()

				button
					width 100%
					@extends .ghost-button a
					border-color $navy
					color $navy
					cursor pointer
					padding 0.75em inherit

					&:hover
						color white
						background $navy

					&.active
						border-color $sky
						background $sky
						color white

		#donation-custom-amount-container
			width 70%
			padding 0.7em 0 0.7em 0.5rem
			border 3px solid $navy
			position relative

			.donation-custom-amount-currency
				font-family $ff-body
				font-size 1.3em
				color $navy
				font-weight bold

			#donation-custom-amount
				width 89%
				position absolute
				right 0.75em
				top 50%
				font-family $ff-body
				font-weight bold
				-transform(translateY(-50%))
				border none
				color $navy
				font-size 1.3em
				padding 0
				-placeholder-props( $ff-body, $navy, null, 1em )

		.donation-recur
			margin-right 1em
			font-weight 700

			input
				margin-right 3px

		#donate-submit
			@extends .ghost-button a
			border-color $navy
			background-color $navy
			color white
			padding 0.75em 0.5em
			display block
			margin 1em 0 0

			&:hover
			&:active
				background $sky
				border-color $sky


#donation-allocations-table
	border none

	tr
	th
	td
		border none

	td
		padding 0.5em 0
		line-height 1

	.donation-allocation-amount
		width 40%
		font-size 2.5em
		font-weight 800
		text-align right
		padding-right 1rem
		border-right 3px solid $navy

	.donation-allocation-text
		padding-left 1em


/* ==========================================================================
	Modern Tribe Events Calendar
   ========================================================================== */

#tribe-events-bar
	margin-bottom 0


/* ==========================================================================
	Media Queries
   ========================================================================== */

@require "partials/_desktop.styl"