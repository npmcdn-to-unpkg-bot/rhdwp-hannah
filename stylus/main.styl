@require "partials/_global.styl"
@require "partials/_wp-core.styl"
@require "partials/_fonts.styl"
@require "partials/_helpers.styl"
//@require "partials/_metabar.styl"
@require "partials/_defaults.styl"
@require "partials/_hamburger.styl"


/* ==========================================================================
	Main Styles
   ========================================================================== */

html
body
#page
#main
	min-height 100%


html
	text-shadow 0 0 1px transparent
	width 100%
	font-size 16px
	margin 0
	color $navy
	font-family $ff_body


body
	@extends html

	&.admin-bar
		#wpadminbar
			position fixed
			top 0


a
	outline 0 !important

	&:link
	&:visited
		text-decoration none
		color $sky

	&:hover
	&:active
		text-decoration underline


input
textarea
	background-color white
	border 2px solid $sky
	box-sizing border-box
	padding 0.5em
	font-family $ff_body
	-placeholder-props( $ff_body, gray )
	outline 0 !important
	transition all 0.25s

	&:focus
		border-color $mag


hr
	width 85%
	height 4px !important
	margin 2em auto !important
	background-color $navy


input[type="submit"]
	cursor pointer
	font-family $ff_body
	transition all 0.25s

	&:hover
		background-color gray


#masthead
	width 100%
	height auto
	position relative
	border-bottom 4px solid $navy


#site-title
	-wrapper(1em, 1em, 80%)
	height auto
	max-width 18rem
	display block
	transition left 0.25s
	transition width 0.25s


#site-navigation-container
	width 100%
	text-align center
	display none

	#site-navigation
		list-style none
		padding-left 0
		margin 0
		-flexbox()

		.menu-item
			-flexitem()
			text-transform uppercase
			font-weight 700

			a
				color inherit

				&:hover
				&:active
					color $sky

			.sub-menu
				position absolute
				padding-left 0
				line-height 1.7
				margin-top 0.2em
				z-index 999 !important

				li
					display block
					margin 0


#site-navigation-sb-container
	#site-navigation-sb
		list-style none


.site-navigation
	li
		a
			color $sky
			text-decoration none
			transition color 0.25s

			&:hover
			&:active
				color $mag


#hamburger
	background-color black // sample bg animation color

	&.is-active
		background-color gray // sample bg animation color

		&.c-hamburger--htx
			span
				background none


#main
	-wrapper(2em,2em)
	box-sizing border-box


#primary
#secondary
	width 100%
	margin-top 1em
	position relative
	box-sizing border-box


#secondary
	margin-bottom 2em


#colophon
	width 100%
	height auto
	padding 0.5rem
	background-color $navy
	color white
	position relative

	a
		color $sky

		&:hover
		&:active
			text-decoration underline

	#footer-widget-area
		width 100%

		.textwidget
			text-align center

		.search-form
			-clearfix()
			position relative

			input
				float left
				padding 0.375rem
				border none
				font-family $ff_body
				font-size 1em

			.search-field
				width 75%
				transition background-color 0.25s ease
				background-color white
				border-top-right-radius 0
				border-bottom-right-radius 0

				&:focus
					background-color $cream
					outline none

			.search-submit
				width 25%
				background-color $sky
				border-color (@background-color)
				transition all 0.25s ease
				position absolute
				top 0
				right 0
				z-index 999
				border-top-left-radius 0
				border-bottom-left-radius 0

				&:hover
				&:active
					background-color $yellow
					border-color (@background-color)
					color $navy

		.rhd_social_icons
			text-align center

	#footer-hheart-logo
		width 100%
		height 13em
		margin 0 auto
		background white
		position relative

		img
			width 85%
			position absolute
			top 50%
			left 50%
			-transform(translate(-50%, -50%))


/* ==========================================================================
	Posts & Pages
   ========================================================================== */

.entry-title
.page-title
	line-height 1
	margin-top 0


.page-title
	text-align center
	font-weight 800
	font-size 1.7em


.entry-content
	width 100%

	p
		margin 1em auto
		text-indent 0

		&[style*="text-align: center"]
			text-indent 0

		&:first-child
			margin-top 0

		&:last-child
			margin-bottom 0

	h1
	h2
	h3
	h4
	h5
	h6
		line-height 1.1

	ul
		padding-left 1em

	img
	iframe
		-wrapper(1em, 1em, 90%)

	img
		height auto

		&.alignleft
			margin-right 1em

		&.alignright
			margin-left 1em

		&.aligncenter
			display block
			margin 0 auto


.entry-meta
	p
		margin 0


#posts-feed
	.post
		padding 1em
		margin 1em auto
		border 2px solid $navy
		border-radius 2px

		&:first-of-type
			margin-top 0

		&:last-of-type
			margin-bottom 0

		.post-thumbnail
			width 100%
			border 1px solid $navy
			margin-bottom 0.5em

			img
				width 100%


.blog-area
#posts-feed
	.post
		.entry-header
			margin 1em 0
			text-align center

			.entry-title
				margin 0 0 0.25rem 0

			.entry-details
				margin 0
				font-size 0.8em

				.sep
					font-size 0.8em


.full-width-slideshow
	width 100%

	.soliloquy-image
		border-bottom 4px solid $navy


.pagination
.single-pagination
	margin 1em auto
	font-size 1.1em
	-clearfix()

	.pag-next
	[rel="prev"]
		float left

	.pag-prev
	[rel="next"]
		float right


/* ==========================================================================
	Front Page
   ========================================================================== */

.front-page
	#main
		-unwrapper(100%)
		margin-bottom 1em

		#front-page-news
			-wrapper()

		#primary
			padding 2em 0 2em

		#secondary
			padding 2em 0 1em

		#front-page-quick-links
			background-color $off_white
			padding 2em 0

		#front-page-content
			-wrapper(2em)


/* ==========================================================================
	About Page
   ========================================================================== */

.page-id-9
	#main
		-unwrapper(100%)
		margin-bottom 2em

		#about-content
			-wrapper()
			-clearfix()
			padding-top 2em


/* ==========================================================================
	CPT: Store
   ========================================================================== */

.single-store
	#main
		-unwrapper(100%)
		margin-bottom 2em

		.store-header
			text-align center
			padding 1.5em 0
			border-bottom 4px solid $navy
			margin-bottom 2em

			p
				margin 0

			.store-heading
				font-size 1.2em
				margin 0

			#single-store-info
				-wrapper(0, 0, 90%)
				padding-left 0
				list-style none

				li
					margin-bottom 1em

					&:last-child
						margin-bottom 0

		#single-store-media
		#single-store-content
			-wrapper()


/* ==========================================================================
	Ghost Buttons
   ========================================================================== */

.ghost-button
	width auto
	max-width 100%
	text-align center
	margin 1em auto

	a
		padding 0.4em .8em
		color $sky
		text-decoration none
		background-color white
		border 3px solid @color
		border-radius 0.1em
		display inline-block
		transition all 0.2s

		&:hover
		&:active
			background-color @color
			color @background-color


/* ==========================================================================
	Widget Areas & Sidebars
   ========================================================================== */

#secondary
	.widget
		width 100%
		margin-bottom 1.5em

	.widget:last-child
		margin-bottom 0


	.widget-title
		margin 0 0 0.25em 0
		text-align center
		font-size 1.3em
		font-weight 800


// Store Locations Widget
.widget_rhd_store_locations_widget
	.widget-title
		margin 0

	.store-locations-list
		padding-left 0
		list-style none
		text-align center

		.store-location
			margin-bottom 1em

			&:last-of-type
				margin-bottom 0

			.store-name
				margin 0
				font-size 1.2em
				font-weight 800

			.store-info
				p
					margin 0


// Image Widget
.widget_sp_image-description
	text-align center


/* ==========================================================================
	Media Queries
   ========================================================================== */

@media screen and (min-width 40em)
	#masthead
		height 6em
		transition all 0.25s

		#site-title
			width 23%
			height auto
			margin 0
			position absolute
			top 50%
			left 2%
			-transform(translateY(-50%))

	#site-navigation-container
		width 72%
		display block
		margin-top 0
		transition all 0.25s
		position absolute
		right 2%
		top 63%
		-transform(translateY(-50%))

		.menu-item
			font-size 0.8em

	#hamburger
		display none

	.page-title
		text-align left

	#posts-feed
		&.small-thumbnails
			.post
				-clearfix()

				&.has-post-thumbnail
					.post-content
						width 63%
						float right

					.post-thumbnail
						width 32%
						max-width 300px
						float left
						border none
						margin-bottom 0

	.blog-area
	#posts-feed
		.post
			.entry-header
				text-align left
				margin-top 0

				.entry-title
					margin 0 0 0.25rem

	.single-store
		#main
			.store-header
				padding-bottom 0.5em

				#single-store-info
					-flexbox()

					li
						width 30%
						-flexitem()
						margin-bottom 0
						text-align center

			#single-store-media
				> div
					display table-cell
					width 48%
					vertical-align top

				.single-store-map
					padding-right 1em

				.single-store-thumbnail
					padding-left 1em

	#colophon
		#footer-widget-area
			width 37%

			#footer-widget-area-left
				padding-left 1em

			.textwidget
				text-align left

			.rhd_social_icons
				text-align left

		#footer-hheart-logo
			width 300px
			height 97%
			position absolute
			right 0.25rem
			top 0.25rem

	// Image Strip
	#primary
		-clearfix()

		article
			&.strip-active
				width 65%
				float right

		#image-strip
			width 30%
			float left
			margin-right 5%

			img
				width 100%
				height auto
				margin-bottom 2em
				display block

	.entry-content
		img
		iframe
			width initial
			-unwrapper(initial)

	.front-page
		#front-page-news
			-wrapper()


@media screen and (min-width 60em)
	#masthead
		height 8em

		#site-title
			width 27%
			left 4%

	#site-navigation-container
		width 60%
		right 4%
		top 62%

		.menu-item
			font-size 0.9em


// Fixed-width 340px sidebar
@media screen and (min-width 40em)
	#main
		-clearfix()

	#front-page-news
		-wrapper()

	#primary
		float left

		&.full-width
			width 100%
			float none

	#secondary
		width 340px
		float right

		.widget
			width 300px
			margin-left auto
			margin-right auto


@media screen and (min-width 58em)
	#primary
		width 56%


@media screen and (min-width 62em)
	#primary
		width 58%


@media screen and (min-width 64em)
	#primary
		width 60%


@media screen and (min-width 66em)
	#primary
		width 64%
