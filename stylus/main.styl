@require "partials/_global.styl"
@require "partials/_wp-core.styl"
@require "partials/_fonts.styl"
@require "partials/_helpers.styl"
//@require "partials/_metabar.styl"
@require "partials/_defaults.styl"
@require "partials/_hamburger.styl"


/* ==========================================================================
	Main Styles
   ========================================================================== */

html
body
#page
#main
	min-height 100%


html
	text-shadow 0 0 1px transparent
	width 100%
	font-size 16px
	margin 0
	color $color1
	font-family $ff-body


body
	@extends html

	&.admin-bar
		#wpadminbar
			position fixed
			top 0


a
	outline 0 !important

	&:link
	&:visited
		text-decoration none
		color $color2

	&:hover
	&:active
		text-decoration underline


input
textarea
	background-color white
	border 2px solid $color2
	box-sizing border-box
	padding 0.5em
	font-family $ff-body
	-placeholder-props( $ff-body, gray )
	outline 0 !important
	transition all 0.25s

	&:focus
		border-color $color3


input[type="submit"]
	cursor pointer
	font-family $ff-body
	transition all 0.25s

	&:hover
		background-color gray


#site-header
	width 100%
	position relative
	background-color rgba(255,255,255,0.65)

	#masthead
		-wrapper(1rem, 1rem, 92%)


#site-title
	width 100%

	.site-title
	.site-description
		margin 0
		font-weight normal
		line-height 1

	.site-title
		font-family $ff-title
		text-transform uppercase
		font-size $ts-default
		text-align center

	.site-description
		font-family $ff-sub
		text-align right
		font-size ($ts-default / 2.15)


#site-navigation-container
	width 100%
	text-align center
	display none
	font-family $ff-body
	font-weight 300
	text-transform uppercase

	#site-navigation
		list-style none
		padding-left 0
		margin 1em 0
		text-align center
		line-height 1.75

		.menu-item
			font-weight 400
			font-size 1.1em

			a
				color $color1

				&:hover
				&:active
					text-decoration none
					color $color2

			.sub-menu
				position absolute
				padding-left 0
				line-height 1.7
				margin-top 0.2em
				z-index 999 !important

				li
					display block
					margin 0


// #site-navigation-sb-container
// 	#site-navigation-sb
// 		list-style none


.site-navigation
	li
		a
			color $color2
			text-decoration none
			transition color 0.25s

			&:hover
			&:active
				color $color3


#hamburger
	margin 0.5rem auto 0
	background-color transparent

	span
		background-color $color1

		&:before
		&:after
			background-color $color1

	&.is-active
		background-color (@background-color)


#main
	box-sizing border-box

	&.with-header-image
		width 100%

		#primary
			-wrapper(2em, 2em)

	&.no-header-image
		-wrapper(2em, 2em)


#primary
#secondary
	width 100%
	margin-top 1em
	position relative
	box-sizing border-box


#colophon
	width 100%
	height 6em
	position relative

	.site-info
		width 100%
		margin 0
		position absolute
		top 50%
		left 0
		-transform(translateY(-50%))
		text-align center
		line-height 1.7
		font-size 0.9em
		display none

		a
			color inherit

	#rhd-logo-footer
		width 1.35em
		height 1.35em
		margin 0 0.05em
		position relative
		bottom 0.25em


/* ==========================================================================
	Posts & Pages
   ========================================================================== */

.entry-title
.page-title
	margin-top 0
	line-height 1


.entry-content
	width 100%

	p
		margin 0.25em auto
		text-indent 0

		&[style*="text-align: center"]
			text-indent 0

		&:first-child
			margin-top 0

		&:last-child
			margin-bottom 0

	h1
	h2
	h3
	h4
	h5
	h6
		line-height 1.1

	ul
		padding-left 1em

	img
	iframe
		-wrapper(1em, 1em, 95%)

	img
		height auto
		display block

		&.alignleft
		&.alignright
			float none

	a
		img
			@extends .entry-content img


.entry-meta
	p
		margin 0


.blog-area
	#main
		.post
			-clearfix()

			.entry-header
				text-align center
				margin-bottom 1em

				.entry-title
					margin 0 0 0.25rem 0

				.entry-details
					margin 0

					.sep
						font-size 0.8em


.pagination
.single-pagination
	margin 1em auto
	font-size 1.1em
	-clearfix()

	.pag-next
	[rel="prev"]
		float left

	.pag-prev
	[rel="next"]
		float right


/* ==========================================================================
	Comments
   ========================================================================== */

#comments
	margin 2em auto

	.commentlist
		list-style none
		padding-left 0

		ul
		ol
			@extends #comments .commentlist

		.children
			padding 0 1.5em

		.comment
			&:last-child
				padding-bottom 1.5em

	.even
		background $off-white

	.odd
		background white

	.comment-body
		padding 1em
		box-sizing border-box

	textarea
		max-width 100%

	#commentform
		width 100%
		min-width 18rem
		max-width 100%

		p
			margin-bottom 0.75rem

		input
		textarea
			width 100%
			font-size 0.8em
			box-sizing border-box
			padding 0.5em
			display inline-block

		#submit
			width auto
			padding-left 0.8em
			cursor pointer

		.comment-subscription-form
			margin initial


/* ==========================================================================
	Ghost Buttons
   ========================================================================== */

.ghost-button
	width auto
	max-width 100%
	text-align center
	margin 1em auto
	font-size 1.2em
	font-weight 700

	a
		padding 0.4em .8em
		color white
		text-decoration none
		background-color $color3
		border-radius 0.1em
		display inline-block
		transition all 0.2s
		text-transform uppercase

		&:hover
		&:active
			background-color $color2
			color white


/* ==========================================================================
	Widget Areas & Sidebars
   ========================================================================== */

#secondary
	.widget
		width 100%
		margin-bottom 1.5em

	.widget:last-child
		margin-bottom 0


	.widget-title
		margin-top 0


/* ==========================================================================
	Front Page
   ========================================================================== */

.front-page
	#front-page-widget-area
		.front-page-widget
			width 100%
			margin 1em 0

			.widget-content
				text-align center

			.widget-title
				text-transform uppercase
				font-size 1.4em
				margin 0.25em 0


/* ==========================================================================
	Media Queries
   ========================================================================== */

@media screen and (min-width 40em)
	#site-header
		&.header-overlay
			position absolute
			top 0

		#masthead
			-clearfix()
			margin-bottom 0


	#site-title
		width 43%
		float left

		.site-title
		.site-description
			text-align left

		.site-title
			font-size $ts-midsize

		.site-description
			font-size ($ts-midsize / 2.15)
			position relative
			left 5.4em

	#site-navigation-container
		display block
		position relative
		top 1.45em

		#site-navigation
			-flexbox()
			margin 0
			line-height 1

			.menu-item
				-flexitem()
				font-size 0.9em

	#hamburger
		display none

	#comments
		#commentform
			width 75%

			p
				margin-bottom 0.75rem

			input
				&[type="text"]
				&[type="email"]
					width 75%

			#submit
				width auto
				padding-left 0.8em

	// Image Strip
	#primary
		-clearfix()

		article
			&.strip-active
				width 65%
				float right

		#image-strip
			width 30%
			float left
			margin-right 5%

			img
				width 100%
				height auto
				margin-bottom 2em
				display block

	.entry-content
		img
		iframe
			width initial
			-unwrapper(initial)

		img
			&.alignleft
				margin-right 1em
				float left

			&.alignright
				margin-left 1em
				float right

			&.aligncenter
				margin 0 auto

		a
			img
				@extends .entry-content img

	.front-page
		#front-page-widget-area
			-flexbox()

			.front-page-widget
				width 33.3333%
				padding 0 1.5%
				margin 0
				-flexitem()
				vertical-align top

				.widget-title
					margin 0 0 1.5rem 0


// Fixed-width 340px sidebar
@media screen and (min-width 40em)
	#main
		-clearfix()

		&.with-sidebar
			#secondary
			width 340px
			float right

			.widget
				width 300px
				margin-left auto
				margin-right auto


@media screen and (min-width 58em)
	.with-sidebar
		#primary
			width 56%


@media screen and (min-width 62em)
	.with-sidebar
		#primary
			width 58%


@media screen and (min-width 64em)
	.with-sidebar
		#primary
			width 60%


@media screen and (min-width 66em)
	.with-sidebar
		#primary
			width 64%


@media screen and (min-width 70em)
	#site-title
		.site-title
			font-size $ts-desktop

		.site-description
			font-size ($ts-desktop / 2.15)

	#site-navigation-container
		#site-navigation
			.menu-item
				font-size 1em
