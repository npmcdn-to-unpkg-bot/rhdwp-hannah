@require "partials/_global.styl"
@require "partials/_wp-core.styl"
@require "partials/_defaults.styl"
@require "partials/_fonts.styl"
@require "partials/_helpers.styl"
@require "partials/_metabar.styl"
@require "partials/_hamburger.styl"
@require "partials/_ghost-button.styl"


/* ==========================================================================
	Main Styles
   ========================================================================== */

html
body
#page
#main
	min-height 100%


html
	text-shadow 0 0 1px transparent
	width 100%
	font-size 16px
	margin 0
	font-family $ff_body
	font-weight 400
	color $c_text


body
	@extends html

	&.admin-bar
		#wpadminbar
			position fixed
			top 0


a
	outline 0 !important
	transition all 0.25s
	color $c_sec
	text-decoration none
	transition 0.25s color ease

	&:hover
	&:active
		color $c_text_dk


input
textarea
	background-color $c_bg
	border 2px solid $c_sec
	box-sizing border-box
	padding 0.5em
	font-family $ff_body
	-placeholder-props( $ff_body, gray )
	outline 0 !important
	transition all 0.25s

	&:focus
		border-color $c_text_lt


input[type="submit"]
	cursor pointer
	-ghost-button-alt()
	padding 0


#page
	margin 0


#navbar
	-wrapper()
	display block
	position relative
	padding 0.5rem 0
	border-top 1px solid $c_text
	border-bottom 1px solid $c_text
	color $c_text
	z-index 999

	.navbar-inner
		height @height
		margin 0

	.nav-dropdown
		width 100%
		background $c_bg
		position absolute
		top $navHt
		left 0
		border-bottom @border-bottom
		display none

		.site-title
			margin-top 1em
			display block

	.navbar-search
		width 90%
		height 1.6rem
		position relative
		margin 1em auto

		.search-form
		div
			height 100%

		input
			border none

		.search-form
			width 100%

			.search-field
				width 0
				-vhcenter()
				font-size 1em
				font-family $ff_body
				background-color $c_bg
				letter-spacing 0.5px
				border-radius 0.1em
				color $c_text_dk
				padding 0.35em 2.3em 0.35em 0.25em
				-placeholder-props( @font-family, @color, 1, normal, normal )
				transition 0.5s all ease

				&.is-active
					width 75%
					border 1px solid $gray

			.search-submit
				width 1.5rem
				-vhcenter()
				z-index 999
				background url('../img/search.png') no-repeat center
				-opacity(0.5)
				background-size 90% auto
				transition 0.25s all ease

				&.is-active
					right 18%

		.close-search
			-vcenter()
			right 8%
			-ff-title()
			color $c_text
			font-size 1.2em
			display none
			text-decoration none
			transition 0.25s color

			&:hover
			&:active
				text-decoration @text-decoration
				color $c_text_dk


	@media screen and (min-width 40rem)
		.navbar-search
			width 36.5%
			right 0


#site-title
	-wrapper(0, 0, 96%)
	text-align center
	display block


.site-title
	text-align center


.site-title-link
	-wrapper(1em, 0, 85%, 30rem)
	display block
	line-height 1.2


#site-navigation-container
	width 100%
	text-align center
	z-index 999

	#site-navigation
		list-style none
		padding-left 0
		margin 0.75em 0

		.menu-item
			display block
			font-size 1.1em
			line-height 1.8
			letter-spacing 2px

			a
				-ff-title()
				text-transform uppercase
				color $c_text

				&:hover
				&:active
					color $c_text_dk

			&.current-menu-item
				a
					color $c_text_dk


.site-navigation
	li
		a
			color $c_text
			text-decoration none
			transition color 0.25s
			text-transform uppercase
			font-weight 400

			&:hover
			&:active
				color $c_text_dk


#hamburger
	margin 0 auto


#main
	-wrapper()
	box-sizing border-box


#primary
#secondary
	width 100%
	position relative
	box-sizing border-box


#colophon
	width 100%
	position relative
	-ff-title()
	color $c_text_lt
	text-transform uppercase

	.site-info
		-wrapper(2em, 0, 75%)
		text-align center
		font-size 0.9em

		a
			color inherit

			&:hover
			&:active
				color $c_text_dk
				text-decoration none

		img
			width 100%
			height auto

		#rhd-logo-footer
			width 1.35em
			height 1.35em
			margin 0 0.05em
			position relative
			bottom 0.25em


/* ==========================================================================
	Posts & Pages
   ========================================================================== */

.entry-title
.page-title
.archive-title
	line-height 1.1
	text-transform uppercase
	-ff-title()


.page-title
.archive-title
	text-align center
	font-size 2em
	margin 1em initial


.entry-title
	font-size 1.4em


.entry-summary
	p
		margin 0
		line-height 1.5
		font-size 0.9em

	img
		display none


.entry-content
	width 100%

	p
		margin 0.5em auto
		text-indent 0

		&[style*="text-align: center"]
			text-indent 0

		&:first-child
			margin-top 0

		&:last-child
			margin-bottom 0

	h1
	h2
	h3
	h4
	h5
	h6
		line-height 1.1

	ul
		padding-left 1em

	iframe
		max-width 100%

	img
		height auto
		display block
		-wrapper(1em, 1em, 95%, 100%)

		&.alignleft
		&.alignright
			float none

	a
		img
			@extends .entry-content img


.entry-meta
	p
		margin 0


.blog-area
	article
		-clearfix()
		margin 1.5em auto

		.entry-header
			text-align center
			-ff-title()
			text-transform uppercase
			margin-bottom 0.25em

			.entry-title
				margin 0.25em
				text-transform uppercase

				a
					color inherit

					&:hover
					&:active
						color $c_sec

			.entry-details
				margin 0.5em 0
				font-size 0.8em
				line-height 1.3

				.sep
					font-size 1.1em

				.author-link
					color $c_text

					&:hover
					&:active
						color $c_sec

		.entry-thumbnail
		.archive-thumnbnail
			img
				width 100%
				height auto

		.entry-thumbnail
			width 100%
			height auto
			margin-bottom 0.5em

		.ghost-button-container
			margin-right auto
			margin-left auto

		.entry-meta
			-ff-title()
			text-transform uppercase
			font-size 0.8em
			line-height 1.3

		&.archive-excerpt
			-clearfix()

			.entry-title
				font-size 1.3em

			.entry-thumbnail
				width 27%
				float left

			.entry-excerpt
				width 66%
				float right

			.entry-summary
				padding-bottom 0.5em
				border-bottom 1px solid $c_text_lt
				margin-bottom 0.5em

			.entry-meta
				width 100%
				float none

			.ghost-button-container
				float left
				margin-right 1em
				margin-top 1.15em


.post-grid
	width 100%

	& > article
		width 100%
		vertical-align top
		margin 1em 0


.pagination
.single-pagination
	margin 1em auto
	font-size 1.1em
	-clearfix()

	.pag-link
	.pag-load-more
		-ghost-button-container()

		a
			-ghost-button()

	.pag-next
		float left

	.pag-prev
		float right

	.pag-load-more
		display block
		margin 0 auto


.wp-pagenavi
	text-align center


/* ==========================================================================
	Comments
   ========================================================================== */

#comments
	margin 2em auto

	.comment-list
		list-style none
		padding-left 0

		ul
		ol
			@extends #comments .comment-list

		.children
			padding 0 1.5em

		.comment
			&:last-child
				padding-bottom 1.5em

	.even
		background $off_white

	.odd
		background $near_white

	.comment-body
		padding 1em
		box-sizing border-box

	textarea
		max-width 100%


#commentform
	width 100%
	min-width 18rem
	max-width 100%

	p
		margin-bottom 0.75rem

	input
	textarea
		width 100%
		font-size 0.8em
		box-sizing border-box
		padding 0.5em
		display inline-block

	#submit
		width auto
		cursor pointer
		padding 0.5em
		font-size 1rem

	.comment-subscription-form
		margin initial


#reply-title
	@extends .entry-title
	font-size 1.3em


/* ==========================================================================
	Widget Areas & Sidebars
   ========================================================================== */

#secondary
	line-height 1.3

	.widget
		width 100%
		margin-bottom 1.5em

	.widget:last-child
		margin-bottom 0

	.widget-title
		@extends .entry-title
		font-size 1em
		text-transform uppercase
		text-align left
	
	.widget_rhd_mailchimp_widget
		.rhd-mailchimp-container
			padding 0.5em 1em
			border 3px solid $c_sec
			
			.widget-title
				text-align center
				-ff-headline()


/* ==========================================================================
	Extras
   ========================================================================== */

#graystripe
	width 100%
	height 0.875rem
	background-color $gray


/* ==========================================================================
	Media Queries
   ========================================================================== */

@require "partials/_desktop.styl"