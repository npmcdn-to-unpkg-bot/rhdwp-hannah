@require "partials/_global.styl"
@require "partials/_wp-core.styl"
@require "partials/_fonts.styl"
@require "partials/_helpers.styl"
@require "partials/_defaults.styl"
@require "partials/_hamburger.styl"


/* ==========================================================================
	Main Styles
   ========================================================================== */

html
	text-shadow 0 0 1px transparent
	width 100%
	font-size 16px
	margin 0
	font-family $ff_body
	color $text


body
	@extends html


a
	outline 0 !important
	transition all 0.35s

	&:link
	&:visited
		text-decoration none
		color $color1

	&:hover
	&:active
	&:focus
		text-decoration underline


input
textarea
	background-color $off-white
	border 2px solid black
	border-radius 0.2em
	box-sizing border-box
	padding 0.5em
	font-family $ff_body
	transition border-color 0.25s ease
	outline none

	&:focus
		border-color $color1


input[type="submit"]
	cursor pointer
	font-family inherit
	background-color black
	transition background-color 0.25s

	&:hover
		background-color $color1


#masthead
	position relative

	.header-bg
		width 100%
		height 100vh
		position relative
		background-size cover

		&.header-bg-short
			height 34vh

			#site-title
				max-width 45rem
				top 35%

	#site-title-seo
		-invisible()

	#site-title
		width 90%
		height auto
		overflow visible
		position absolute
		top 46%
		left 50%
		-transform(translate(-50%, -50%))


#site-navigation-container
	width 100%
	text-align center
	display none

	#site-navigation
		-wrapper()
		list-style none
		padding-left 0
		-flexbox()

		.menu-item
			-flexitem()
			font-weight 700

			&.current-menu-item
				color $color2

			a
				text-decoration none
				text-transform uppercase
				color white
				transition 0.25s color

				&:hover
				&:active
				&:focus
					color $color2

			.sub-menu
				position absolute
				padding-left 0
				line-height 1.7
				margin-top 0.2em
				z-index 999 !important

				li
					display block
					margin 0


#site-navigation-sb-container
	#site-navigation-sb
		list-style none
		font-size 2em
		line-height 1.5
		padding-left 0
		text-align center

		.menu-item
			&.current-menu-item
				a
					color $color1

			a
				color white
				text-decoration none
				text-transform uppercase
				transition color 0.25s ease

				&:hover
					color $color2

#hamburger
	background-color transparent
	position absolute
	right 0
	bottom 0

	span
		background-color $color1

		&::before
		&::after
			background-color (@background-color)


#main
	-wrapper()
	padding 2em 0
	box-sizing border-box


#primary
#content
	width 100%
	position relative
	box-sizing border-box


#primary
	margin-bottom 4em


#colophon
	width 100%
	height 6em
	position absolute
	bottom 0
	left 0

	.site-info
		width 100%
		margin 0
		position absolute
		top 50%
		left 0
		-transform(translateY(-50%))
		text-align center
		line-height 1.7
		font-size 0.9em

		.site-info-content
			padding 1.3rem 4rem 0 4rem
			border-top 1px solid black
			display inline-block

		a
			color inherit

	#rhd-logo-footer
		width 1.35em
		height 1.35em
		margin 0 0.05em
		position relative
		bottom 0.25em


/* ==========================================================================
	Header Backgrounds
   ========================================================================== */




/* ==========================================================================
	Posts & Pages
   ========================================================================== */

.entry-title
.page-title
	margin-top 0
	line-height 1
	font-family $ff_headline


.page-title
	-funderline()
	font-size 2em
	color $color1
	text-align center
	padding 0 0.75em 0.25em 0.75em


.entry-header
	text-align center


.entry-title
	margin-bottom 0.25em


.entry-content
	p
		margin 1em auto
		line-height 1.4

		&[style*="text-align: center"]
			text-indent 0

		&:first-child
			margin-top 0

		&:last-child
			margin-bottom 0

	h1
	h2
	h3
	h4
	h5
	h6
		line-height 1.1

	ul
		padding-left 1em

	img
		max-width 100%
		height auto

		&.alignleft
			margin-right 1em

		&.alignright
			margin-left 1em

		&.aligncenter
			display block
			margin 0 auto

	iframe
		max-width 100%
		display block
		margin 1em auto

.grid-item
	text-align center
	margin 1.5em 0
	padding-bottom 1.5em
	border-bottom 1px solid black

	&:last-child
		border-bottom none
		padding-bottom 0

	a
		text-decoration none

	.post-featured-image
		-wrapper(0.5em, 0.5em, 50%)

		img
			width 100%
			height auto


.pagination
.single-pagination
	margin 1em auto
	font-size 1.1em
	-clearfix()

	.pag-next
	[rel="prev"]
		float left

	.pag-prev
	[rel="next"]
		float right


.pix-load-more
	margin-top 2em
	font-size 1.2em
	font-weight 700
	text-transform uppercase

	.viewmore
		background-color $color1
		transition background-color 0.25s
		border-radius 0

		&:hover
		&:active
			background-color $color2


/* ==========================================================================
	Front Page
   ========================================================================== */

.grid-item
	width 95%
	text-align center

	.grid-featured-image
		width 100%

		img
			width 300px
			display block
			margin 0 auto

		figcaption
			margin-top 0.25em
			text-align center
			font-size 1.2em
			font-weight 700
			font-family $ff_body


/* ==========================================================================
	About Page
   ========================================================================== */

.page-id-8
	.page-title-sidebar
		display none


/* ==========================================================================
	Portfolio
   ========================================================================== */

#portfolio-category-list
	display none
	font-family $ff_headline
	text-transform uppercase
	padding-left 0

	.portfolio-link
		@extends .page-title
		-funderline()
		border-bottom-color white
		transition border-bottom-color 0.35s ease

		&.portfolio-current
			border-bottom-color $text

		a
			&:hover
			&:active
				color $color2


#rhd-portfolio
	.grid-item
		border-bottom none
		padding-bottom 0


/* ==========================================================================
	Contact Page
   ========================================================================== */

.ninja-forms-cont
	input
	textarea
		font-family $ff_body
		border-color $text
		transition all 0.25s

		&:focus
			border-color $color1

		&[type="submit"]
			width 7em
			display block
			margin 0 auto

			&:hover
				background-color $color1

	#ninja_forms_field_3_div_wrap
		margin-bottom 0


.ninja-forms-required-items
.ninja-forms-req-symbol
	display none


.rhd-contact-form
	margin-bottom 2em


.contact-info
	text-align center

	section
		margin-bottom 2.5em

	h3
		margin-bottom 0.25em

	.social-icons
		-wrapper(1em, 0, 200px)
		-clearfix()

		img
			width 40%
			height auto


