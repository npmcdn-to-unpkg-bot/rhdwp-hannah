@require "partials/_global.styl"
@require "partials/_fonts.styl"
@require "partials/_hamburger.styl"
@require "partials/_helpers.styl"
@require "partials/_galleries.styl"
@require "partials/_defaults.styl"

/* ==========================================================================
	Main Styles
   ========================================================================== */

html
	text-shadow 0 0 1px transparent
	width 100%
	font-weight 400
	font-size 16px
	font-family Lato, sans-serif
	margin 0
	color $body


body
	background url(../img/bg.png) repeat
	@extends html

	&.admin-bar
		#wpadminbar
			position fixed
			top 0


a
	outline 0 !important

	&:link
	&:visited
		text-decoration none
		color $lt-blue

	&:hover
	&:active
	&:focus
		text-decoration underline


input
textarea
	background-color white
	border none
	box-sizing border-box
	padding 0.5em
	font-family inherit


input[type="submit"]
	cursor pointer
	font-family inherit
	-transition(all 0.25s)

	&:hover
		background-color gray


.sb-site-container
	background-color transparent !important


#masthead
	width 100%
	height auto
	font-family 'NeoRetro Fill', sans-serif
	border-bottom 5px solid rgba(85, 145, 212, 0.44)

	.masthead-content
		position relative


#site-title
	width 100%
	display inline-block
	padding 0.05em 0
	margin 0.35em auto 0 auto
	line-height 1
	text-align center
	font-size 3em
	background rgba(85, 145, 212, 0.44)
	font-weight normal

	a
		color inherit
		text-decoration inherit


#hamburger
	position relative
	margin 0.5rem 0
	left 3%
	font-size 1.3em
	background-color transparent

	span
		background-color rgb(0,0,0)

		&::before
		&::after
			background-color black


#nav-main
	display none


.sb-slidebar.sb-left
	background #e3e3e3
	text-align center


.social
	width 5.6em
	list-style none
	padding-left 0
	margin 0 auto
	position relative
	flexbox()

	li
		width 1.6em
		height 1.6em
		display inline-block
		overflow hidden
		flexitem()

		a
			img
				width 100%


#site-navigation-mobile
	font-size 1.5em
	padding 0


#main
	box-sizing border-box


#content
	width 100%


#primary
	width 100%
	position relative
	box-sizing border-box


#colophon
	width 100%
	text-align center
	padding 1em 0
	margin 2em auto
	background rgba(85, 145, 212, 0.44)

	.site-info
		margin 0
		padding 1em 0
		text-align center
		line-height 1.7
		font-size 0.9em

		a
			color black

	#rhd-logo-footer
		width 1.35em
		height 1.35em
		margin 0 0.05em
		position relative
		bottom 0.25em


/* ==========================================================================
	Posts & Pages
   ========================================================================== */

.entry-title
.page-title
	margin-top 0


.type-post
	width 100%
	position relative
	padding 2em 0

	.entry-thumbnail
		width 75%
		height auto
		display block
		margin 0 auto 0.5em auto
		-border-radius 0.1em

		img
			width 100%
			height auto


.entry-content
	wrapper()

	p
		margin 1em auto

		&:first-child
			margin-top 0

		&:last-child
			margin-bottom 0

	h1
	h2
	h3
	h4
	h5
	h6
		line-height 1.1

	ul
		padding-left 1em

	img
		max-width 100%
		height auto

		&.alignleft
			margin-right 1em

		&.alignright
			margin-left 1em

		&.aligncenter
			display block
			margin 0 auto


.blog-area
	#main
		.post
			clearfix()

			.entry-header
				text-align center
				margin-bottom 1em

				.entry-title
					margin 0 0 0.25rem 0

				.entry-details
					margin 0

					.sep
						font-size 0.8em


.page
	#content
		.page-featured
			width 100%
			margin-bottom 1em


.pagination
.single-pagination
	margin 1em auto
	font-size 1.1em
	clearfix()

	.pag-next
	[rel="prev"]
		float left

	.pag-prev
	[rel="next"]
		float right


/* ==========================================================================
	Comments
   ========================================================================== */

#comments
	margin 2em auto

	.commentlist
		list-style none
		padding-left 0

		ul
		ol
			@extends #comments .commentlist

		.children
			padding 0 1.5em

	.even
		background $off-white

	.odd
		background white

	.comment-body
		padding 1em
		box-sizing border-box

	textarea
		max-width 100%

	#commentform
		width 100%
		min-width 18rem

		p
			margin-bottom 0.75rem

		input
		textarea
			width 100%
			background-color $off-white
			font-size 0.8em
			border none
			box-sizing border-box
			padding 0.5em
			display block

		textarea
			margin-top 1.7rem

		#submit
			width auto
			padding-left 0.8em
			cursor pointer


/* ==========================================================================
	Front Page
   ========================================================================== */

.front-page
	#main
		height auto
		bottom 0


	#primary
	#content
		width 100%
		max-width none
		height auto
		margin 0


	.home-big-img
		max-width 100%
		height auto
		border-bottom 5px solid rgba(85, 145, 212, 0.44)

		& > img
			width 100%


/* ==========================================================================
	Resume Page
   ========================================================================== */

#resume-headshot
	width 100%
	height auto
	text-align center
	font-size 1.1em
	margin-bottom 1em

	img
		padding-bottom 0.75em


#resume-tables
	width 100%

	.tablepress-table-name
		text-transform uppercase
		font-size 1.1em
		font-weight bold

	.tablepress td
	.tablepress th
		padding 0


/* ==========================================================================
	Media Queries
   ========================================================================== */

@media screen and (min-width 40em)
	#masthead
		height $mast-ht

		.masthead-content
			height auto


	#hamburger
		display none


	#nav-main
		display block
		wrapper()
		clearfix()

		#site-navigation-container
			width 85.5%
			float left
			display block
			text-align center
			position relative
			margin-top 1.2em
			line-height 1

			#site-navigation
				list-style none
				padding-left 0
				margin 0
				flexbox()

				li
					flexitem()
					font-size 1.2em
					text-transform uppercase

					a
						text-decoration none
						color inherit
						-transition(0.25s color)

						&:hover
						&:active
						&:focus
							color $lt-blue

	.social
		display block
		position absolute
		right 0
		top 0.9em
		line-height 1


	.front-page
		#main
			bottom $mast-ht


	#content
		wrapper 2em 2em


	.entry-content
		width 100%


	.type-post
		clearfix()
		display table

		.entry-content-container
			display table-cell
			vertical-align middle

		.entry-title
		.entry-content
			text-align left

		.entry-title
			margin-bottom 0

		.entry-content
		.entry-thumbnail
			display table-cell
			vertical-align middle

		.entry-content
			font-size 1.1em

		.entry-thumbnail
			width 15.625em
			padding-right 2em
			box-sizing content-box


	#comments
		#commentform
			width 75%

			p
				margin-bottom 0.75rem

			input
			textarea
				background-color $off-white
				font-size 0.8em
				border none
				box-sizing border-box
				padding 0.5em
				display block

			input
				&[type="text"]
				&[type="email"]
					width 75%

			textarea
				margin-top 1.7rem

			#submit
				width auto
				padding-left 0.8em


	.page
		#content
			clearfix()

			.page-featured
				width 39.1%
				max-width 400px
				float right
				margin 0 0 0 3em


	.post-147
		clearfix()

		#resume-headshot
			width 33%
			max-width 18.75rem
			text-align center
			font-size 1.1em
			margin-bottom 1em
			float left

			img
				width 100%


		#resume-tables
			width 64%
			float right

			.tablepress-table-name
				text-transform uppercase
				font-size 1.1em
				font-weight bold
				margin-top 0

			.tablepress td
			.tablepress th
				padding 0.25rem 0
				border none


/* ==========================================================================
	Widget Areas & Sidebars (Inactive)
   ========================================================================== */

#secondary
	.widget
		width 100%
		margin-bottom 1.5em

	.widget:last-child
		margin-bottom 0


	.widget-title
		margin-top 0