/* ==========================================================================
	Site Globals (Stylus)
   ========================================================================== */

.wrapper
	width 80%
	max-width 64em
	margin 0 auto
	position relative

border-radius( args )
	-webkit-border-radius args
	-moz-border-radius args
	border-radius args

placeholderColor( val )
	::-webkit-input-placeholder
		color val
	:-moz-placeholder /* Firefox 18- */
		color val
	::-moz-placeholder  /* Firefox 19+ */
		color val
	:-ms-input-placeholder
		color val

// Fonts
someFont( style=normal, weight=normal, size=1em )
	font style weight size "Some Font", cursive