/* ==========================================================================
	Ghost Buttons
   ========================================================================== */

.ghost-button-container
	width auto
	max-width 100%
	text-align center
	margin-top 1em
	margin-bottom 1em

	&.gb-align-center
		margin-right auto
		margin-left auto

	&.gb-align-right
		float right

	&.gb-align-left
		float left

	.ghost-button
	.ghost-button-alt
		padding 0.4em .8em
		text-decoration none
		background-color $c_bg
		border-width 3px
		border-style solid
		border-radius 0.1em
		display inline-block
		transition all 0.2s
		-ff-title()
		text-transform uppercase

		&:hover
		&:active
			text-decoration none
			color $c_bg

		&.filled
			color $c_bg

	.ghost-button
		color $c_ter
		border-color $c_ter

		&:hover
		&:active
			background-color $c_ter

		&:focus
			border-color $c_ter_lt

		&.filled
			background-color $c_ter
			border-color $c_ter

			&:hover
			&:active
				background-color $c_sec
				border-color $c_sec

			&:focus
				border-color $c_sec_lt

	.ghost-button-alt
		color $c_sec
		border-color $c_sec

		&:hover
		&:active
			background-color $c_sec

		&.filled
			background-color $c_sec
			border-color $c_sec

			&:hover
			&:active
				background-color $c_ter
				border-color $c_ter


/* ==========================================================================
	Helper Functions
   ========================================================================== */

-ghost-button()
	@extends .ghost-button-container .ghost-button

-ghost-button-alt()
	@extends .ghost-button-container .ghost-button-alt