#blog-metabar
	width 100%
	height auto
	padding 1em 0 0.75em 0
	background orange

	#blog-metabar-content
		-wrapper(0,0, 90%)
		list-style none
		padding-left 0

		li
			width 100%
			margin-bottom 0.5em
			display block

			.drop
			.search-submit
				width 2em
				height 2em
				background gray
				color white
				text-transform uppercase
				-transition(all 0.25s)
				display inline-block
				position absolute
				top 0
				right 0
				font-weight 400
				font-size 1em

			.search-field
				-placeholder-props( $ff-body, gray, 1)

			.rhd-dropdown-title
			.search-field
				width 100%
				height 2em
				padding-left 0.5em
				background white
				color gray
				position relative
				font-family $ff-body

			.rhd-dropdown-title
				.dd-title-text
				.dd-link-text
					position relative
					top 0.25em

			.drop
				text-decoration none
				text-align center
				line-height 1.3

				.dd-link-text
					color white

			.rhd-dropdown
				position relative
				text-transform uppercase

				ul
					width 100%
					position absolute
					top 2em
					overflow-y auto
					background white
					padding-left 0
					margin 0
					display none
					z-index 999
					box-shadow 0 3px 4px -1px rgba(0,0,0,0.5)

					li
						width 100%
						background white
						display block
						padding-left 0.5em

						a
							color gray
							text-decoration none
							-transition(all 0.25s)

							&:hover
							&:active
								color orange
		#blog-search
			top	0
