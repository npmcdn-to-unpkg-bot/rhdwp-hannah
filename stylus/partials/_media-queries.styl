/* ==========================================================================
	Media Queries
   ========================================================================== */

@media screen and (min-width 42em)
	#site-title
		width 300px
		margin 0
		position relative
		left 1em
		transition width 0.25s, height 0.25s

	#site-navigation-container
		width 57%
		min-width 445px
		display block
		position absolute
		background transparent
		right 1.5em
		top 1em
		box-shadow none

		#site-navigation
			list-style none
			padding-left 0
			margin 0
			-flexbox()

			.menu-item
				-flexitem()
				font-size 1.1em
				line-height 1

				.sub-menu
					position absolute
					padding-left 0
					line-height 1.7
					margin-top 0.2em
					z-index 999 !important

					li
						display block
						margin 0

	#hamburger
		display none

	#main
		-unwrapper(100%)
		padding 0
		background $near_white

		.main-inner
			@extends .limiter
			background white
			padding 3%
			-clearfix()

	#comments
		#commentform
			width 75%

			p
				margin-bottom 0.75rem

			input
				&[type="text"]
				&[type="email"]
					width 75%

			#submit
				width auto
				padding-left 0.8em

	.entry-content
		img
		iframe
			-unwrapper(100%)
			max-width 100%

		img
			&.alignleft
				margin-right 1em
				float left

			&.alignright
				margin-left 1em
				float right

			&.aligncenter
				margin 0 auto

		a
			img
				@extends .entry-content img

	/* ==========================================================================
		Front Page
	   ========================================================================== */

	#front-page-slider
		display block

		.border-inner
			background white
			position relative

			.scroll-label
				width 100%
				text-align center
				-ff-headline()
				position absolute
				bottom 2%
				font-size 200%

	#header-message-container
		width 100%

		.border-inner
			height 100vh

			.header-message
				height 100%
				-clearfix()

				.header-message-photo
				.header-message-content
					width 50%
					height 100%
					display block
					position relative

				.header-message-photo
					float left
					overflow hidden
					background-size cover
					background-position center

				.header-message-content
					float right

					.message-inner
						-vhcenter(-4%)

						.message
							font-size 4vw
							line-height 1.2

						.message-buttons
							width 80%

							.ghost-button
								font-size 2.1vw


	#front-page-recent-posts
		.front-page-posts
			-flexbox()

			.post
				width 32%
				-flexitem()
				vertical-align top
				margin-top 0


	/* ==========================================================================
		Blog Page
	   ========================================================================== */

	.blog-area
		.blog-container
			-flexbox()

			.post
				position relative

				&.rhd-excerpt-post
					width 49%
					height 43em
					-flexitem()
					margin-top 0
					vertical-align top

					.ghost-button-container
						position absolute
						bottom 1.5em
						-hcenter()



@media screen and (min-width 50em)
	#site-title
		width 460px

	#site-navigation-container
		#site-navigation
			.menu-item
				font-size 1.2em

	.blog-area
		.blog-container
			-flexbox()

			.post
				&.rhd-excerpt-post
					height 45em


// Fixed-width 340px sidebar
@media screen and (min-width 42em)
	#main
		-clearfix()

	#primary
		float right

		&.full-width
			width 100%
			float none

	#secondary
		width 320px
		float left

		.widget
			width 100%
			padding 0 10px


@media screen and (min-width 58em)
	#primary
		width 56%


@media screen and (min-width 62em)
	#primary
		width 58%


@media screen and (min-width 64em)
	#primary
		width 60%


@media screen and (min-width 66em)
	#primary
		width 64%
