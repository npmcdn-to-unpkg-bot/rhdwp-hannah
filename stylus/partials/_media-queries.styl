/* ==========================================================================
	Media Queries
   ========================================================================== */

@media screen and (min-width 42rem)
	#site-title
		width 300px
		margin 0
		display inline-block
		position relative
		left 1em
		transition width 0.25s, height 0.25s

	#site-navigation-container
		width 58%
		min-width 445px
		display block
		position absolute
		background transparent
		right 1.5em
		top 1em
		box-shadow none

		#site-navigation
			list-style none
			padding-left 0
			margin 0
			-flexbox()

			.menu-item
				-flexitem()
				font-size 1.1em
				line-height 1

				.sub-menu
					position absolute
					padding-left 0
					line-height 1.7
					margin-top 0.2em
					z-index 999 !important

					li
						display block
						margin 0

	#hamburger
		display none

	#main
		-unwrapper(100%)
		padding 0

		.main-inner
			@extends .limiter
			background white
			padding 3%
			-clearfix()

	#colophon
		.footer-inner
			-clearfix()

		#footer-widget-area
		.site-info
			position relative

		.site-info
			width 20%
			float left

		#footer-widget-area
			float right

			.rhd_social_icons
				left 0

	#blog-metabar
		display none

	#comments
		#commentform
			width 75%

			p
				margin-bottom 0.75rem

			input
				&[type="text"]
				&[type="email"]
					width 75%

			#submit
				width auto
				padding-left 0.8em

	.entry-content
		img
		iframe
			-unwrapper(100%)
			max-width 100%

		img
			&.alignleft
				margin-right 1em
				float left

			&.alignright
				margin-left 1em
				float right

			&.aligncenter
				margin 0 auto

		a
			img
				@extends .entry-content img

	/* ==========================================================================
		Front Page
	   ========================================================================== */

	#front-page-slider
		display block
		background white

		.soliloquy-container
			padding-top 1em
			padding-bottom 1em

		.scroll-label
			width 100%
			text-align center
			-ff-headline()
			position relative
			font-size 200%

			.vee
				margin 0 0.5em
				font-size 0.8em
				position relative
				bottom 0.2em

	#header-message-container
		width 100%
		height 70vh

		.header-message
			width 100%
			height (@height)
			-clearfix()

			.header-message-photo
			.header-message-content
				width 50%
				height 100%
				position relative

			.header-message-photo
				float left
				overflow hidden
				display block
				background-size cover
				background-position center center

			.header-message-content
				float right

				.message-inner
					max-height 460px
					-vcenter()

					.message
						font-size 3.2vw
						line-height 1.2

					.message-buttons
						width 80%

						.ghost-button
							font-size 1.9vw


	#front-page-recent-posts
		.front-page-posts
			-flexbox()

			article
				width 32%
				-flexitem()
				vertical-align top
				margin-top 0


	/* ==========================================================================
		Blog Pages
	   ========================================================================== */

	.blog-area
		.blog-container
			padding-bottom 4em

			.rhd-post-gutter
				width 2%

			article
				position relative

				&.rhd-excerpt-post
					width 49%
					margin 0

			.pagination-load-more
				position absolute
				bottom -(@padding-bottom / 2)
				-hcenter(absolute)


@media screen and (min-width 50rem)
	#site-title
		width 460px

	#site-navigation-container
		#site-navigation
			.menu-item
				font-size 1.2em

	.blog-area
		.blog-container
			-flexbox()


@media screen and (min-width 62rem)
	#header-message-container
		.header-message
			.header-message-content
				.message-inner
					.message
						font-size 2.7vw


// Fixed-width 340px sidebar
@media screen and (min-width 42rem)
	#main
		-clearfix()

	#primary
		width 49%
		float right

		&.full-width
			width 100%
			float none

	#secondary
		width 320px
		float left

		.widget
			width 100%


@media screen and (min-width 50rem)
	#primary
		width 58%


@media screen and (min-width 58rem)
	#primary
		width 60%


@media screen and (min-width 62rem)
	#primary
		width 65%