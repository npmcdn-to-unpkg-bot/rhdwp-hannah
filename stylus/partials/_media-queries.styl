/* ==========================================================================
	Media Queries
   ========================================================================== */

@media screen and (min-width 42rem)
	#site-title
		width 38%
		max-width 460px
		margin 0
		display inline-block
		position relative
		left 1em
		transition width 0.25s, height 0.25s

	#site-navigation-container
		width 60%
		min-width 445px
		display block
		position absolute
		background transparent
		right 1.5em
		top 1em
		box-shadow none

		#site-navigation
			list-style none
			padding-left 0
			margin 0
			-flexbox()

			.menu-item
				-flexitem()
				font-size 1em
				line-height 1

				.sub-menu
					position absolute
					padding-left 0
					line-height 1.7
					margin-top 0.2em
					z-index 999 !important

					li
						display block
						margin 0

	#hamburger
		display none

	#main
		width initial
		margin 0 auto
		padding 0

		.main-inner
			@extends .limiter
			background white
			padding 3%
			-clearfix()

	#colophon
		.footer-inner
			-clearfix()

		#footer-widget-area
		.site-info
			position relative

		.site-info
			width 20%
			float left

		#footer-widget-area
			float right

			.rhd_social_icons
				left 0

	#primary
		.blog-metabar
			display none

	#comments
		#commentform
			width 75%

			p
				margin-bottom 0.75rem

			input
				&[type="text"]
				&[type="email"]
					width 75%

			#submit
				width auto
				padding-left 0.8em

	.entry-content
		img
		iframe
			-unwrapper(initial)
			max-width 100%

		img
			&.alignleft
				margin-right 1em
				float left

			&.alignright
				margin-left 1em
				float right

			&.aligncenter
			&.alignnone //failsafe
				margin 0 auto

		a
			img
				@extends .entry-content img

	/* ==========================================================================
		Front Page
	   ========================================================================== */

	#front-page-slider
		display block
		background white

		.soliloquy-container
			padding-top 1em
			padding-bottom 1em

		.scroll-label
			width 100%
			text-align center
			-ff-headline()
			position relative
			font-size 200%
			margin-bottom 0.5em

			.vee
				width 0.9rem
				height auto
				display inline-block
				margin 0 0.75em
				position relative
				bottom 0.05em


	#header-message-container
		width 100%
		height 70vh

		.header-message
			width 100%
			height @height
			-clearfix()

			.header-message-photo
			.header-message-content
				width 50%
				height 100%
				position relative

			.header-message-photo
				float left
				overflow hidden
				display block
				background-size cover
				background-position center center

			.header-message-content
				float right

				.message-inner
					max-height 460px
					-vcenter()

					.message
						font-size 3.2vw
						line-height 1.2

					.message-buttons
						width 80%

						.ghost-button
							font-size 1.9vw


	#front-page-recent-posts
		.front-page-posts
			-flexbox()

			article
				width 32%
				-flexitem()
				vertical-align top
				margin-top 0


	/* ==========================================================================
		Flipping Page
	   ========================================================================== */

	#post-12063
		.gallery
			.gallery-item
				$op1 = 0.95
				$op2 = 0.7
				$op3 = 0.3

				.gallery-caption
					height 20%
					font-size 3vw
					background alpha($c_sec, $op1)
					padding 0.9vw 0 0 0

					.link-overlay
						display none

					.rhd-caption-wrapper
						.ghost-button-container
							transition opacity 0.15s
							font-size 2.1vw
							display block

							.ghost-button
								background alpha($c_sec, $op1)
								color white
								border-color white

				&:hover
				&:active
					.gallery-caption
						height 100%
						background alpha($c_sec, $op2)
						color white

						.rhd-caption-wrapper
							-vhcenter(absolute)

						.ghost-button-container
							.ghost-button
								&:hover
								&:active
									background white
									color $c_ter


	/* ==========================================================================
		Image Feature Page Template
	   ========================================================================== */

	.page-template-template-image-feature
		#main
			-unwrapper(100%)

			.main-inner
				-unwrapper(100%)
				padding 0

		#primary
			width 57%
			padding-right 5%

			.page-title
				padding-top 0.9em

		#secondary
			width 40%
			margin-top 0


@media screen and (min-width 50rem)
	#site-navigation-container
		#site-navigation
			.menu-item
				font-size 1.2em


@media screen and (min-width 60rem)
	/* ==========================================================================
		Blog Pages
	   ========================================================================== */

	.blog-area
		.blog-container
			padding-bottom 4em

			.rhd-post-gutter
				width 2%

			article
				position relative

				&.rhd-excerpt-post
					width 49%
					margin 0

			.pagination-load-more
				bottom -(@padding-bottom / 2)
				-hcenter(absolute)


@media screen and (min-width 62rem)
	#header-message-container
		.header-message
			.header-message-content
				.message-inner
					.message
						font-size 2.7vw


/* ==========================================================================
	Responsive Layout
   ========================================================================== */

@media screen and (min-width 42rem)
	#main
		-clearfix()

	#primary
		width 49%
		float right

		&.full-width
			width 100%
			float none

	#secondary
		width 320px
		float left

		.widget
			width 100%


@media screen and (min-width 50rem)
	#primary
		width 53%

	// Services
	.page-id-12061
		#main
			max-width none
			margin 0

			.main-inner
				max-width none

	#page-services-sections
		.section
			-clearfix()

			> div
				width 50%

			.section-left
				float left

			.section-right
				float right

			.section-image
				display block

		.sep
			height 10vh
			background $c_sec


@media screen and (min-width 58rem)
	#primary
		width 60%


@media screen and (min-width 62rem)
	#primary
		width 66%


@media screen and (min-width 80rem)
	#post-12063
		.gallery
			.gallery-item
				.gallery-caption
					font-size 35px // faux max-font-size
					padding-top 0.875rem