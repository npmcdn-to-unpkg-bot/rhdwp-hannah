opacity( $n )
	-moz-opacity $n
	-webkit-opacity $n
	opacity $n


border-radius( $n )
	-webkit-border-radius $n
	-moz-border-radius $n
	border-radius $n

transform( $n )
	-webkit-transform $n
	-ms-transform $n
	transform $n
