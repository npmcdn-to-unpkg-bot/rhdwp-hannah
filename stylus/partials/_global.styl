/* ==========================================================================
	Global Variables
   ========================================================================== */

$color1 = #4D4845
$color2 = #AAAAAA

$off-white = #D8D1C9

$ff-body = 'Open Sans', sans-serif
$ff-title = 'Oswald', sans-serif


/* ==========================================================================
	Global Classes
   ========================================================================== */

// Ghost Buttons
.ghost-button
	width auto
	max-width 100%
	text-align center
	margin 1em auto

	a
		padding 0.4em .8em
		color $color2
		text-decoration none
		background-color white
		border 3px solid @color
		border-radius 0.1em
		display inline-block
		transition all 0.2s

		&:hover
		&:active
			background-color @color
			color @background-color


/* ==========================================================================
	Functions
   ========================================================================== */

-unselectable()
	-webkit-user-select: none; /* Chrome/Safari */
	-moz-user-select: none; /* Firefox */
	-ms-user-select: none; /* IE10+ */
	-o-user-select: none;
	user-select: none;


-invisible()
	visibility hidden
	position absolute


-flexbox()
	text-align justify

	&:after
		width 100%
		display inline-block
		content ''

-flexitem()
	display inline-block


-wrapper( $topMargin = false, $bottomMargin = false, $customWidth = false, $customMax = false )
	if $customWidth != false
		$w = $customWidth
	else
		$w = 85%

	if $customMax != false
		$mw = $customMax
	else
		$mw = 64rem

	if $topMargin == false
		$topMargin = 0

	if $bottomMargin == false
		$bottomMargin = 0

	width $w
	max-width $mw
	position relative
	margin $topMargin auto $bottomMargin auto


-unwrapper( $w = false )
	if $w != false
		width $w
	else
		width 100%

	max-width none
	margin initial


-delist()
	padding-left 0
	list-style none


-clearfix()
	@extends .clearfix


-body-shadow( $yPos )
	box-shadow 0em $yPos 0.45em 0em rgba(0,0,0,0.5)


-opacity( $n )
	-moz-opacity $n
	-webkit-opacity $n
	opacity $n


-transform( $n )
	-webkit-transform $n
	transform $n


-placeholder-props( $famVal, $color = null, $opacity = null )
	&::-webkit-input-placeholder
		font-family $famVal

		if $color != null
			color $color

		if $opacity != null
			-opacity( $opacity )

	&:-moz-placeholder /* Firefox 18- */
		font-family $famVal
		color $color
		if $opacity != null
			-opacity( $opacity )

	&::-moz-placeholder  /* Firefox 19+ */
		font-family $famVal
		color $color
		if $opacity != null
			-opacity( $opacity )

	&:-ms-input-placeholder
		font-family $famVal
		color $color
		if $opacity != null
			opacity( $opacity )


