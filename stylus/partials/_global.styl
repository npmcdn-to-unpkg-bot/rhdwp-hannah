/* ==========================================================================
	Global Variables
   ========================================================================== */

// Variables
$c_text = #000
$c_sec = #fff
$c_ter = #000

$c_text_lt = lighten($c_text, 35%)
$c_sec_lt = lighten($c_sec, 35%)
$c_ter_lt = lighten($c_ter, 35%)
$off_white = darken(white, 4%)
$near_white = darken(white, 2%)
$c_off_white_trans = transparentify( $off_white, 0.35 )

$c_bg = white
$c_header = $c_bg

$ff_body = 'Avenir Next', sans-serif
$ff_headline = 'Times New Roman', serif

$navHt = 5em
$navHtDesk = 7em
$sidebarW = 20rem
$bigBlockMargin = 3rem

$responsiveSize = 40rem

$updir = '../../../uploads'

-ff-title()
	font-family $ff_headline
	font-weight 700

-ff-headline()
	-ff-title()


/* ==========================================================================
	Functions
   ========================================================================== */

-unselectable()
	-webkit-user-select: none; /* Chrome/Safari */
	-moz-user-select: none; /* Firefox */
	-ms-user-select: none; /* IE10+ */
	-o-user-select: none;
	user-select: none;


-invisible( active = true, pos = initial )
	if active == true
		visibility hidden
		position absolute
	else
		visibility visible
		position pos


-flexbox()
	text-align justify

	&:after
		width 100%
		display inline-block
		content ''

-flexitem()
	display inline-block


-wrapper( $topMargin = 0, $bottomMargin = 0, $customWidth = 85%, $customMax = 80rem )
	width $customWidth
	max-width $customMax
	position relative
	margin $topMargin auto $bottomMargin auto


-unwrapper( $w = 100% )
	width $w
	max-width none
	margin initial


-delist()
	padding-left 0
	list-style none


-clearfix()
	@extends .clearfix


-body-shadow( $yPos )
	box-shadow 0em $yPos 0.45em 0em rgba(0,0,0,0.5)


-opacity( $n )
	-webkit-opacity $n
	-moz-opacity $n
	opacity $n


-transform( $n )
	-webkit-transform $n
	-moz-transform $n
	-ms-transform $n
	-o-transform $n
	transform $n


-vcenter( $pos = absolute, $offset = 0 )
	position $pos
	top 50% + $offset
	-transform(translateY(-50%))


-hcenter( $pos = absolute, $offset = 0 )
	position $pos
	right 50% + $offset
	-transform(translateX(50%))


-vhcenter( $pos = absolute, $hoffset = 0, $voffset = 0 )
	position $pos
	top 50% + $voffset
	right 50% + $hoffset
	-transform(translate(50%, -50%))


-placeholder-props( $famVal, $color = $c_text, $opacity = 1, $weight = normal, $text_transform = normal )
	&::-webkit-input-placeholder
		font-family $famVal
		color $color
		-opacity( $opacity )
		font-weight $weight
		text-transform $text_transform

	&:-moz-placeholder /* Firefox 18- */
		font-family $famVal
		color $color
		-opacity( $opacity )
		font-weight $weight
		text-transform $text_transform

	&::-moz-placeholder  /* Firefox 19+ */
		font-family $famVal
		color $color
		-opacity( $opacity )
		font-weight $weight
		text-transform $text_transform

	&:-ms-input-placeholder
		font-family $famVal
		color $color
		opacity( $opacity )
		font-weight $weight
		text-transform $text_transform


-soliloquy( $maxHt = 500px, $id = null )
	if $id == null
		$elem = '.soliloquy-outer-container'
	else
		$base = "#soliloquy-container-"
		$elem = $base + $id

	{$elem}
		.soliloquy-slider
			img
				width auto
				max-height $maxHt


-scrollax-img()
	width auto
	height auto
	max-width none
	min-width 100%
	min-height 100%
	-vhcenter()
	display block