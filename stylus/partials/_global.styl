/* ==========================================================================
	Global Stylus Variables
   ========================================================================== */

// Variables
$body = #3a3a3a
$lt-blue = #5591d4
$dk-blue = #33537f

$mast-ht = 129px


// Classes

.unselectable
	-webkit-user-select: none; /* Chrome/Safari */
	-moz-user-select: none; /* Firefox */
	-ms-user-select: none; /* IE10+ */
	-o-user-select: none;
	user-select: none;


.invisible
	visibility hidden
	position absolute


// Functions

flexbox()
	text-align justify

	&:after
		width 100%
		display inline-block
		content ''

flexitem()
	display inline-block


wrapper( $topMargin = false, $bottomMargin = false, $customWidth = false )
	if $customWidth == false
		$w = 85%
	else
		$w = $customWidth

	if $topMargin == false
		$topMargin = 0
	if $bottomMargin == false
		$bottomMargin = 0

	width $w
	max-width 64em
	position relative
	margin $topMargin auto $bottomMargin auto


unwrapper()
	width 100%
	max-width none
	margin initial


clearfix()
	@extends .clearfix


body-shadow( $yPos )
	box-shadow 0em $yPos 0.45em 0em rgba(0,0,0,0.5)


placeholder-props( $famVal, $color)
	&::-webkit-input-placeholder
		font-family $famVal
		color $color
	&:-moz-placeholder /* Firefox 18- */
		font-family $famVal
		color $color
	&::-moz-placeholder  /* Firefox 19+ */
		font-family $famVal
		color $color
	&:-ms-input-placeholder
		font-family $famVal
		color $color


/* flexbox( $mode = space-between )
	-ms-box-orient: horizontal;
	display: -webkit-box;
	display: -moz-box;
	display: -ms-flexbox;
	display: -moz-flex;
	display: -webkit-flex;
	display: flex;
	-webkit-justify-content: $mode
	justify-content: $mode
*/


-opacity( $n )
	-moz-opacity $n
	-webkit-opacity $n
	opacity $n


-border-radius( $n )
	-webkit-border-radius $n
	-moz-border-radius $n
	border-radius $n


-transform( $n )
	-webkit-transform $n
	transform $n


-transition($n)
	-webkit-transition $n
	-moz-transition $n
	transition $n
	

/* ==========================================================================
	Ghost Buttons
   ========================================================================== */

.ghost-button
	width auto
	max-width 100%
	text-align center
	margin 1em auto

	a
		padding 0.4em .8em
		text-decoration none !important
		background-color $lt-blue
		border 3px solid $lt-blue
		border-radius 0.1em
		display inline-block
		transition all 0.2s

		&:link
		&:visited
			color white

		&:hover
		&:active
			background-color $dk-blue
			border-color $dk-blue