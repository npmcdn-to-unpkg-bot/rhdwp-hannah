/* ==========================================================================
	Global Stylus Variables
   ========================================================================== */

// Variables
$navy = #1e2171
$sky = #60adf7
$powder = #a2deff
$mag = #da0962
$pink = #ed61af
$cream = #fff3e2
$off-white = #E6E6E6

$4a = #4a4a4a

$sky_half = rgba(80,144,204,0.35)
$mag_half = rgba(218,9,98,0.35)
$navy_half = rgba(30,33,113,0.35)

$sky_trans = rgba(80,144,204,0.15)
$mag_trans = rgba(218,9,98,0.15)
$navy_trans = rgba(30,33,113,0.15)

$ff-body = 'Open Sans', sans-serif
$ff-headline = 'Cheddar Jack', cursive

// Functions

-unselectable()
	-webkit-user-select: none; /* Chrome/Safari */
	-moz-user-select: none; /* Firefox */
	-ms-user-select: none; /* IE10+ */
	-o-user-select: none;
	user-select: none;


-invisible( $invis = true )
	if $invis == true
		visibility hidden
		position absolute
	else
		visibility visible
		position inherit


-flexbox()
	text-align justify

	&:after
		width 100%
		display inline-block
		content ''

-flexitem()
	display inline-block


-wrapper( $topMargin = 0, $bottomMargin = 0, $width = 85%, $maxWidth = 75rem )
	if $topMargin == false
		$topMargin = 0
	if $bottomMargin == false
		$bottomMargin = 0

	width $width
	max-width $maxWidth
	position relative
	margin $topMargin auto $bottomMargin auto


-unwrapper( $w = false )
	if $w != false
		width $w
	else
		width 100%
	max-width 100%
	margin initial


-delist()
	padding-left 0
	list-style none


-clearfix()
	@extends .clearfix


-body-shadow( $yPos )
	box-shadow 0em $yPos 0.45em 0em rgba(0,0,0,0.5)


-opacity( $n )
	-moz-opacity $n
	-webkit-opacity $n
	opacity $n


-transform( $n )
	-webkit-transform $n
	transform $n


-placeholder-props( $famVal, $color = null, $opacity = null, $size = 1em )
	&::-webkit-input-placeholder
		font-family $famVal
		font-size $size

		if $color != null
			color $color

		if $opacity != null
			-opacity( $opacity )

	&:-moz-placeholder /* Firefox 18- */
		font-family $famVal
		font-size $size
		color $color
		if $opacity != null
			-opacity( $opacity )

	&::-moz-placeholder  /* Firefox 19+ */
		font-family $famVal
		font-size $size
		color $color
		if $opacity != null
			-opacity( $opacity )

	&:-ms-input-placeholder
		font-family $famVal
		font-size $size
		color $color
		if $opacity != null
			opacity( $opacity )


-ff-headline()
	font-family $ff-headline
	font-weight 300 !important