/* ==========================================================================
	Global Variables
   ========================================================================== */

// Variables
$c_text = #2b2b2b
$c_sec = #d7ede5
$c_ter = #f2b485

$c_text_lt = #7b7b7b
$off_white = #dddddd

$ff_body = 'Roboto Condensed', sans-serif
$ff_cursive = 'Allessa Script', cursive

$border_w = 6px

$updir = '../../upload/'

-ff-title()
	font-family $ff_body
	font-weight 700

-ff-subtitle()
	font-family $ff_body
	font-weight 400

-ff-headline()
	font-family $ff_cursive
	font-weight normal

-copperborder()
	background-image url(img/copper.jpg)
	background-repeat no-repeat
	background-size 100% 100%
	margin-top $border_w // offset

	.border-inner
		position relative
		bottom $border_w


/* ==========================================================================
	Functions
   ========================================================================== */

-unselectable()
	-webkit-user-select: none; /* Chrome/Safari */
	-moz-user-select: none; /* Firefox */
	-ms-user-select: none; /* IE10+ */
	-o-user-select: none;
	user-select: none;


-invisible()
	visibility hidden
	position absolute


-flexbox()
	text-align justify

	&:after
		width 100%
		display inline-block
		content ''

-flexitem()
	display inline-block


-wrapper( $topMargin = 0, $bottomMargin = 0, $customWidth = 85%, $customMax = 75rem )
	width $customWidth
	max-width $customMax
	position relative
	margin $topMargin auto $bottomMargin auto


-unwrapper( $w = 100% )
	width $w
	max-width none
	margin initial


-delist()
	padding-left 0
	list-style none


-clearfix()
	@extends .clearfix


-body-shadow( $yPos )
	box-shadow 0em $yPos 0.45em 0em rgba(0,0,0,0.5)


-opacity( $n )
	-moz-opacity $n
	-webkit-opacity $n
	opacity $n


-transform( $n )
	-webkit-transform $n
	transform $n


-vcenter( $offset = 0 )
	position absolute unless @position
	top 50% + $offset
	-transform(translateY(-50%))


-hcenter( $offset = 0 )
	position absolute unless @position
	left 50% + $offset
	-transform(translateX(-50%))


-vhcenter( $hoffset = 0, $voffset = 0 )
	position absolute unless @position
	top 50% + $hoffset
	left 50% + $voffset
	-transform(translate(-50%, -50%))


-placeholder-props( $famVal, $color = null, $opacity = null )
	&::-webkit-input-placeholder
		font-family $famVal

		if $color != null
			color $color

		if $opacity != null
			-opacity( $opacity )

	&:-moz-placeholder /* Firefox 18- */
		font-family $famVal
		color $color
		if $opacity != null
			-opacity( $opacity )

	&::-moz-placeholder  /* Firefox 19+ */
		font-family $famVal
		color $color
		if $opacity != null
			-opacity( $opacity )

	&:-ms-input-placeholder
		font-family $famVal
		color $color
		if $opacity != null
			opacity( $opacity )


-soliloquy( $maxHt = 500px, $id = null )
	if $id == null
		$elem = '.soliloquy-outer-container'
	else
		$base = "#soliloquy-container-"
		$elem = $base + $id

	{$elem}
		.soliloquy-slider
			img
				width auto
				max-height $maxHt
