/* ==========================================================================
	Global Stylus Variables
   ========================================================================== */

// Variables
$color1 = black
$color2 = #004B94

$off-white = #d0d0d0

$ff-body = 'Lato', sans-serif

$ts-default = 12vw
$ts-midsize = 4.7vw
$ts-desktop = 3.4em

// Functions

-unselectable()
	-webkit-user-select: none; /* Chrome/Safari */
	-moz-user-select: none; /* Firefox */
	-ms-user-select: none; /* IE10+ */
	-o-user-select: none;
	user-select: none;


-invisible()
	visibility hidden
	position absolute


-flexbox()
	text-align justify

	&:after
		width 100%
		display inline-block
		content ''

-flexitem()
	display inline-block


-wrapper( $topMargin = false, $bottomMargin = false, $customWidth = false, $customMax = false )
	if $customWidth != false
		$w = $customWidth
	else
		$w = 85%

	if $customMax != false
		$mw = $customMax
	else
		$mw = 75rem

	if $topMargin == false
		$topMargin = 0

	if $bottomMargin == false
		$bottomMargin = 0

	width $w
	max-width $mw
	position relative
	margin $topMargin auto $bottomMargin auto


-unwrapper( $w = false )
	if $w != false
		width $w
	else
		width 100%

	max-width none
	margin initial


-delist()
	padding-left 0
	list-style none


-clearfix()
	@extends .clearfix


-body-shadow( $yPos )
	box-shadow 0em $yPos 0.45em 0em rgba(0,0,0,0.5)


-opacity( $n )
	-moz-opacity $n
	-webkit-opacity $n
	opacity $n


-transform( $n )
	-webkit-transform $n
	transform $n


-placeholder-props( $famVal, $color = null, $opacity = null )
	&::-webkit-input-placeholder
		font-family $famVal

		if $color != null
			color $color

		if $opacity != null
			-opacity( $opacity )

	&:-moz-placeholder /* Firefox 18- */
		font-family $famVal
		color $color
		if $opacity != null
			-opacity( $opacity )

	&::-moz-placeholder  /* Firefox 19+ */
		font-family $famVal
		color $color
		if $opacity != null
			-opacity( $opacity )

	&:-ms-input-placeholder
		font-family $famVal
		color $color
		if $opacity != null
			opacity( $opacity )


