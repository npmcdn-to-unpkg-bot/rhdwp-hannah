/* ==========================================================================
	Store Locations Widget
   ========================================================================== */

.widget_rhd_store_locations_widget
	.widget-title
		margin 0

	.store-locations-list
		padding-left 0
		list-style none
		text-align center

		.store-location
			margin-bottom 1em

			&:last-of-type
				margin-bottom 0

			.store-name
				margin 0
				font-size 1.2em
				font-weight 800

			.store-info
				p
					margin 0


/* ==========================================================================
	Store Image Widget
   ========================================================================== */

.rhd-store-image-widget
	.rhd-store-image
		img
			-wrapper(0, 0, 75%)
			display block
			border 2px solid $navy

	.rhd-store-image-caption
		font-size 1.1em
		font-weight 700
		text-align center
		margin 0.5em 0


/* ==========================================================================
	RHD Big Buttons
   ========================================================================== */

.big-button
	position relative

	.big-button-link
		display block
		z-index 1
		color $navy

		&:hover
			text-decoration none

			.big-button-label
				color $sky
				text-decoration none

		.big-button-image
		.big-button-svg
			width 100%
			height auto

		.big-button-svg
			pointer-events none

		.svg-fallback
			display none


.big-button-label
	font-size 1.4em
	font-weight 800
	text-align center
	margin-top 0.25em
	transition color 0.25s