/* ==========================================================================
	Ghost Buttons
   ========================================================================== */

.ghost-button
	width auto
	max-width 100%
	text-align center
	margin 1em auto

	a
		padding 0.4em .8em
		color $sky
		text-decoration none
		background-color white
		border 3px solid @color
		border-radius 0.1em
		display inline-block
		transition all 0.2s
		font-weight 700
		letter-spacing 1px
		text-transform uppercase

		&:hover
		&:active
			background-color $sky
			color white
			text-decoration none