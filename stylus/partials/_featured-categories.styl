.featured-cats
	padding-left 0
	list-style none

	.featured-cat
		position relative

		.featured-cat-thumbnail
			width 100%
			position relative
			margin 1em 0

			img
				width 100%
				height auto

			.overlay
				width 100%
				height 100%
				position absolute
				top 0
				left 0
				background-color white
				-moz-opacity 0.5
				-webkit-opacity 0.5
				opacity 0.5
				transition all 0.25s ease

			&:hover .featured-cat-thumbnail .overlay,
			&:active .featured-cat-thumbnail .overlay
				-moz-opacity 0.35
				-webkit-opacity 0.35
				opacity 0.35

		.featured-cat-title
			position absolute
			top 50%
			-webkit-transform translateY(-50%)
			transform translateY(-50%)
			font-family 'Tuesday Script', cursive
			font-weight normal
			width 100%
			left 0
			margin 0
			line-height 1
			color black
			font-size 16vw
			text-align center


@media screen and ( min-width 40rem )
	.featured-cats
		.featured-cat
			.featured-cat-thumbnail
				.overlay
					height 100%
					position absolute
					top 0
					left 0
					-moz-opacity 0.75
					-webkit-opacity 0.75
					opacity 0.75

			.featured-cat-title
				font-size 4vw

