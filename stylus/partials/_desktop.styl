@media screen and (min-width 40rem)
	.mobile-only
		display none

	#navbar
		height auto

		.navbar-inner
			-wrapper(0, 0, 90%)
			height auto

			.nav-dropdown
				position relative
				top 0
				display block
				background transparent
				-clearfix()

		.navbar-search
			&.is-active
				width 36.5%
				right 0

			.search-form
				.search-submit
					right -2.1em

					&.is-active
						right 0

	#site-navigation-container
		width 45%
		display block
		background transparent
		position relative
		box-shadow none
		float left
		padding-bottom 0
		top 0.15em

		#site-navigation
			line-height 0
			-flexbox()
			margin 0
			position relative

			.menu-item
				line-height 2
				-flexitem()
				font-size 1rem

	#hamburger
		display none

	.post-grid
		.post-grid-item
			width 23%

	#comments
		#commentform
			width 75%

			p
				margin-bottom 0.75rem

			input
				&[type="text"]
				&[type="email"]
					width 75%

			#submit
				width auto
				padding-left 0.8em

	// Image Strip
	#primary
		-clearfix()

		article
			&.strip-active
				width 65%
				float right

		#image-strip
			width 30%
			float left
			margin-right 5%

			img
				width 100%
				height auto
				margin-bottom 2em
				display block

	.entry-content
		img
		iframe
			-unwrapper(auto)

		img
			&.alignleft
				margin-right 1em
				float left

			&.alignright
				margin-left 1em
				float right

			&.aligncenter
				margin 0 auto

		a
			img
				@extends .entry-content img


// Fixed-width 320px sidebar
@media screen and (min-width 40em)
	#main
		-clearfix()

	#primary
		float left

	#secondary
		width 320px
		float left

		.widget
			width 100%
			padding 0 10px


@media screen and (min-width 58em)
	#primary
		width 56%


@media screen and (min-width 62em)
	#primary
		width 58%


@media screen and (min-width 64em)
	#primary
		width 60%


@media screen and (min-width 66em)
	#primary
		width 64%
