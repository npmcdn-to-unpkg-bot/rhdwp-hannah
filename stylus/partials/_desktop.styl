@media screen and (min-width 40rem)
	.mobile-only
		display none

	#navbar
		height auto

		.site-title-link
			img
				width 17%
				height auto
				min-width 9.25rem
				margin 0.5em 0
				position relative
				float left
				-transform(none)

	#masthead
		-wrapper(0, 0, 96%)
		height auto
		-clearfix()
		position relative

		.nav-dropdown
			width 74%
			height @height
			-vcenter()
			right 0
			left initial
			display block
			background transparent

	#site-navigation-container
		width 100%
		display block
		background transparent
		box-shadow none
		padding 0

		#site-navigation
			line-height 0
			-flexbox()
			margin 0
			position relative
			top 0.2em

			.menu-item
				line-height 2
				-flexitem()
				font-size 1.3em

				a
					color $c_sec

					&:hover
					&:active
						color $c_sec_lt

				&.current_page_item
				&.current_page_parent
					a
						color $c_ter

	#hamburger
		display none

	#main
		-clearfix()
		margin-top 5rem

	#primary
		width 100%
		float left
		margin-right -($sidebarW)

		&.full-width
			float none
			margin-right 0

			#content
				margin-right 0

	#content
		margin-right ($sidebarW + 2rem) // fluid #primary with added margin

	#secondary
		width $sidebarW
		float right

		.widget
			width 100%
			padding 1em

	#comments
		#commentform
			width 75%

			p
				margin-bottom 0.75rem

			input
				&[type="text"]
				&[type="email"]
					width 75%

			#submit
				width auto
				padding-left 0.8em

	.entry-content
		iframe
			max-width 100%
			margin 0 auto
			display block

		img
			-unwrapper(auto)

			&.alignleft
				margin-right 1em
				float left

			&.alignright
				margin-left 1em
				float right

			&.aligncenter
				margin 0 auto

		a
			img
				@extends .entry-content img

	// Full Width Page Template
	.page-template-template-full-width
		#main
			margin-top 0

		.rhd-full-width-thumbnail-wrapper
			&.fixed-bg
				height 100vh
				top 0
				overflow hidden

				.rhd-full-width-thumbnail
					width 100%
					height 100%
					position absolute
					display block

					img
						-scrollax-img()

			&.default-thumb
				margin-top 0

				.rhd-full-width-thumbnail
					padding 4em 0

	// CTA Buttons

	.rhd-cta-buttons
		.cta-buttons
			.cta-button-item
				-clearfix()

				.cta-button-link
					width 40%
					min-width 13.5rem
					vertical-align middle
					padding-right 2em
					float left
					display inline-block

				.cta-text-desc
					width 56%
					text-align left
					float right

			.cta-break
				width 100%
				height 0.25em
				margin 0.5em 0
				background $c_quat
				border none

	#colophon
		height 20em
		padding-bottom 0

		.footer-inner
			-wrapper(0, 0, 96%)
			height 100%

			& > div
				width 30% !important
				-vcenter()

			.site-info
				left 0

			.social
				-vhcenter( absolute, 0, -2 )
				padding-top 0

				.widget-rhd-social-icons
					padding-bottom 0

			.newsletter
				right 0