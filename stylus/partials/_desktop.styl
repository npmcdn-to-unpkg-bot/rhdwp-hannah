@media screen and (min-width $responsiveSize)
	.mobile-only
		display none

	#navbar
		height $navHtDesk

		.navbar-logo
			left 0
			right initial

		.navbar-contact
			width 30rem
			-vcenter()
			right 0
			display block
			text-align right
			font-size 0.8em

		.navbar-inner
			-wrapper(0, 0, 90%, none)
			height @height

			.nav-dropdown
				position relative
				top 0
				display block
				background transparent
				-clearfix()

		.navbar-search
			&.is-active
				width 36.5%
				right 0

			.search-form
				.search-submit
					right -2.1em

					&.is-active
						right 0


	#site-navigation-container
		width 45%
		display block
		background transparent
		position relative
		box-shadow none
		float left
		padding-bottom 0
		top 0.15em

		#site-navigation
			line-height 0
			-flexbox()
			margin 0
			position relative

			.menu-item
				line-height 2
				-flexitem()
				font-size 1rem

	#hamburger
		display none

	#main
		-clearfix()

	#primary
		width 100%
		float left
		margin-right -($sidebarW)

		&.full-width
			float none
			margin-right 0

			#content
				margin-right 0

	#content
		margin-right ($sidebarW + 2rem) // fluid #primary with added margin

	#secondary
		width $sidebarW
		float right

	#comments
		#commentform
			width 75%

			p
				margin-bottom 0.75rem

			input
				&[type="text"]
				&[type="email"]
					width 75%

			#submit
				width auto
				padding-left 0.8em

	.entry-content
		iframe
			max-width 100%
			margin 0 auto
			display block

		img
			-unwrapper(auto)

			&.alignleft
				margin-right 1em
				float left

			&.alignright
				margin-left 1em
				float right

			&.aligncenter
				margin 0 auto

		a
			img
				@extends .entry-content img

		p
			-clearfix() // Image floaters

	#colophon
		.widget-area
			width 100%
			-clearfix()

		.footer-widgets-left
		.footer-widgets-right
			width 40%
			position relative

		.footer-widgets-left
			float left

			.widget-title
				text-align left

			input
				&[type="submit"]
					float left

		.footer-widgets-right
			float right

			.widget-title
				text-align right


	// Overrides
	.rhd-page-overlay-cta-container
		.rhd-page-overlay-cta
			.rhd-page-overlay-cta-inner
				width 85%
				top initial
				bottom 8%

				.page-overlay-headline
					display inline-block;
					width 40%
					float left

				.ghost-button-container
					float right
					font-size 1.8em