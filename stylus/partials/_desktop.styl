@media screen and (min-width 35em)
	.post-grid
		-flexbox()

		.post-grid-item
			width 47%
			-flexitem()

	.front-page
		#primary
			#image-strip
				width 30%
				float right
				margin-right 0

			article.strip-active
				width 66%
				float left

	#highlights
		-flexbox()

		.highlight-link
			width 30%
			height auto
			margin 0
			-flexitem()

	.highlight-link
		&:hover
			img
				-opacity(1)

			figcaption
				background-color rgba(0, 71, 137,0.85)

	#secondary
		.highlight-link
			width 100%
			margin 0

	#post-6
	#post-306
		.entry-content
			-clearfix()

			p
				&:first-child
					margin 0

			img
				width 30%
				margin 0 3em 0 0
				float left

			.about-section
				overflow hidden

				p
				h2
					margin-top 0

	// Events Calendar
	.single-tribe_events
		.tribe-events-schedule
			.tribe-events-divider
				display none

	.tribe-events-list
		.tribe-events-loop
			.tribe-events-list-separator-month
				margin 1rem 0

				+ .type-tribe_events.tribe-events-first
					padding-top 0

			h2.tribe-events-list-event-title
			.tribe-events-event-meta
				text-align center
				display block

				.recurringinfo
					bottom 3px

			.tribe-events-event-cost
				display none

			.tribe-events-event-image
				width auto

				img
					margin 0

	.tribe-events-schedule
		margin-top 0


@media screen and (min-width 50em)
	#masthead
		height 213px

		#masthead-content
			height 100%
			border-top none

			#site-title
				display inline-block
				margin-top 2rem
				margin-bottom 0

			.site-description
				font-size 1.4em
				margin 0em auto 1em auto
				text-align center

		#site-logo
			width 297px
			border-right 3px solid $navy
			float left
			background white

	#site-navigation-container
		display block
		position relative
		top 0.8em

		#site-navigation
			text-align center

			.menu-item
				font-size 1em
				line-height 1.4
				margin 0 0.5em

	#hamburger
		display none

	#main
	#primary
		-clearfix()

	#primary
		&.full-width
			width 100% !important
			float none !important

	#primary
		article
			&.strip-active
				width 65%
				float right

		#image-strip
			width 30%
			float left
			margin-right 5%

			img
				width 100%
				height auto
				margin-bottom 2em
				display block
				border 3px solid $navy

				&.no-border
					border none
					border-radius 0

	#colophon
		#footer-widget-area
			width 37%

			#footer-widget-area-left
				padding-left 1em

			.textwidget
				text-align left

			.rhd_social_icons
				text-align left

		#footer-hheart-logo
			width 300px
			height 97%
			position absolute
			right 0.25rem
			top 0.25rem

			img
				width 85%
				height auto

	.blog-area
		#main
			-clearfix()

	.blog-area
		#primary
			width 66%
			float right

		#secondary
			width 28%
			float left

	#comments
		#commentform
			width 75%

			p
				margin-bottom 0.75rem

			input
			textarea
				background-color $off_white
				font-size 0.8em
				border none
				box-sizing border-box
				padding 0.5em
				display block

			input
				&[type="text"]
				&[type="email"]
					width 75%

			#submit
				width auto
				padding-left 0.8em


@media screen and (min-width 56em)
	.post-grid
		.post-grid-item
			width 28%