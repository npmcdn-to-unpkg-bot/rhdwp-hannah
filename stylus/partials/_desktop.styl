@media screen and (min-width 43em)
	.mobile-only
		display none

	#navbar
		height auto
		background-color $c_bg
		transition 0.5s background-color ease

		&.search-is-active
			background-color lighten($c_text, 50%)

		.navbar-inner
			-wrapper(0, 0, 90%)
			height auto

			.nav-dropdown
				position relative
				top 0
				display block
				background transparent
				border-bottom none
				-clearfix()

		.navbar-search
			width 100%
			height 80%
			-vcenter()
			right 1%
			margin 0

			input
				height 100%

			.search-form
				.search-field
					width 0
					-vhcenter()

					&.is-active
						width 45%

				.search-submit
					right 0
					-vcenter()
					background-size 64% auto

					&.is-active
						right 28%

			.close-search
				right 26%
				font-size 1.3em


	#site-navigation-container
		-wrapper(0.25rem, 0.25rem, 90%)
		display block
		background transparent
		box-shadow none
		padding-bottom 0
		top 0.15em

		#site-navigation
			line-height 0
			-flexbox()
			margin 0
			position relative

			.menu-item
				line-height 2
				-flexitem()
				font-size 0.9rem

	#hamburger
		display none

	#comments
		#commentform
			width 75%

			p
				margin-bottom 0.75rem

			input
				&[type="text"]
				&[type="email"]
					width 75%

			#submit
				width auto

	.entry-content
		margin initial

		img
			&.alignleft
				margin-right 1em
				float left

			&.alignright
				margin-left 1em
				float right

			&.aligncenter
				margin 0 auto

		a
			img
				@extends .entry-content img

	.post-grid
		-flexbox()

		& > article
			width 48.5%
			-flexitem()
			margin 1em 0
	
	
	.archive-grid
		& > article
			width 23%
	
	
	#instagram
		-clearfix()
		
		.soliloquy-outer-container
			float left
		
		.chicken
			display block
			
			img
				width 25%
				height auto
				position absolute
				right 0
				bottom -1em
	
	/* ==========================================================================
		Front Page
	   ========================================================================== */
	
	#features
		display block

// Fixed-width 320px sidebar
@media screen and (min-width 40em)
	#main
		-clearfix()

	#primary
	#secondary
		margin-top 1em

	#primary
		float left
		
		&.full-width
			width 100% !important
			float none

	#secondary
		width 320px
		float right
		margin-top 1em

		.widget
			width 100%
			padding 0 10px


@media screen and (min-width 58em)
	#primary
		width 56%


@media screen and (min-width 62em)
	#primary
		width 58%


@media screen and (min-width 64em)
	#primary
		width 60%


@media screen and (min-width 66em)
	#primary
		width 64%
