@media screen and (min-width 40em)
	#masthead
		height 6em
		transition all 0.25s
		z-index 9999

		#site-title
			width 23%
			height auto
			margin 0
			position absolute
			top 50%
			left 2%
			-transform(translateY(-50%))

	#site-navigation-container
		width 72%
		display block
		margin-top 0
		transition all 0.25s
		position absolute
		right 2%
		top 63%
		-transform(translateY(-50%))

		.menu-item
			font-size 0.8em

	#hamburger
		display none

	#main
		-wrapper(0, 0, 100%, 80rem)

		&.rhd-color-block-area

		#main-inner
			-clearfix()
			padding 2em 0

	#posts-feed
		&.small-thumbnails
			.post
				-clearfix()

				&.has-post-thumbnail
					.post-content
						width 63%
						float right

					.post-thumbnail
						width 32%
						max-width 300px
						float left
						border none
						margin-bottom 0

	//#posts-feed
	.post
		border 2px solid $navy
		border-radius 2px

		.entry-header
			background $sky_trans
			padding 1em
			margin 0

			.entry-title
				margin 0 0 0.25rem

				a
					color $navy
					transition color 0.25s

					&:hover
					&:active
						color $sky
						text-decoration none

	.entry-content
		img
		iframe
			-unwrapper(initial)

		img
			&.mobile-hide
				-invisible(false)

			&.alignleft
				margin-right 1em
				float left

			&.alignright
				margin-left 1em
				float right

			&.aligncenter
				margin 0 auto

		a
			img
				@extends .entry-content img

		.gallery-item
			img
				display block
				margin 0 auto

	.entry-meta
		.entry-meta-links
			background-color $sky_trans

			.comments-popup
				width 100%

			.post-meta
				margin 0
				padding 0
				position relative
				-clearfix()
				display table
				background-color $sky_trans

				.post-meta-item
					width 50%
					height 100%
					display table-cell
					padding 1em 0
					vertical-align top
					text-align center
					transition all 0.5s ease

					&:hover
						background-color $sky_half

					a
						color inherit
						transition color 0.5s ease

					.post-meta-item-title
						font-weight 700
						font-size 1.1em

	#colophon
		#footer-widget-area
			width 37%

			#footer-widget-area-left
				padding-left 1em

			.textwidget
				text-align left

			.rhd_social_icons
				text-align left

		#footer-hheart-logo
			width 300px
			height 97%
			position absolute
			right 0.25rem
			top 0.25rem

			img
				max-width 95%
				height auto

	#comments
		#commentform
			width 75%

			p
				margin-bottom 0.75rem

			input
				&[type="text"]
				&[type="email"]
					width 75%

			#submit
				width auto
				padding-left 0.8em

	// Color Block areas
	.rhd-color-block-content
		-clearfix()
		position relative


	// Front + About
	.front-page
	.page-id-25
		.intro-text
			width 60%
			float left

		.intro-image
			width 30%
			position absolute
			right 0
			top 50%
			-transform(translateY(-50%))

			img
				-wrapper(0, 0, 100%, 300px)

	// Front Page
	.front-page
		#rhd-color-block-intro
			padding 3em 0

	// About
	.page-id-25
		#rhd-color-block-intro
			padding 3em 0


		#rhd-color-block-trust
			position relative

			.rhd-color-block-content
				-clearfix()

				.we-are
					width 40%
					position absolute
					top 50%
					left 25%
					-transform(translate(-50%, -50%))

				.trust-spell
					width 59%
					font-size 1em
					float right

					ul
						li
							&::first-letter
								padding-right 0

	// Staff Page
	.page-id-85
		.gallery
			.gallery-item
				max-width 25%

	// Donation Forms
	#donation-form
		ul
			.donation-selector
				width 19%

			.donation-selector-other
				display inline-block

	// Contact
	.page-id-31
		.contact-info
			width 45%
			float left

		.contact-form
			width 45%
			float right

	// Events Calendar
	.tribe-events-back
		text-align left
		position absolute
		left 0


@media screen and (min-width 60em)
	#masthead
		height 8em

		#site-title
			width 20%
			left 4%

	#site-navigation-container
		width 60%
		right 4%
		top 62%

		.menu-item
			font-size 0.9em


// Fixed-width 340px sidebar
@media screen and (min-width 40em)
	#main
	#donation-form-area
		-clearfix()

	#primary
		float left

		&.full-width
			width 100%
			float none

	#secondary
		width 340px
		float right

		.widget
			width 300px
			margin-left auto
			margin-right auto


@media screen and (min-width 50em)
	#donation-form-aside
		width 40%
		float left

	#donation-form-container
		width 58%
		float right
		margin-top 0

	#donation-form
		#donation-custom-amount-container
			#donation-custom-amount
				width 94%

	#donation-allocations-table
		.donation-allocation-amount
			font-size 2em


@media screen and (min-width 58em)
	#primary
		width 56%

	#donation-allocations-table
		.donation-allocation-amount
			font-size 2.5em


@media screen and (min-width 62em)
	#primary
		width 58%


@media screen and (min-width 64em)
	#primary
		width 60%


@media screen and (min-width 66em)
	#primary
		width 63%


@media screen and (max-width 34em)
	#colophon
		#footer-hheart-logo
			height 13em