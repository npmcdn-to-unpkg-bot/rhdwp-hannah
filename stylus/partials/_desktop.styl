@media screen and (min-width 40em)
	.mobile-only
		display none

	#navbar
		height auto

		.navbar-inner
			-wrapper(0, 0, 90%)
			height auto

			.nav-dropdown
				position relative
				top 0
				display block
				background transparent
				-clearfix()

	#site-navigation-container
		width 45%
		display block
		background transparent
		position relative
		box-shadow none
		float left
		padding-bottom 0
		position relative
		top 0.15em

		#site-navigation
			line-height 0
			-flexbox()
			margin 0
			position relative

			.menu-item
				line-height 2
				-flexitem()
				font-size 1rem

	#hamburger
		display none

	#header-search
		&.is-active
			width 36.5%
			right 0

		.search-form
			.search-submit
				right -2.1em

				&.is-active
					right 0

	#comments
		#commentform
			width 75%

			p
				margin-bottom 0.75rem

			input
				&[type="text"]
				&[type="email"]
					width 75%

			#submit
				width auto
				padding-left 0.8em

	// Front Page
	.front-page
		#content
			> section
				-wrapper(2em, 2em, 100%, 70rem)

	#front-page-featured-posts
		.soliloquy-container
			.soliloquy-caption
				width 33%

				.soliloquy-caption-inside
					.soliloquy-fc-title
						a
							font-size 1.7em

					.soliloquy-fc-content
						.rhd-fc-date
							margin-top 0.5em
							font-size 1.1em

						.rhd-fc-more
							margin-top 1em
							font-size 2em

	#front-page-intro
		-clearfix()

		.intro-content-container
			width 53%
			float left

		.intro-thumbnail
			width 45%
			float right
			position relative

			.rhd-picture-frame
				width 105%
				margin 0 auto

		.intro-hi
			text-align left

	#front-page-categories
		width 90% !important

		.featured-cats
			-flexbox()

			.featured-cat
				width 31%
				-flexitem()

				.featured-cat-thumbnail
					margin 0

					.overlay
						-opacity(0.75)
						transition all 0.25s ease

				&:hover
				&:active
					.featured-cat-thumbnail
						.overlay
							-opacity(0.45)


	// Recent Posts
	.rhd-recent-posts
		-flexbox()

		.recent-post
			width 31%
			-flexitem()
			vertical-align top

	// Image Strip
	#primary
		-clearfix()

		article
			&.strip-active
				width 65%
				float right

		#image-strip
			width 30%
			float left
			margin-right 5%

			img
				width 100%
				height auto
				margin-bottom 2em
				display block

	.entry-content
		img
		iframe
			-unwrapper()
			max-width 100%

		img
			margin 0 auto

			&.alignleft
				margin-right 1em
				float left

			&.alignright
				margin-left 1em
				float right

		a
			img
				@extends .entry-content img

	#header-widget-area
		width 16em
		height 90%
		right 1.5em
		-vcenter()
		display block
		z-index 800

		.widget_rhd_social_icons
		.rhd-social-icons
			height 100%

			.rhd-social-icon
				width 1.3em
				height @height
				margin 0 0.15em
				position relative
				bottom 0.025em // pixel push

				.rhd-icon
					-vcenter()

	#footer-widget-area
		.rhd-social-icons
			.rhd-social-icon
				width 5%

	.rhd-mailchimp-container
		input
			margin 0 0.5%

		.rhd-mc-fname
		.rhd-mc-email
			width 37%
			display inline-block

		.rhd-mc-submit
			width 16%
			min-width 82px
			display inline-block


// Fixed-width 320px sidebar
@media screen and (min-width 40em)
	#main
		-clearfix()

	#primary
		float left

		&.full-width
			width 100%
			float none

	#secondary
		width 320px
		float right

		.widget
			width 100%
			padding 0 10px


@media screen and (min-width 58em)
	#primary
		width 56%


@media screen and (min-width 62em)
	#primary
		width 58%


@media screen and (min-width 64em)
	#primary
		width 60%


@media screen and (min-width 66em)
	#primary
		width 64%
