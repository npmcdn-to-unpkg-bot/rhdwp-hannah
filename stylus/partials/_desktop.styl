@media screen and (min-width 40rem)
	#navbar
		height auto
		-clearfix()

		.navbar-inner
			-wrapper(0, 0, 90%)
			height auto

			.nav-dropdown
				position relative
				top 0
				display block
				background transparent
				-clearfix()
				box-shadow none

		.navbar-search
			width 20em
			height 90%
			-vcenter()
			right 0
			margin 0

			.search-form
				.search-field
					width 0
					font-size 1em
					-vhcenter()

					&.is-active
						width 100%

				.search-submit
					width 34px
					right 0
					-vcenter(absolute, -1%)

					.search-submit-icon
						width 63%

					&.is-active
						right 0

			.close-search
				right -6%
				font-size 1.1em

	#header-social
		width auto
		-vcenter()
		right 1.9em
		z-index 800
		margin-top 0

		.widget-rhd-social-icons-header
			position relative
			top 0.55em

			.rhd-social-icons
				line-height 1

				.rhd-social-icon
					height 20px
					line-height 1
					margin 0

	#logo-simple
		left 0

	#site-title
		display none

	#site-navigation-container
		width 51%
		display block
		background transparent
		position relative
		box-shadow none
		float left
		top 0.15em
		left 7em
		margin 0.5em 0

		#site-navigation
			line-height 0
			-flexbox()
			margin 0
			position relative

			.menu-item
				line-height 2
				-flexitem()
				font-size 0.875rem

	#hamburger
		display none

	#main
		-clearfix()
		margin-top $navHtDesk
		padding-top 2em

	#primary
		width 100%
		float right
		margin-left -($sidebarW)

		&.full-width
			float none
			margin-left 0

			#content
				margin-left 0

	#secondary
		width $sidebarW
		float left

		.widget
			width 100%
			padding $boxpadDesk

		.widget_rhd_mailchimp_widget
			display block

			.rhd-mailchimp
				padding ($boxpad/3)
				font-size 0.9em

				.rhd-mc-text
					line-height 1.2

				.rhd-mc-email
				.rhd-mc-submit
					font-size 0.9em
					display block

				.rhd-mc-email
					-wrapper(0, 0, 75%)

				.rhd-mc-submit
					-wrapper(0.5em, 0.5em, 50%)

	#content
		margin-left ($sidebarW + 2rem) // fluid sidebar

		article
			padding $boxpadDesk

	.page-header
		margin-bottom 2rem

		&.reveal-posts-header
			margin-bottom 1em

	.post-grid
		.post-grid-item
		.post-grid-sizer
			width 32%

		&.across-2
			.post-grid-item
			.post-grid-sizer
				width 49%


	#footer-widget-area
		.soliloquy
			width 61%
			float left

			.soliloquy-outer-container
				.soliloquy-wrapper
					margin-left 0 !important

		.widget_sp_image
			width auto
			position absolute
			right 0
			bottom 0
			margin-top 0
			overflow hidden

			img
				width auto
				height 100%
				display block

	// Front Page
	#featured-content
		.featured-content-wrapper
			-clearfix()

		.featured-content-slider
		.featured-links
			position relative

		.featured-content-slider
			width 66.6666667%
			height auto
			display block
			float left

			.logo-overlay
				width 32.3333334%
				height auto
				position absolute
				top 2rem
				left 2rem
				z-index 300

				img
					width 100%
					height auto

		.featured-links
			width 33.3333334%
			float right

		.widget_sp_image
			img
				margin 0
				display block

	#comments
		#commentform
			width 75%

			p
				margin-bottom 0.75rem

			input
				&[type="text"]
				&[type="email"]
					width 75%

			#submit
				width auto
				padding-left 0.8em
				border-width 2px
				-ghost-button()

	.entry-content
		img
		iframe
			max-width 100%

		iframe
			margin 0 auto
			display block

		img
			width auto

			&.alignleft
				margin-right 1em
				float left

			&.alignright
				margin-left 1em
				float right

			&.aligncenter
				margin 0 auto

		a
			img
				@extends .entry-content img

	#colophon
		.footer-signup
			.rhd-mailchimp-container
				height 3em

				.rhd-mailchimp
					height 100%

				.rhd-mc-text
				.rhd-mc-email
				.rhd-mc-submit
					-vcenter()
					display block
					margin 0
					font-size 1em

				.rhd-mc-text
					left 0

					&:after
						content '\00a0\2192' // ' &rarr;'

				.rhd-mc-email
					width 16em
					right 9em
					margin-right 1em

					&:focus
						border-color $c_ter

				.rhd-mc-submit
					right 0
					padding-top 0.4em
					padding-bottom 0.4em