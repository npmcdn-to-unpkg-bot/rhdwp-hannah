@media screen and (min-width 40rem)
	#navbar
		height auto
		-clearfix()

		.navbar-inner
			-wrapper(0, 0, 90%)
			height auto

			.nav-dropdown
				position relative
				top 0
				display block
				background transparent
				-clearfix()
				box-shadow none

		.navbar-search
			width 16em
			height 90%
			-vcenter()
			right 0
			margin 0

			.search-form
				.search-field
					width 0
					font-size 1em
					-vhcenter()

					&.is-active
						width 100%

				.search-submit
					width 34px
					right 0
					-vcenter(absolute, -2%)
					background-size 64% auto
					transition 0.25s all

					&.is-active
						right 0

			.close-search
				right -6%
				font-size 1.1em

	#header-social
		width auto
		-vcenter()
		right 2em
		z-index 800
		margin-top 0

		.widget-rhd-social-icons-header
			position relative
			top 0.55em

			.rhd-social-icons
				line-height 1

				.rhd-social-icon
					height 20px
					line-height 1
					margin 0

	#logo-simple
		left 0

	#site-title
		display none

	#site-navigation-container
		width 51%
		display block
		background transparent
		position relative
		box-shadow none
		float left
		top 0.15em
		left 7em
		margin 0.5em 0

		#site-navigation
			line-height 0
			-flexbox()
			margin 0
			position relative

			.menu-item
				line-height 2
				-flexitem()
				font-size 0.875rem

	#hamburger
		display none

	#main
		-clearfix()
		margin-top $navHtDesk
		padding-top 1em

	#comments
		#commentform
			width 75%

			p
				margin-bottom 0.75rem

			input
				&[type="text"]
				&[type="email"]
					width 75%

			#submit
				width auto
				padding-left 0.8em

	// Image Strip
	#primary
		-clearfix()

		article
			&.strip-active
				width 65%
				float right

		#image-strip
			width 30%
			float left
			margin-right 5%

			img
				width 100%
				height auto
				margin-bottom 2em
				display block

	.entry-content
		img
		iframe
			width auto
			margin 0
			max-width 100%

		img
			&.alignleft
				margin-right 1em
				float left

			&.alignright
				margin-left 1em
				float right

			&.aligncenter
				margin 0 auto

		a
			img
				@extends .entry-content img


// Fixed-width 320px sidebar
@media screen and (min-width 40em)
	#primary
		float left

	#secondary
		width 320px
		float right

		.widget
			width 100%


@media screen and (min-width 58em)
	#primary
		width 56%


@media screen and (min-width 62em)
	#primary
		width 58%


@media screen and (min-width 64em)
	#primary
		width 60%


@media screen and (min-width 66em)
	#primary
		width 69%