/* ==========================================================================
	Testimonial Shortcode
   ========================================================================== */

.rhd-testimonial
	-wrapper(1em, 1em, 100%)

	.testimonial-thumb
		width 100%
		height auto
		margin-bottom 0

	.testimonial-content
		.quote
			color $c_text_lt
			border-left none
			margin 0.5rem auto 0.5rem 0
			line-height 1.3
			font-size 1.5em

		.attribution
			text-align right
			margin-top 0


@media screen and (min-width $responsiveSize)
	.rhd-testimonial
		display table

		.testimonial-thumb
		.testimonial-content
			display table-cell
			vertical-align middle

		.testimonial-thumb
			width auto
			height auto
			max-width 300px

		.testimonial-content
			padding-left 5%

			.quote
				margin 0
				padding-top 0.5em
				padding-bottom 5em
				font-sisze 1.8em

			.attribution
				margin-top -5rem